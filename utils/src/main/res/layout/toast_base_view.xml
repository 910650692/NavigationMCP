<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/toast_liner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_120"
        android:gravity="center"
        android:background="@drawable/toast_bg_base"
        android:paddingHorizontal="@dimen/dp_80"
        android:paddingVertical="@dimen/dp_36"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_47"
            android:maxLines="1"
            android:textColor="@color/toast_text"
            android:textSize="@dimen/sp_36"
            tools:text="登录高德账号才能使用手车互联服务登录高德账号才能使用手车互联服务" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <service
            android:name=".MCPCoordinatorService"
            android:enabled="true"
            android:exported="true">
            
            <!-- 支持传统AIDL接口 -->
            <intent-filter>
                <action android:name="com.sgm.navi.mcp.coordinator.MCP_SERVICE"/>
            </intent-filter>
            
            <!-- 支持新SDK接口 -->
            <intent-filter>
                <action android:name="com.sgm.mcp.MCP_SERVICE"/>
            </intent-filter>
            
            <!-- 支持新SDK期望的包名服务 -->
            <intent-filter>
                <action android:name="com.sgm.mcpservice.MCP_SERVICE"/>
            </intent-filter>
        </service>
    </application>

</manifest>
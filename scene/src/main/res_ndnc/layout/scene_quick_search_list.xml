<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="QuickSearchView"
            type="com.sgm.navi.scene.api.search.ISceneQuickSearchView" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="@dimen/dp_613"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/search_text_bar_view"
            layout="@layout/search_edit_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_163" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_613"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_m_43"
            android:background="@drawable/bg_shadow_navi_ndlc_8155"
            android:padding="@dimen/dp_34">

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/sk_rcv_quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:paddingHorizontal="@dimen/dp_6"
            android:paddingVertical="@dimen/dp_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/sk_rcv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:visibility="gone"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHeight_max="@dimen/scene_sug_recycler_search_result_max_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/recycler_no_hint"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_412"
            android:gravity="center"
            android:text="@string/shv_record_null"
            android:textColor="@color/search_color_ffffff_70"
            android:textSize="@dimen/sp_26"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinLinearLayout>
</layout>
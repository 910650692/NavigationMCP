<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.RouteResultAdapter.Holder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/item_root_view"
        android:layout_width="@dimen/dp_553"
        android:layout_height="@dimen/dp_124"
        android:background="@color/bg_route_item_select"
        android:paddingStart="@dimen/dp_26"
        android:paddingEnd="@dimen/dp_26">

        <com.sgm.navi.ui.view.SkinView
            android:id="@+id/item_root_view_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_item_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/text_color_route_item_select"
            android:textSize="@dimen/sp_29"
            app:layout_constraintStart_toEndOf="@+id/route_item_num"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="xx小时xx分钟" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_6"
            android:background="@drawable/bg_route_details_defult_label"
            android:ellipsize="end"
            android:maxEms="4"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_22"
            app:layout_goneMarginEnd="@dimen/dp_0"
            app:layout_constraintEnd_toStartOf="@+id/route_item_reverse_tag"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="少收费" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_item_reverse_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_route_details_defult_label"
            android:ellipsize="end"
            android:maxEms="4"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="多收费" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_21"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_114"
            android:maxLines="1"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/route_item_time"
            tools:text="xx公里" />

        <LinearLayout
            android:id="@+id/route_item_param_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/route_item_distance"
            app:layout_constraintEnd_toStartOf="@+id/route_item_param_two"
            app:layout_constraintStart_toEndOf="@+id/route_item_distance"
            app:layout_constraintTop_toTopOf="@+id/route_item_distance">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_item_traffic_light"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_31"
                android:src="@drawable/img_route_money" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_item_traffic_light_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_route_item_no_select"
                android:textSize="@dimen/sp_26"
                tools:text="88" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/route_item_param_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/route_item_distance"
            app:layout_constraintEnd_toStartOf="@+id/route_item_param_three"
            app:layout_constraintStart_toEndOf="@+id/route_item_param_one"
            app:layout_constraintTop_toTopOf="@+id/route_item_distance">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_item_traffic_price"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_31"
                android:src="@drawable/img_route_lingt" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color_route_item_no_select"
                android:textSize="@dimen/sp_26"
                tools:text="3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/route_item_param_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/route_item_distance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/route_item_distance">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_item_electricity_img"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_31"
                android:src="@drawable/img_route_electricity" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_item_electricity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp_160"
                android:maxLines="1"
                android:textColor="@color/text_color_route_item_no_select"
                android:textSize="@dimen/sp_26"
                tools:text="60%到达" />

        </LinearLayout>

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
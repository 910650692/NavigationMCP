<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="naviViaList"
            type="com.sgm.navi.scene.api.navi.ISceneNaviViaList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_add_via"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:maxHeight="@dimen/dp_1010">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/sll_add_via"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/srv_add_via"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_max="@dimen/dp_744"
                app:layout_constraintTop_toTopOf="parent" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.scene.ui.navi.view.ButtonLinearLayout
            android:id="@+id/sll_add_via"
            clickCommand="@{naviViaList.skipAlongWayFragment}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_route_start_navigation_button"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/siv_add_via"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:background="@drawable/img_add_58_sw1225" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/stv_add_via"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:gravity="center"
                android:text="@string/navi_add_via"
                android:textColor="@color/text_route_button_title"
                android:textSize="@dimen/sp_34" />
        </com.sgm.navi.scene.ui.navi.view.ButtonLinearLayout>

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>






<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="ViewImpl"
            type="com.sgm.navi.scene.impl.poi.ScenePoiChargingStationReservationListViewImpl" />
        <variable
            name="EventHandle"
            type="com.sgm.navi.scene.ui.poi.ScenePoiChargingStationReservationListView.MyEventHandle" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_640"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_navi_ndlc_8155"
        android:padding="@dimen/dp_34"
        android:maxHeight="@dimen/dp_714">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="@dimen/dp_40" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/end_guideline"
            app:layout_constraintStart_toStartOf="@+id/start_guideline"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_type_text"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_46"
                android:gravity="center"
                android:text="@string/search_charge"
                android:textColor="@color/navi_color_2461EA_100"
                android:textSize="@dimen/sp_22"
                android:background="@color/bg_route_detail_color"
                app:layout_constraintBottom_toBottomOf="@+id/sk_poi_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sk_poi_name" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/sk_poi_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_40"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/poi_details_bottom_ff_00"
                android:textSize="@dimen/sp_32"
                app:layout_constraintEnd_toStartOf="@+id/poi_type_icon"
                app:layout_constraintStart_toEndOf="@+id/poi_type_text"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{ViewImpl.mPoiInfo.getName}"
                tools:text="东方明珠东方明珠东方明珠东方明珠东方明珠东方明珠" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/poi_type_icon"
                clickCommand="@{ViewImpl.closeFragment}"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/icon_poi_details_close"
                app:layout_constraintBottom_toBottomOf="@+id/sk_poi_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/sk_poi_name" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_fast_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_52"
                android:layout_marginTop="@dimen/dp_26"
                android:textSize="@dimen/sp_26"
                clickCommand="@{() -> EventHandle.filterEquipment(1)}"
                android:background="@{ViewImpl.searchType == 1 ? @drawable/bg_info_select : @drawable/bg_info_normal}"
                android:gravity="center"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:textColor="@color/text_route_defult"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/poi_type_icon"
                android:text="@{@string/charge_title_fast + ViewImpl.mChargeInfo.getPoiFastInfo}"
                android:visibility="@{0 == ViewImpl.mChargeInfo.getFast_total ? View.GONE : View.VISIBLE}"
                tools:text="快2/6" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_slow_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_26"
                android:textSize="@dimen/sp_26"
                clickCommand="@{() -> EventHandle.filterEquipment(0)}"
                android:background="@{ViewImpl.searchType == 0 ? @drawable/bg_info_select : @drawable/bg_info_normal}"
                android:gravity="center"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:textColor="@color/text_route_defult"
                android:text="@{@string/charge_title_slow + ViewImpl.mChargeInfo.getPoiSlowInfo}"
                app:layout_constraintStart_toEndOf="@+id/poi_fast_info"
                app:layout_constraintTop_toBottomOf="@+id/poi_type_icon"
                android:visibility="@{0 == ViewImpl.mChargeInfo.getSlow_total ? View.GONE : View.VISIBLE}"
                tools:text="慢2/6" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_reservation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_26"
                android:textSize="@dimen/sp_26"
                clickCommand="@{() -> EventHandle.filterEquipment(2)}"
                android:background="@{ViewImpl.searchType == 2 ? @drawable/bg_info_select : @drawable/bg_info_normal}"
                android:gravity="center"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:text="@string/only_check_reservation"
                android:textColor="@color/text_route_defult"
                app:layout_constraintStart_toEndOf="@+id/poi_slow_info"
                app:layout_constraintTop_toBottomOf="@+id/poi_type_icon"
                android:visibility="@{ViewImpl.isHideCanReversion() ? View.INVISIBLE : View.VISIBLE}"
                tools:text="@string/only_check_reservation" />

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/poi_charge_station_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_428"
                android:maxHeight="@dimen/dp_568"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/poi_reservation"/>
        </com.sgm.navi.ui.view.SkinConstraintLayout>


    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
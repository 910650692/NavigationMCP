<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Scene"
            type="com.sgm.navi.scene.api.route.ISceneRouteDetailsResultList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/ly_descendants_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_20"
        tools:visibility="visible">

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_descendants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_multiple_destinations"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_29"
            android:paddingHorizontal="@dimen/dp_34"
            app:layout_constraintBottom_toTopOf="@+id/route_descendants_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/route_descendants_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="visible"
            android:paddingHorizontal="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/rv_secondary_poi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/route_descendants_text"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintWidth_max="@dimen/dp_778"
            app:layout_goneMarginTop="@dimen/dp_0"
            tools:background="#FF0000"
            tools:layout_height="49dp"
            tools:visibility="gone" />

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/rv_secondary_poi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingHorizontal="@dimen/dp_27"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/route_descendants_list"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintWidth_max="@dimen/dp_778"
            app:layout_goneMarginTop="@dimen/dp_26"
            tools:background="#00FF00"
            tools:layout_height="65dp" />


    </com.sgm.navi.ui.view.SkinConstraintLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="model"
            type="com.sgm.navi.service.define.route.RouteLineInfo" />

        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.RouteDetailsResultsChildAdapter.Holder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/item_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_83"
        android:paddingEnd="@dimen/dp_50">

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/route_detail_info_item_child_img"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:src="@drawable/img_tbt_exit_hud_sou2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_detail_info_item_child_description"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_28"
            android:layout_marginStart="@dimen/dp_15"
            android:lines="2"
            android:gravity="center|left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/route_detail_info_item_child_img"
            tools:text="42米 后进入北苑中街" />


    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
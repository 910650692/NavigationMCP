<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ISceneSugSearchPoiList"
            type="com.sgm.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/scl_search_top_view"
            layout="@layout/search_edit_bar_view"
            android:layout_width="@dimen/dp_613"
            android:layout_height="@dimen/dp_163" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_613"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_m_43"
            android:background="@drawable/bg_shadow_navi_ndlc_8155"
            android:paddingHorizontal="@dimen/dp_34"
            android:paddingVertical="@dimen/dp_54">

            <com.sgm.navi.ui.view.SkinView
                android:id="@+id/il_sug_loading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_607"
                android:visibility="gone" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_sug_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/icon_limit_loading"
                app:layout_constraintBottom_toBottomOf="@+id/il_sug_loading"
                app:layout_constraintEnd_toEndOf="@+id/il_sug_loading"
                app:layout_constraintStart_toStartOf="@+id/il_sug_loading"
                app:layout_constraintTop_toTopOf="@+id/il_sug_loading" />

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/recycler_search_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="@dimen/scene_sug_recycler_search_result_max_height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/recycler_search_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="@dimen/scene_sug_recycler_search_result_max_height"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="1dp" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/recycler_no_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_412"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_40"
                android:text="@string/shv_record_null"
                android:textColor="@color/search_color_ffffff_70"
                android:textSize="@dimen/sp_26"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>
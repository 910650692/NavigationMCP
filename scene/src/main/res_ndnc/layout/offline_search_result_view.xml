<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ISceneSugSearchPoiList"
            type="com.sgm.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/offline_search_top_view"
            layout="@layout/search_edit_bar_view"
            android:layout_width="@dimen/dp_613"
            android:layout_height="@dimen/dp_163" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_613"
            android:layout_height="@dimen/dp_610"
            android:layout_marginTop="@dimen/dp_m_43"
            android:padding="@dimen/dp_34"
            android:background="@drawable/bg_shadow_navi_ndlc_8155">

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/offline_recycler_search_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginBottom="@dimen/dp_34"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/offline_recycler_search_keyword_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginEnd="@dimen/dp_40"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/search_no_result_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_26"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/search_no_city_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_154"
                android:layout_marginEnd="@dimen/dp_154"
                android:gravity="center"
                android:maxWidth="@dimen/dp_237"
                android:text="@string/search_offline_no_city_hint"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_26"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>
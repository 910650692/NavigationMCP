<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="naviLastMile"
            type="com.sgm.navi.scene.api.navi.ISceneNaviLastMile" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_navi_ndlc_8155"
        android:paddingHorizontal="@dimen/dp_34"
        android:paddingVertical="@dimen/dp_34">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_140"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <com.sgm.navi.scene.ui.navi.view.ButtonText
                android:id="@+id/stv_send_phone"
                clickCommand="@{naviLastMile.onSend}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:padding="@dimen/dp_34"
                android:text="@string/navi_send"
                android:textColor="@color/navi_color_2461EA_100"
                android:textSize="@dimen/sp_38"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinView
                android:id="@+id/sv_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_75"
                android:layout_centerVertical="true"
                android:background="@color/navi_color_4B535D_70"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/stv_send_phone"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.scene.ui.navi.view.ButtonImageView
                android:id="@+id/siv_close"
                clickCommand="@{naviLastMile.onClose}"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_31"
                android:layout_marginEnd="@dimen/dp_31"
                android:background="@drawable/img_off58"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stv_send_request_info"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/stv_send_request_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_19"
                android:singleLine="true"
                android:text="@string/navi_send_request_info"
                android:textColor="@color/navi_color_000000_100"
                android:textSize="@dimen/sp_34"
                app:layout_constraintStart_toEndOf="@id/sv_line"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/stv_way_arrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_19"
                android:text="@string/navi_arrive_destination"
                android:textColor="@color/navi_color_000000_70"
                android:textSize="@dimen/sp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/stv_send_request_info" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
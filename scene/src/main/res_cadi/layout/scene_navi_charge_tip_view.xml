<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="tipImpl"
            type="com.sgm.navi.scene.impl.navi.SceneNaviChargeTipViewImpl" />

    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_root"
        android:layout_width="@dimen/dp_922"
        android:layout_height="@dimen/dp_270"
        android:padding="@dimen/dp_51"
        android:focusable="false"
        android:background="@drawable/bg_shadow_navi_cadillac"
        >

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_30"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_46"
            app:layout_constraintEnd_toStartOf="@id/tv_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_desc"
            tools:text="xxxxxxxx" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/search_color_ffffff_70"
            android:textSize="@dimen/sp_38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="xxxxxxxx" />

        <com.sgm.navi.ui.view.SkinTextView
            style="@style/style_mfc_config_no_bg"
            android:id="@+id/tv_action"
            android:layout_width="@dimen/dp_192"
            android:layout_height="@dimen/dp_96"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/bg_base_mfc_cadillac_blue_bg_selector"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/dp_40"
            tools:text="去充电" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="IScenePoiList"
            type="com.sgm.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:focusable="false"
        android:layout_height="match_parent">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/layout_route_charge_progress"
            android:layout_width="@dimen/dp_1222"
            android:layout_height="@dimen/dp_254"
            android:layout_marginStart="@dimen/dp_840"
            android:background="@drawable/bg_shadow_navi_cadillac"
            android:clickable="true"
            android:focusable="false"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/route_charge_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dp_1016"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_46"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:max="100"
                android:progressDrawable="@drawable/img_route_charge_progress_bar"
                android:soundEffectsEnabled="false"
                android:splitTrack="false"
                android:thumb="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_charge_start"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_24"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/img_route_logo_2d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/route_charge_progress_icons"
                android:layout_width="@dimen/dp_1016"
                android:layout_height="match_parent"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="@+id/route_charge_progress"
                app:layout_constraintStart_toStartOf="@+id/route_charge_progress"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_charge_exhaustion_point"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_56"
                android:focusable="false"
                android:src="@drawable/img_route_charge_exhaustion_point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_charge_end"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_32"
                android:focusable="false"
                android:src="@drawable/img_route_charge_end_point"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_charge_total_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_40"
                android:focusable="false"
                android:textColor="@color/text_route_defult"
                android:textSize="@dimen/sp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_charge_end" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/root_view"
            android:layout_width="wrap_content"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/search_text_bar_view"
                layout="@layout/search_text_bar_view" />

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_930"
                android:layout_marginTop="@dimen/dp_m_82"
                android:focusable="false"
                android:background="@drawable/bg_shadow_navi_cadillac">

                <include
                    android:id="@+id/search_filter_view"
                    layout="@layout/search_filter_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:visibility="visible"
                    tools:visibility="gone"/>

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_offline_hint"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_30"
                    android:layout_height="@dimen/dp_110"
                    android:gravity="center_vertical"
                    android:focusable="false"
                    android:background="@drawable/bg_offline"
                    android:layout_marginTop="@dimen/dp_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:text="@string/search_offline_hint"
                    android:textSize="@dimen/sp_34"/>

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/il_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />
                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/iv_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:visibility="gone"
                    android:src="@drawable/icon_limit_loading"
                    app:layout_constraintBottom_toBottomOf="@+id/il_loading"
                    app:layout_constraintEnd_toEndOf="@+id/il_loading"
                    app:layout_constraintStart_toStartOf="@+id/il_loading"
                    app:layout_constraintTop_toTopOf="@+id/il_loading" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_result_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:textColor="@color/search_quick_tab_view_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/search_result_no_data"
                    android:textSize="@dimen/sp_34"/>
<!--                <com.sgm.navi.ui.view.SkinTextView-->
<!--                    android:id="@+id/charge_filter"-->
<!--                    android:layout_width="@dimen/dp_97"-->
<!--                    android:layout_height="@dimen/dp_52"-->
<!--                    android:gravity="center"-->
<!--                    android:textSize="@dimen/sp_30"-->
<!--                    android:layout_marginStart="@dimen/dp_40"-->
<!--                    android:layout_marginTop="@dimen/dp_40"-->
<!--                    android:focusable="false"-->
<!--                    android:visibility="gone"-->
<!--                    android:background="@drawable/custom_filter_item_bg_selector_day"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/search_offline_hint"-->
<!--                    android:text="@string/search_charge_self"/>-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_label_filter"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_32"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/search_offline_hint"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"/>
                <com.sgm.navi.ui.view.PullToRefreshLayout
                    android:id="@+id/pull_refresh_layout"
                    app:layout_constraintTop_toBottomOf="@+id/search_label_filter"
                    app:layout_constraintBottom_toTopOf="@+id/route_charge_list_along_way_sure"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/dp_820"
                    android:focusable="false"
                    android:layout_height="@dimen/dp_0">

                    <com.sgm.navi.ui.view.SkinRecyclerView
                        android:id="@+id/recycler_search_result"
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_height="match_parent" />
                </com.sgm.navi.ui.view.PullToRefreshLayout>

                <com.sgm.navi.ui.view.SkinTextView
                    style="@style/style_mfc_config_no_bg"
                    android:id="@+id/route_charge_list_along_way_sure"
                    android:layout_width="@dimen/dp_342"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/bg_base_mfc_cadillac_blue_bg_selector"
                    android:gravity="center"
                    android:text="@string/dsc_confirm"
                    android:textColor="@color/text_route_button_title"
                    android:textSize="@dimen/sp_42"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.sgm.navi.ui.view.SkinTextView
                    style="@style/style_mfc_config_no_bg"
                    android:id="@+id/route_charge_list_along_way_cancel"
                    android:layout_width="@dimen/dp_342"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/bg_base_mfc_cadillac_gery_bg_selector"
                    android:gravity="center"
                    android:text="@string/dsc_cancel"
                    android:textColor="@color/text_route_defult"
                    android:textSize="@dimen/sp_42"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </com.sgm.navi.ui.view.SkinConstraintLayout>

        </com.sgm.navi.ui.view.SkinLinearLayout>

        <com.sgm.navi.scene.ui.route.SceneRouteGasStationChargeServiceView
            android:id="@+id/route_right_tab_list_charge_scene"
            android:layout_width="@dimen/dp_302"
            android:layout_height="@dimen/dp_702"
            android:layout_marginStart="@dimen/dp_840"
            android:background="@drawable/bg_shadow_navi_cadillac"
            android:padding="@dimen/dp_51"
            android:clickable="true"
            android:focusable="false"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/root_view"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 拦截层 -->
        <View
            android:id="@+id/overlay_interceptor"
            android:layout_width="@dimen/dp_302"
            android:layout_height="@dimen/dp_702"
            android:layout_marginStart="@dimen/dp_840"
            android:background="@android:color/transparent"
            android:padding="@dimen/dp_51"
            android:clickable="true"
            android:focusable="false"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/root_view"
            app:layout_constraintStart_toStartOf="parent" />
    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="naviViaList"
            type="com.sgm.navi.scene.api.navi.ISceneNaviViaList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_add_via"
        android:layout_width="@dimen/dp_820"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:maxHeight="@dimen/dp_1000"
        tools:background="@color/navi_color_FF595F_100"
        tools:layout_height="@dimen/dp_1918"
        tools:layout_width="@dimen/dp_820">

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="false"
            android:maxHeight="@dimen/dp_810"
            android:paddingBottom="@dimen/dp_40">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content">

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/srv_add_via"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_max="@dimen/dp_618"
                    android:overScrollMode="never"/>

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.scene.ui.navi.view.ButtonLinearLayout
                style="@style/style_mfc_config_no_bg"
                android:id="@+id/sll_add_via"
                clickCommand="@{naviViaList.skipAlongWayFragment}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:background="@drawable/bg_navi_btn_add_via_mfc"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:gravity="center"
                android:orientation="horizontal">

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/siv_add_via"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:background="@drawable/img_add_58" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/stv_add_via"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_24"
                    android:gravity="center"
                    android:focusable="false"
                    android:text="@string/navi_add_via"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_46" />
            </com.sgm.navi.scene.ui.navi.view.ButtonLinearLayout>

        </com.sgm.navi.ui.view.SkinLinearLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>






<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.sgm.navi.service.define.route.RouteLineInfo" />

        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.RouteSearchChargeRefreshAdapter.Holder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_820"
        android:layout_height="wrap_content"
        android:focusable="false">
        <com.sgm.navi.ui.view.SkinConstraintLayout
            style="@style/style_mfc_config"
            android:id="@+id/item_root_view_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_26"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_40"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_item_charge_num"
                android:layout_width="@dimen/dp_53"
                android:layout_height="match_parent"
                android:focusable="false"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/text_route_defult"
                android:textSize="@dimen/sp_38"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_item_charge_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_96"
                android:layout_marginTop="@dimen/dp_22"
                android:ellipsize="end"
                android:focusable="false"
                android:maxWidth="@dimen/dp_380"
                android:maxLines="1"
                android:textColor="@color/text_color_route_item_select"
                android:textSize="@dimen/sp_45"
                app:layout_constraintEnd_toStartOf="@+id/route_item_charge_add_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="临港服务区" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_item_charge_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="end"
                android:focusable="false"
                android:maxWidth="@dimen/dp_390"
                android:maxLines="1"
                android:textColor="@color/text_route_defult"
                android:textSize="@dimen/sp_38"
                app:layout_constraintEnd_toEndOf="@+id/route_item_charge_name"
                app:layout_constraintStart_toStartOf="@+id/route_item_charge_name"
                app:layout_constraintTop_toBottomOf="@+id/route_item_charge_name"
                tools:text="198km | 22分钟" />

            <com.sgm.navi.ui.view.SkinConstraintLayout
                style="@style/style_mfc_config"
                android:id="@+id/route_item_charge_add_bg"
                android:layout_width="@dimen/dp_114"
                android:layout_height="@dimen/dp_130"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/route_item_charge_add_img"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:src="@drawable/img_route_search_add"
                    app:layout_constraintEnd_toEndOf="@+id/route_item_charge_add_bg"
                    app:layout_constraintStart_toStartOf="@+id/route_item_charge_add_bg"
                    app:layout_constraintTop_toTopOf="@+id/route_item_charge_add_bg" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/route_item_charge_add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:focusable="false"
                    android:textColor="@color/text_route_defult"
                    android:textSize="@dimen/sp_30"
                    app:layout_constraintEnd_toEndOf="@+id/route_item_charge_add_bg"
                    app:layout_constraintStart_toStartOf="@+id/route_item_charge_add_bg"
                    app:layout_constraintTop_toBottomOf="@+id/route_item_charge_add_img"
                    tools:text="添加" />

            </com.sgm.navi.ui.view.SkinConstraintLayout>



            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/route_item_charge_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_96"
                android:layout_marginTop="@dimen/dp_160"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.sgm.navi.ui.view.SkinLinearLayout
                    android:id="@+id/route_item_charge_fast_root"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_fast_charge"
                    android:focusable="false"
                    android:paddingRight="@dimen/dp_10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_fast_name"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:background="@drawable/bg_fast_charge_item"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="快"
                        android:textColor="@color/route_cricle_dot_gerrn_color"
                        android:textSize="@dimen/sp_36" />

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_fast_num_one"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_14"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="@string/route_invalid"
                        android:textColor="@color/text_color_route_item_select"
                        android:textSize="@dimen/sp_36"
                        app:layout_constraintStart_toEndOf="@+id/route_item_charge_fast_name" />

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_fast_num_two"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_60"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="@string/route_invalid"
                        android:textColor="@color/route_charge_param_total_color"
                        android:textSize="@dimen/sp_36"
                        app:layout_constraintStart_toEndOf="@+id/route_item_charge_fast_num_one" />
                </com.sgm.navi.ui.view.SkinLinearLayout>

                <com.sgm.navi.ui.view.SkinLinearLayout
                    android:id="@+id/route_item_charge_low_root"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_fast_charge"
                    android:focusable="false"
                    android:paddingRight="@dimen/dp_10">

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_low_name"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:background="@drawable/bg_fast_charge_item"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="慢"
                        android:textColor="@color/route_cricle_dot_orange_color"
                        android:textSize="@dimen/sp_36" />

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_low_num_one"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginStart="@dimen/dp_14"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="@string/route_invalid"
                        android:textColor="@color/text_color_route_item_select"
                        android:textSize="@dimen/sp_36"
                        app:layout_constraintStart_toEndOf="@+id/route_item_charge_low_name" />

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_low_num_two"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_60"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="@string/route_invalid"
                        android:textColor="@color/route_charge_param_total_color"
                        android:textSize="@dimen/sp_36"
                        app:layout_constraintStart_toEndOf="@+id/route_item_charge_low_num_one" />
                </com.sgm.navi.ui.view.SkinLinearLayout>

                <com.sgm.navi.ui.view.SkinLinearLayout
                    android:id="@+id/route_item_charge_price_root"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_60"
                    android:focusable="false"
                    app:layout_constraintStart_toEndOf="@+id/route_item_charge_low_root">

                    <com.sgm.navi.ui.view.SkinImageView
                        android:id="@+id/route_item_charge_price_name"
                        android:layout_width="@dimen/dp_54"
                        android:layout_height="@dimen/dp_54"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:focusable="false"
                        android:src="@drawable/img_route_money"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/route_item_charge_price_num"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_60"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="@string/route_invalid"
                        android:textColor="@color/text_route_defult"
                        android:textSize="@dimen/sp_38"
                        app:layout_constraintStart_toEndOf="@+id/route_item_charge_price_name" />

                </com.sgm.navi.ui.view.SkinLinearLayout>

            </com.sgm.navi.ui.view.SkinLinearLayout>

            <include
                android:id="@+id/scene_poi_item_gas_view"
                layout="@layout/scene_poi_item_gas_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_96"
                android:layout_marginTop="@dimen/dp_160"
                android:focusable="false"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
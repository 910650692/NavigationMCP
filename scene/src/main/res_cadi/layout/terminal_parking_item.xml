<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.TerminalParkingResultAdapter.ResultHolder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        style="@style/style_mfc_config"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_196"
        android:background="@drawable/recycler_item_selector">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_96" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/sktv_parking_item_num"
            android:layout_width="@dimen/dp_96"
            android:layout_height="wrap_content"
            android:textColor="@color/search_quick_tab_view_color"
            android:textSize="@dimen/sp_38"
            android:focusable="false"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/sktv_parking_item_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/bg_parking_recommended"
            android:gravity="center"
            android:text="@string/st_parking_item_recommended"
            android:focusable="false"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_7"
            android:textColor="@color/setting_preference_select"
            android:textSize="@dimen/sp_32"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/sktv_parking_name"
            android:layout_width="@dimen/dp_449"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="start"
            android:text="@string/st_parking_item_recommended"
            android:focusable="false"
            android:textColor="@color/poi_details_bottom_ff_00"
            android:textSize="@dimen/sp_46"
            app:layout_constraintStart_toEndOf="@+id/sktv_parking_item_recommended"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="大雨停车场" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/sktv_parking_item_leisure_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_20"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_7"
            android:background="@drawable/bg_parking_recommended"
            android:gravity="center"
            android:focusable="false"
            android:textColor="@color/search_quick_tab_view_color"
            android:textSize="@dimen/sp_32"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/sktv_parking_name"
            tools:text="105/200" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/sktv_parking_item_sufficient_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_goneMarginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/bg_parking_recommended"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_7"
            android:focusable="false"
            android:textColor="@color/setting_preference_select"
            android:textSize="@dimen/sp_32"
            app:layout_constraintStart_toEndOf="@+id/sktv_parking_item_leisure_num"
            app:layout_constraintTop_toBottomOf="@+id/sktv_parking_name"
            tools:text="充足" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/sktv_parking_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_goneMarginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/bg_parking_recommended"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_7"
            android:focusable="false"
            android:textColor="@color/search_loading_bg_80"
            android:textSize="@dimen/sp_32"
            app:layout_constraintStart_toEndOf="@+id/sktv_parking_item_sufficient_num"
            app:layout_constraintTop_toBottomOf="@+id/sktv_parking_name"
            tools:text="当前终点" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            style="@style/style_mfc_config"
            android:id="@+id/poi_to_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_32"
            android:minWidth="@dimen/dp_90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_navi_icon"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:focusable="false"
                android:src="@drawable/img_basic_ic_navi"
                app:layout_constraintEnd_toEndOf="@id/text_navi"
                app:layout_constraintStart_toStartOf="@+id/text_navi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/text_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_go_here"
                android:focusable="false"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_38"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_navi_icon" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Scene"
            type="com.sgm.navi.scene.api.map.ISceneScale" />
    </data>
    <!--MFC-->
    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/screen_scale_add"
            android:layout_width="@dimen/dp_206"
            android:layout_height="@dimen/dp_206"
            android:background="@drawable/bg_shadow_navi_cadillac"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/screen_scale_add_img"
                style="@style/style_mfc_config"
                clickCommand="@{Scene.amplifyLevel}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/img_basic_ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>


        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/screen_scale_reduce"
            android:layout_width="@dimen/dp_206"
            android:layout_height="@dimen/dp_206"
            android:layout_marginTop="@dimen/dp_m_62"
            android:background="@drawable/bg_shadow_navi_cadillac"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="@id/screen_scale_add"
            app:layout_constraintTop_toBottomOf="@id/screen_scale_add">

            <com.sgm.navi.ui.view.SkinImageView
                style="@style/style_mfc_config"
                android:id="@+id/screen_scale_reduce_img"
                clickCommand="@{Scene.reduceLevel}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_basic_ic_reduce"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="false" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/screen_scale_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_m_27"
            android:textSize="@dimen/sp_32"
            android:textColor="@color/common_title_purple_color"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_28"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/screen_scale_reduce"
           app:layout_constraintLeft_toLeftOf="@+id/screen_scale_reduce"
            app:layout_constraintRight_toRightOf="@+id/screen_scale_reduce"
            tools:text="500公里" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/screen_bg_sample_scale"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_12"
            android:scaleType="fitXY"
            android:src="@drawable/bg_sample_scale"
            android:layout_marginTop="@dimen/dp_3"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="@id/screen_scale_size"
            app:layout_constraintStart_toStartOf="@id/screen_scale_size"
            app:layout_constraintTop_toBottomOf="@id/screen_scale_size" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/screen_scale_size_bg"
            android:layout_width="@dimen/dp_135"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/bg_scale_size"
            android:layout_marginEnd="@dimen/dp_2"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dp_8"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="@id/screen_bg_sample_scale"
            app:layout_constraintStart_toStartOf="@id/screen_bg_sample_scale"
            app:layout_constraintTop_toBottomOf="@id/screen_bg_sample_scale" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
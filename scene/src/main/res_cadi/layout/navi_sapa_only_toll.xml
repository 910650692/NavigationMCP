<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="naviSapa"
            type="com.sgm.navi.scene.impl.navi.SceneNaviSapaImpl" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        style="@style/style_mfc_config_no_bg"
        clickCommand="@{()->naviSapa.onClick(1)}"
        android:layout_width="@dimen/dp_820"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/bg_navi_toll_station_first_mfc">

        <com.sgm.navi.ui.view.SkinImageView
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/img_toll_station_42"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_32" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/stv_first_service_toll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="@color/navi_color_FFFFFF_100"
            android:text="@{naviSapa.mOnlyTollName}"
            android:textSize="@dimen/sp_46"
            android:maxLines="1"
            android:maxWidth="@dimen/dp_400"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_96"
            android:layout_marginTop="@dimen/dp_29"
            tools:text="收费站" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/stv_first_service_toll_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="@dimen/sp_38"
            android:text="@{naviSapa.mOnlyTollDistance}"
            android:textColor="@color/navi_color_FFFFFF_80"
            tools:text="28.8公里"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_36" />

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/sll_only_toll_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            app:layout_constraintStart_toEndOf="@+id/stv_first_service_toll_distance"
            app:layout_constraintBottom_toBottomOf="@+id/stv_first_service_toll_distance"
            app:layout_constraintTop_toTopOf="@+id/stv_first_service_toll_distance"
            android:layout_marginStart="@dimen/dp_2">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/siv_first_service_toll_etc"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:focusable="false"
                android:layout_marginEnd="@dimen/dp_2"
                android:visibility="@{naviSapa.mOnlyTollEtcVisible ? View.VISIBLE : View.GONE}"
                android:background="@drawable/img_etc_42" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/siv_first_toll_alipay"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:focusable="false"
                android:visibility="@{naviSapa.mOnlyTollAlipayVisible ? View.VISIBLE : View.GONE}"
                android:layout_marginEnd="@dimen/dp_2"
                android:background="@drawable/img_zf_42" />

        </com.sgm.navi.ui.view.SkinLinearLayout>


        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/siv_only_toll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40"
            android:paddingVertical="@dimen/dp_1"
            android:paddingHorizontal="@dimen/dp_5"
            android:maxLines="1"
            android:maxWidth="@dimen/dp_200"
            android:ellipsize="end"
            android:text="@{naviSapa.mOnlyTollTag}"
            android:textSize="@dimen/sp_32"
            android:textColor="@{naviSapa.mOnlyTollTagTextColor}"
            android:background="@{naviSapa.mOnlyTollTagBgColor}"
            android:gravity="center"
            tools:text="经" />
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
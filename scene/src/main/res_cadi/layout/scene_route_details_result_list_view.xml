<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Scene"
            type="com.sgm.navi.scene.api.route.ISceneRouteDetailsResultList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:paddingRight="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_6">

        <com.sgm.navi.ui.view.SkinView
            android:id="@+id/route_details_list_bg_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_152"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/route_details_list_img_header"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_55"
            android:focusable="false"
            android:src="@drawable/circle_dot_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_header"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_header" />

        <com.sgm.navi.ui.view.SkinTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:focusable="false"
            android:text="@string/route_details_list_header"
            android:textColor="@color/floating_search_item_night"
            android:textSize="@dimen/sp_46"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_header"
            app:layout_constraintStart_toEndOf="@id/route_details_list_img_header"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_header" />

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/route_detail_result_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_534"
            android:divider="@null"
            android:groupIndicator="@null"
            android:focusable="false"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/route_details_list_bg_header" />

        <com.sgm.navi.ui.view.SkinView
            android:id="@+id/route_details_list_bg_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_152"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/route_detail_result_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/route_details_list_img_footer"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_55"
            android:focusable="false"
            android:src="@drawable/circle_dot_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_footer"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_footer" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_details_list_tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_650"
            android:layout_marginStart="@dimen/dp_24"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="1"
            android:textColor="@color/floating_search_item_night"
            android:textSize="@dimen/sp_46"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_footer"
            app:layout_constraintStart_toEndOf="@id/route_details_list_img_footer"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_footer"
            tools:text="终点：上海海事大学上海海事大学上海海事大学" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.sgm.navi.service.define.search.PoiInfoEntity" />

        <variable
            name="poiBean"
            type="com.sgm.navi.service.define.search.PoiInfoEntity" />

        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.SearchResultAdapter.ResultHolder" />

        <variable
            name="layoutPosition"
            type="String" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        style="@style/style_mfc_config"
        android:id="@+id/crl_poi_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_158">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/crl_poi_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/dp_30"
                android:focusable="false"
                android:text="@{layoutPosition}"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_38"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/crl_poi_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/crl_poi_item"
                tools:text="1"
                tools:visibility="visible" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/poi_icon"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:focusable="false"
                android:gravity="center"
                android:minWidth="@dimen/dp_30"
                android:src="@drawable/img_basic_ic_orientation"
                app:layout_constraintBottom_toBottomOf="@+id/crl_poi_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/crl_poi_item"
                tools:visibility="gone" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/crl_poi_des"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_124"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_25"
            android:focusable="false"
            app:layout_constraintBottom_toTopOf="@+id/crl_poi_detail"
            app:layout_constraintEnd_toStartOf="@+id/poi_to_navi"
            app:layout_constraintStart_toEndOf="@+id/crl_poi_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/dp_18">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/search_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56"
                android:paddingHorizontal="@dimen/dp_16"
                tools:text="最快"
                android:textSize="@dimen/sp_32"
                android:gravity="center"
                android:textColor="@color/dialog_msg_top_button_color"
                android:visibility="visible"
                android:background="@drawable/bg_parking_recommended"
                app:layout_constraintTop_toTopOf="@+id/poi_name"
                app:layout_constraintBottom_toBottomOf="@+id/poi_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:focusable="false"
                android:singleLine="true"
                android:text="@{poiBean.name}"
                android:textColor="@color/search_color_ffffff"
                android:textSize="@dimen/sp_46"
                app:layout_goneMarginStart="0dp"
                app:layout_constraintBottom_toTopOf="@+id/poi_address"
                app:layout_constraintStart_toEndOf="@+id/search_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                tools:text="德国慕尼黑" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@{poiBean.distance}"
                android:focusable="false"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_38"
                app:layout_constraintEnd_toStartOf="@+id/poi_to_navi"
                app:layout_constraintTop_toBottomOf="@+id/poi_name"
                tools:text="100Km" />

            <View
                android:id="@+id/sub_line_view"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_14"
                android:focusable="false"
                android:background="@color/search_quick_tab_view_color"
                app:layout_constraintBottom_toBottomOf="@+id/poi_address"
                app:layout_constraintStart_toEndOf="@+id/poi_distance"
                app:layout_constraintTop_toTopOf="@+id/poi_address" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/poi_address"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false"
                android:text="@{poiBean.address}"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_38"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sub_line_view"
                app:layout_constraintTop_toBottomOf="@+id/poi_name"
                tools:text="德国慕尼黑啤酒节柏林节柏林披萨慕尼" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinConstraintLayout
            style="@style/style_mfc_config"
            android:id="@+id/poi_to_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_40"
            android:minWidth="@dimen/dp_90"
            app:layout_constraintTop_toTopOf="@+id/crl_poi_des"
            app:layout_constraintEnd_toEndOf="parent">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_navi_icon"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:src="@drawable/img_basic_ic_navi"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="@id/text_navi"
                app:layout_constraintStart_toStartOf="@+id/text_navi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/text_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_go_here"
                android:focusable="false"
                android:textColor="@color/search_quick_tab_view_color"
                android:textSize="@dimen/sp_38"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_navi_icon" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/crl_poi_detail"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="@+id/crl_poi_des"
            app:layout_constraintTop_toBottomOf="@+id/crl_poi_des">

            <ViewStub
                android:id="@+id/scene_poi_item_gas_view_stub"
                android:layout="@layout/scene_poi_item_gas_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ViewStub
                android:id="@+id/scene_poi_item_charge_view_stub"
                android:layout="@layout/scene_poi_item_charge_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ViewStub
                android:id="@+id/scene_poi_item_car_wash_view_stub"
                android:layout="@layout/scene_poi_item_car_wash_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ViewStub
                android:id="@+id/scene_poi_item_catering_view_stub"
                android:layout="@layout/scene_poi_item_catering_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--服务区和停车场共用一个view-->
            <ViewStub
                android:id="@+id/scene_poi_item_parking_service_view_stub"
                android:layout="@layout/scene_poi_item_parking_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ViewStub
                android:id="@+id/scene_poi_item_scenic_spot_view_stub"
                android:layout="@layout/scene_poi_item_scenic_spot_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>
        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/poi_charge_label"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/crl_poi_detail"
            app:layout_constraintTop_toBottomOf="@id/crl_poi_detail"
            />
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
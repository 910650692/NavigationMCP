<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.PoiDetailsScenicChildAdapter.Holder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/poi_child_layout"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_120"
        android:focusable="true"
        android:background="@drawable/custom_filter_item_bg_selector_day_sw280">

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            tools:text="4号门"
            android:focusable="false"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@drawable/custom_filter_item_text_bg_selector_day"
            android:textSize="@dimen/sp_38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/child_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="40%选择"
            android:focusable="false"
            android:textColor="@drawable/custom_filter_sub_item_text_bg_selector_day"
            android:textSize="@dimen/sp_32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/child_title" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
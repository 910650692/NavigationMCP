<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Scene"
            type="com.sgm.navi.scene.api.route.ISceneRouteDetailsResultList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/ly_descendants_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_24"
        android:orientation="vertical">

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_descendants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_48"
            android:layout_marginEnd="@dimen/dp_48"
            android:text="@string/route_multiple_destinations"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_46"
            app:layout_constraintBottom_toTopOf="@+id/route_descendants_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/route_descendants_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_24"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/rv_secondary_poi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/route_descendants_text"
            app:layout_constraintWidth_max="@dimen/dp_1122" />

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/rv_secondary_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_24"
            app:layout_goneMarginTop="@dimen/dp_24"
            app:layout_constraintTop_toBottomOf="@+id/route_descendants_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="@dimen/dp_1122" />


    </com.sgm.navi.ui.view.SkinConstraintLayout>



</layout>
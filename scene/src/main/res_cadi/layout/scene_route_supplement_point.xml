<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/layout_route_charge_progress_icon"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_204">

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/iv_route_charge"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:src="@drawable/img_route_evcar"
            android:layout_marginTop="@dimen/dp_75"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_route_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/route_white"
            android:textSize="@dimen/sp_32"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/iv_route_charge"
            app:layout_constraintEnd_toEndOf="@+id/iv_route_charge"
            app:layout_constraintTop_toTopOf="@+id/iv_route_charge"
            app:layout_constraintBottom_toBottomOf="@+id/iv_route_charge"
            tools:text="1"/>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_route_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_32"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_9"
            app:layout_constraintStart_toStartOf="@+id/iv_route_charge"
            app:layout_constraintEnd_toEndOf="@+id/iv_route_charge"
            app:layout_constraintTop_toBottomOf="@+id/iv_route_charge"
            tools:text="2000公里"/>

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="holder"
            type="com.sgm.navi.scene.ui.adapter.RouteSecondaryPoiAdapter.Holder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/ly_route_secondary_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_route_child_poi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_76"
            android:maxWidth="@dimen/dp_358"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_46"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tool:text="航站楼1" />
        
        <com.sgm.navi.ui.view.SkinView
            android:id="@+id/route_item_selected"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_8"
            android:background="@color/bg_route_button_select_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_route_child_poi"
            app:layout_constraintTop_toBottomOf="@+id/tv_route_child_poi"/>

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
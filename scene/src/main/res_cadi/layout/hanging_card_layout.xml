<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/cl_hanging_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical">

        <!--第三位的布局，仅仅在空间不足的时候显示-->
        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/ll_third"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_254"
            android:layout_marginTop="@dimen/dp_196"
            android:background="@drawable/bg_shadow_navi_cadillac_transparent"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@android:color/holo_blue_dark"
            android:visibility="gone"/>

        <!--第二位的布局-->
        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/ll_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_254"
            android:layout_marginTop="@dimen/dp_98"
            android:background="@drawable/bg_shadow_navi_cadillac_transparent"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@android:color/darker_gray"
            android:visibility="gone"/>

        <!--第一位的布局-->
        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/ll_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_254"
            android:background="@drawable/bg_shadow_navi_cadillac_transparent"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@android:color/darker_gray"
            android:visibility="gone"/>

        <com.sgm.navi.ui.view.SkinImageView
            style="@style/style_mfc_config"
            android:id="@+id/iv_toggle"
            android:layout_width="@dimen/dp_168"
            android:layout_height="@dimen/dp_30"
            android:paddingHorizontal="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_44"
            android:src="@drawable/bg_hanging_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
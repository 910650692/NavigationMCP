<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="naviContinue"
            type="com.fy.navi.scene.impl.navi.SceneNaviContinueImpl" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_navi_continue"
        clickCommand="@{() -> naviContinue.naviContinueClick()}"
        android:layout_width="@dimen/dp_264"
        android:layout_height="@dimen/dp_78"
        android:background="@drawable/bg_navi_continue"
        app:click_color_change="true">

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/siv_navi_continue_icon"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_49"
            android:layout_marginStart="@dimen/dp_41"
            android:background="@drawable/img_navigation_58"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/navi_continue_navi"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_29"
            app:layout_constraintBottom_toBottomOf="@+id/siv_navi_continue_icon"
            app:layout_constraintStart_toEndOf="@+id/siv_navi_continue_icon"
            app:layout_constraintTop_toTopOf="@+id/siv_navi_continue_icon" />

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
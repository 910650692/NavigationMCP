<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="IScenePoiList"
            type="com.sgm.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/layout_route_charge_progress"
            android:layout_width="@dimen/dp_824"
            android:layout_height="@dimen/dp_186"
            android:layout_marginStart="@dimen/dp_565"
            android:background="@drawable/bg_shadow_navi_ndlc_8155"
            android:clickable="true"
            android:paddingHorizontal="@dimen/dp_34"
            android:paddingVertical="@dimen/dp_34"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/route_charge_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dp_688"
                android:layout_height="@dimen/dp_5"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:max="100"
                android:progressDrawable="@drawable/img_route_charge_progress_bar"
                android:soundEffectsEnabled="false"
                android:splitTrack="false"
                android:thumb="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_charge_start"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_45"
                android:scaleType="centerCrop"
                android:src="@drawable/img_route_logo_2d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/route_charge_progress_icons"
                android:layout_width="@dimen/dp_756"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="@+id/route_charge_progress"
                app:layout_constraintStart_toStartOf="@+id/route_charge_progress"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_charge_exhaustion_point"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/img_route_charge_exhaustion_point"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_charge_exhaustion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_7"
                android:text="@string/route_expected_battery_depletion"
                android:textColor="@color/text_route_defult"
                android:textSize="@dimen/sp_22"
                app:layout_constraintBottom_toTopOf="@+id/route_charge_exhaustion_point"
                app:layout_constraintEnd_toEndOf="@+id/route_charge_exhaustion_point"
                app:layout_constraintStart_toStartOf="@+id/route_charge_exhaustion_point" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/route_charge_end"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_marginEnd="@dimen/dp_22"
                android:src="@drawable/img_route_charge_end_point"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/route_charge_total_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_40"
                android:textColor="@color/text_route_defult"
                android:textSize="@dimen/sp_22"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/route_charge_end" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/root_view"
            android:layout_width="@dimen/dp_545"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_17"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/route_right_tab_list_charge_scene"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/dp_130"
            tools:background="#FF0000">

            <include
                android:id="@+id/search_text_bar_view"
                layout="@layout/search_text_bar_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95" />

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:background="@drawable/bg_route_result"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:background="#00FF00">

                <include
                    android:id="@+id/search_filter_view"
                    layout="@layout/search_filter_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    tools:visibility="gone" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_offline_hint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_94"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/bg_offline"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_26"
                    android:paddingEnd="@dimen/dp_26"
                    android:text="@string/search_offline_hint"
                    android:textColor="@color/search_color_ffffff_70"
                    android:textSize="@dimen/sp_25"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="gone" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_result_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_607"
                    android:gravity="center"
                    android:text="@string/search_result_no_data"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_29"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_label_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_offline_hint"
                    tools:visibility="visible" />

                <com.sgm.navi.ui.view.PullToRefreshLayout
                    android:id="@+id/pull_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/route_charge_list_along_way_sure"
                    app:layout_constraintHeight_max="@dimen/dp_898"
                    app:layout_constraintHeight_min="@dimen/dp_444"
                    app:layout_constraintHeight_default="wrap"
                    app:layout_constraintTop_toBottomOf="@+id/search_label_filter"
                    tools:background="#0000FF">

                    <com.sgm.navi.ui.view.SkinRecyclerView
                        android:id="@+id/recycler_search_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20" />
                </com.sgm.navi.ui.view.PullToRefreshLayout>

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/route_charge_list_along_way_sure"
                    android:layout_width="@dimen/dp_228"
                    android:layout_height="@dimen/dp_77"
                    android:layout_marginStart="@dimen/dp_34"
                    android:layout_marginBottom="@dimen/dp_34"
                    android:background="@drawable/bg_route_start_navigation_button"
                    android:gravity="center"
                    android:text="@string/dsc_confirm"
                    android:textColor="@color/text_route_button_title"
                    android:textSize="@dimen/sp_29"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pull_refresh_layout"
                    tools:visibility="visible" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/route_charge_list_along_way_cancel"
                    android:layout_width="@dimen/dp_228"
                    android:layout_height="@dimen/dp_77"
                    android:layout_marginEnd="@dimen/dp_34"
                    android:layout_marginBottom="@dimen/dp_34"
                    android:background="@drawable/bg_route_refresh_route_button"
                    android:gravity="center"
                    android:text="@string/dsc_cancel"
                    android:textColor="@color/text_route_defult"
                    android:textSize="@dimen/sp_29"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible" />


            </com.sgm.navi.ui.view.SkinConstraintLayout>

        </com.sgm.navi.ui.view.SkinLinearLayout>

        <com.sgm.navi.scene.ui.route.SceneRouteGasStationChargeServiceView
            android:id="@+id/route_right_tab_list_charge_scene"
            android:layout_width="@dimen/dp_545"
            android:layout_height="@dimen/dp_124"
            android:layout_marginBottom="@dimen/dp_130"
            android:background="@drawable/bg_route_result"
            android:clickable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />
    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="IScenePoiList"
            type="com.fy.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_545"
        android:layout_height="match_parent">

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/search_text_bar_view"
                layout="@layout/search_text_bar_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95" />

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_713"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_271"
                android:background="@drawable/bg_search_main_tab_sw1225">

                <include
                    android:id="@+id/search_filter_view"
                    layout="@layout/search_filter_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    tools:visibility="gone"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/search_offline_hint"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/dp_26"
                    android:paddingEnd="@dimen/dp_26"
                    android:layout_height="@dimen/dp_94"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_offline"
                    android:layout_marginTop="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="@string/search_offline_hint"
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/search_color_ffffff_70"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/search_result_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:textColor="@color/search_quick_tab_view_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/search_result_no_data"
                    android:textSize="@dimen/sp_29"/>
                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/charge_filter"
                    android:layout_width="@dimen/dp_97"
                    android:layout_height="@dimen/dp_52"
                    android:gravity="center"
                    android:textSize="@dimen/sp_30"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_offline_hint"
                    android:visibility="gone"
                    android:background="@drawable/custom_filter_item_bg_selector_day"
                    android:text="@string/search_charge_self"/>
                <com.fy.navi.ui.view.PullToRefreshLayout
                    android:id="@+id/pull_refresh_layout"
                    app:layout_constraintTop_toBottomOf="@+id/charge_filter"
                    android:layout_marginVertical="@dimen/dp_17"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0">

                    <com.fy.navi.ui.view.SkinRecyclerView
                        android:id="@+id/recycler_search_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.fy.navi.ui.view.PullToRefreshLayout>
            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.scene.ui.route.SceneRouteGasStationChargeServiceView
            android:id="@+id/route_right_tab_list_charge_scene"
            android:layout_width="@dimen/dp_545"
            android:layout_height="@dimen/dp_124"
            android:clickable="true"
            android:background="@drawable/bg_route_result"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_130"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
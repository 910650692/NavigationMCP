<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ISceneSugSearchPoiList"
            type="com.sgm.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/scl_search_top_view"
            layout="@layout/search_edit_bar_view"
            android:layout_width="@dimen/dp_545"
            android:layout_height="@dimen/dp_95" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_545"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_130"
            android:background="@drawable/bg_search_main_tab"
            android:paddingVertical="@dimen/dp_17">

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/recycler_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="gone" />

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/recycler_search_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="@dimen/dp_898"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="1dp" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/recycler_no_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_412"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_40"
                android:text="@string/shv_record_null"
                android:textColor="@color/search_color_ffffff_70"
                android:textSize="@dimen/sp_26"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.utils.ConvertUtils" />

        <import type="android.view.View" />

    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_134"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_23"
        tools:background="@android:color/darker_gray">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:textColor="@color/common_title_color"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_61"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/ll_sub"
            app:layout_constraintEnd_toStartOf="@+id/view_navi_now"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_common_item_block"
                android:layout_marginEnd="@dimen/dp_14"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/navi_recommend"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/common_title_purple_color"
                android:textSize="@dimen/sp_29"
                tools:text="大雨停车场" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ll_title"
            app:layout_constraintStart_toStartOf="@id/ll_title">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_title_purple_color"
                android:textSize="@dimen/sp_22"
                tools:text="66" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_title_color"
                android:textSize="@dimen/sp_22"
                tools:text="/88" />

                <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:textColor="@color/common_title_purple_color"
                android:textSize="@dimen/sp_22"
                tools:text="紧张" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:textColor="@color/common_title_purple_color"
                android:textSize="@dimen/sp_22"
                tools:text="当前终点" />
        </LinearLayout>

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/iv_navi_icon"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_49"
            android:src="@drawable/img_navigation_black_58"
            app:layout_constraintBottom_toTopOf="@id/tv_distance"
            app:layout_constraintEnd_toEndOf="@id/tv_distance"
            app:layout_constraintStart_toStartOf="@id/tv_distance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginEnd="@dimen/dp_20"
            android:minWidth="@dimen/dp_88"
            android:textColor="@color/traffic_sub_title_color"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_navi_icon"
            tools:text="7.2公里" />

        <View
            android:id="@+id/view_navi_now"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_distance"
            app:layout_constraintEnd_toEndOf="@id/tv_distance"
            app:layout_constraintStart_toStartOf="@id/tv_distance"
            app:layout_constraintTop_toTopOf="@id/iv_navi_icon" />

    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
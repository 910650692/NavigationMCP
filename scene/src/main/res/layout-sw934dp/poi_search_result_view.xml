<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="IScenePoiList"
            type="com.fy.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/root_view"
            android:layout_width="@dimen/dp_698"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/search_text_bar_view"
                layout="@layout/search_text_bar_view"
                android:layout_width="@dimen/dp_698"
                android:layout_height="@dimen/dp_170" />

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:layout_width="@dimen/dp_698"
                android:layout_height="@dimen/dp_668"
                android:paddingStart="@dimen/dp_29"
                android:paddingEnd="@dimen/dp_29"
                android:paddingTop="@dimen/dp_29"
                android:paddingBottom="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_m_38"
                android:background="@drawable/bg_search_shadow">

                <include
                    android:id="@+id/search_filter_view"
                    layout="@layout/search_filter_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    tools:visibility="visible"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/search_offline_hint"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_30"
                    android:layout_height="@dimen/dp_110"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_offline"
                    android:layout_marginTop="@dimen/dp_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    tools:visibility="gone"
                    android:text="@string/search_offline_hint"
                    android:textSize="@dimen/sp_34"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/search_result_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:textColor="@color/search_quick_tab_view_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/search_result_no_data"
                    android:textSize="@dimen/sp_34"/>

                <com.fy.navi.ui.view.PullToRefreshLayout
                    android:id="@+id/pull_refresh_layout"
                    app:layout_constraintTop_toBottomOf="@+id/search_offline_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.fy.navi.ui.view.SkinRecyclerView
                        android:id="@+id/recycler_search_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.fy.navi.ui.view.PullToRefreshLayout>
            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.scene.ui.route.SceneRouteGasStationChargeServiceView
            android:id="@+id/route_right_tab_list_charge_scene"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_494"
            android:padding="@dimen/dp_29"
            android:background="@drawable/bg_search_shadow"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_m_9"
            app:layout_constraintBottom_toBottomOf="@id/root_view"
            app:layout_constraintStart_toEndOf="@+id/root_view" />
    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
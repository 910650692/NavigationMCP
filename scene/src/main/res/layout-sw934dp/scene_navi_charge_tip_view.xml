<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="tipImpl"
            type="com.fy.navi.scene.impl.navi.SceneNaviChargeTipViewImpl" />

    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_188"
        android:paddingHorizontal="@dimen/dp_29"
        android:paddingVertical="@dimen/dp_29"
        android:background="@drawable/bg_shadow_navi_buick">

        <View
            android:layout_width="@dimen/dp_640"
            android:layout_height="0dp"
            android:background="@drawable/bg_scene_charge_tip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_34"
            app:layout_constraintEnd_toStartOf="@id/tv_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_desc"
            tools:text="xxxxxxxx" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/search_color_ffffff_70"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="xxxxxxxx" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_action"
            android:layout_width="@dimen/dp_156"
            android:layout_height="@dimen/dp_76"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_navi_go_charge"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/dp_30"
            tools:text="去充电" />

    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
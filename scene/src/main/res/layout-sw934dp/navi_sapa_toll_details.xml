<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="sapaDetail"
            type="com.fy.navi.scene.impl.navi.SceneNaviSapaDetailImpl" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_640"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_navi_control">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_status_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sapaDetail.mTollStatusTag}"
            android:background="@drawable/bg_poi_gas_price_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_42"
            android:paddingVertical="@dimen/dp_6"
            android:paddingHorizontal="@dimen/dp_12"
            android:textSize="@dimen/sp_26"
            android:gravity="center"
            android:textColor="@color/navi_color_000000_50"
            tools:text="暂停营业" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_400"
            android:text="@{sapaDetail.mTollName}"
            app:layout_constraintTop_toTopOf="@+id/siv_toll_details_status_tag"
            app:layout_constraintBottom_toBottomOf="@+id/siv_toll_details_status_tag"
            app:layout_constraintStart_toEndOf="@+id/siv_toll_details_status_tag"
            android:layout_marginStart="@dimen/dp_16"
            android:textSize="@dimen/sp_38"
            android:textColor="@color/navi_color_000000_100"
            tools:text="收费站" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sapaDetail.mTollDistance}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_120"
            android:textSize="@dimen/sp_34"
            android:textColor="@color/navi_color_000000_100"
            tools:text="5.2公里" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_remaintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sapaDetail.mTollRemainTime}"
            app:layout_constraintStart_toEndOf="@+id/siv_toll_details_distance"
            app:layout_constraintTop_toTopOf="@+id/siv_toll_details_distance"
            app:layout_constraintBottom_toBottomOf="@+id/siv_toll_details_distance"
            android:layout_marginStart="@dimen/dp_38"
            android:textSize="@dimen/sp_34"
            android:textColor="@color/navi_color_000000_100"
            tools:text="30分钟" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_remiancharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_120"
            android:textSize="@dimen/sp_34"
            android:visibility="gone"
            android:textColor="@color/navi_color_000000_100"
            android:text="@string/charge_remain_arrive" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/siv_toll_remain_charge_icon"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:visibility="gone"
            android:background="@drawable/img_electricity_medium_42"
            app:layout_constraintTop_toTopOf="@+id/siv_toll_details_remiancharge"
            app:layout_constraintBottom_toBottomOf="@+id/siv_toll_details_remiancharge"
            app:layout_constraintEnd_toStartOf="@+id/siv_toll_details_remiancharge"
            android:layout_marginEnd="@dimen/dp_7" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/siv_toll_exit"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/img_off58"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            clickCommand="@{sapaDetail.closeScene}"
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginEnd="@dimen/dp_30" />

        <com.fy.navi.ui.view.SkinLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_181">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sapaDetail.mTollRouteName}"
            android:layout_marginStart="@dimen/dp_40"
            android:textSize="@dimen/sp_30"
            android:visibility="visible"
            android:textColor="@color/navi_color_000000_70"
            tools:text="江苏省苏州吴中区" />

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/sll_toll_services"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_52"
            android:visibility="@{sapaDetail.mTollServicesVisible ? View.VISIBLE : View.GONE}"
            android:gravity="center_vertical"
            android:background="@drawable/sapa_service_details_icon_bg"
            android:paddingEnd="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_24">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/siv_toll_details_service_alipay"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:visibility="@{sapaDetail.mTollAlipayVisible ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/img_zf_black_42" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/siv_toll_details_service_etc"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:visibility="@{sapaDetail.mTollEtcVisible ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/siv_toll_details_service_0"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/img_etc_black_42" />

        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/siv_horizontal_line"
            android:layout_width="@dimen/dp_560"
            android:layout_height="@dimen/dp_1"
            android:visibility="gone"
            android:background="@color/navi_color_000000_40"
            android:layout_marginTop="@dimen/dp_24"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_business_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_24"
            android:textSize="@dimen/sp_30"
            android:visibility="gone"
            android:textColor="@color/navi_color_000000_70"
            tools:text="营业时间：00:00—24:00" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_toll_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_24"
            android:textSize="@dimen/sp_30"
            android:visibility="gone"
            android:textColor="@color/navi_color_000000_70"
            tools:text="电        话：00:00—24:00" />

        <com.fy.navi.scene.ui.navi.view.ButtonText
            android:id="@+id/bt_toll_details_add_via"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            clickCommand="@{() -> sapaDetail.onAddRemoveViaClick()}"
            android:background="@drawable/sapa_add_via_bg"
            android:layout_margin="@dimen/dp_40"
            android:textSize="@dimen/sp_34"
            android:gravity="center"
            android:text="@{sapaDetail.mButtonText}"
            tools:text="添加途经点"
            android:textColor="@color/navi_color_FFFFFF_100" />
    </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/scl_toll_details_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp_40"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_38">

            <com.fy.navi.ui.view.SkinImageView
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:background="@drawable/img_telephone_58"
                app:layout_constraintBottom_toTopOf="@+id/stv_service_details_tel_text"
                android:layout_marginTop="@dimen/dp_4"
                app:layout_constraintStart_toStartOf="@+id/stv_service_details_tel_text"
                app:layout_constraintEnd_toEndOf="@+id/stv_service_details_tel_text" />


            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/stv_service_details_tel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/navi_color_000000_70"
                android:text="@string/navi_tel" />


        </com.fy.navi.ui.view.SkinConstraintLayout>


    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        tools:background="@android:color/darker_gray"
        android:layout_height="@dimen/dp_216">

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/stv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:textColor="@color/common_title_color"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />


        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_72"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/ll_sub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_navi_now"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/tv_rec_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_common_item_block"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_6"
                android:text="推荐"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/dp_16"
                android:textColor="@color/common_title_purple_color"
                android:textSize="@dimen/sp_34"
                tools:text="国家电网充电站" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/ll_title"
            app:layout_constraintTop_toBottomOf="@id/ll_title">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_common_item_block"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_6"
                android:text="@string/navi_along_service"
                android:textColor="@color/common_sub_title_color"
                android:textSize="@dimen/sp_26"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:background="@drawable/bg_common_item_block"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/dp_12">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/tv_95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_6"
                    android:text="@string/gas_95"
                    android:textColor="@color/common_title_purple_color"
                    android:textSize="@dimen/sp_26" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/tv_95_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:textColor="@color/common_sub_title_color"
                    android:textSize="@dimen/sp_26"
                    tools:text="￥7.6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_92"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:background="@drawable/bg_common_item_block"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/dp_12"
                android:visibility="gone">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/tv_92"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_6"
                    android:text="@string/gas_92"
                    android:textColor="@color/common_title_purple_color"
                    android:textSize="@dimen/sp_26" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/tv_92_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="￥7.2"
                    android:textColor="@color/common_sub_title_color"
                    android:textSize="@dimen/sp_26" />

            </LinearLayout>
        </LinearLayout>

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/iv_navi_icon"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_74"
            android:src="@drawable/img_navigation_black_58"
            app:layout_constraintBottom_toTopOf="@id/tv_distance"
            app:layout_constraintEnd_toEndOf="@id/tv_distance"
            app:layout_constraintStart_toStartOf="@id/tv_distance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_31"
            android:gravity="center_horizontal"
            android:minWidth="@dimen/dp_103"
            android:textColor="@color/common_title_color"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_navi_icon"
            tools:text="7.2公里" />

        <View
            android:id="@+id/view_navi_now"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_distance"
            app:layout_constraintTop_toTopOf="parent" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
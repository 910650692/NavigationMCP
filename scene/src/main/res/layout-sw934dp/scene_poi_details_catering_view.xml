<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ScenePoiDetailContentView"
            type="com.fy.navi.scene.impl.poi.ScenePoiDetailContentViewImpl" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/poi_catering_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/poi_catering_price"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="¥35" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/poi_catering_price_per_person"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/search_quick_tab_view_color"
            android:textSize="@dimen/sp_26"
            android:text="@string/catering_avg_price"
            app:layout_constraintStart_toEndOf="@+id/poi_catering_price"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/poi_catering_price"
            />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/poi_catering_mark_value"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/poi_details_bottom_icon"
            android:textSize="@dimen/sp_36"
            android:layout_marginEnd="@dimen/dp_24"
            app:layout_constraintEnd_toStartOf="@+id/poi_catering_mark_layout"
            app:layout_constraintTop_toTopOf="@id/poi_catering_price"
            app:layout_constraintBottom_toBottomOf="@+id/poi_catering_price"
            tools:text="4.7"
            android:text="4.7"/>
        
        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/poi_catering_mark_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/bg_catering_mark"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/dp_9"
            android:paddingEnd="@dimen/dp_9"
            app:layout_constraintTop_toTopOf="@id/poi_catering_price"
            app:layout_constraintBottom_toBottomOf="@+id/poi_catering_price">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/poi_catering_mark_img1"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:src="@drawable/img_collect_48" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/poi_catering_mark_img2"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:src="@drawable/img_collect_48" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/poi_catering_mark_img3"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:src="@drawable/img_collect_48" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/poi_catering_mark_img4"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:src="@drawable/img_collect_48" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/poi_catering_mark_img5"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:src="@drawable/img_collect2_48" />
        </com.fy.navi.ui.view.SkinLinearLayout>

        <View
            android:id="@+id/poi_details_sub_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@color/setting_text_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poi_catering_mark_layout" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/poi_catering_hours"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_10"
            android:textColor="@color/poi_details_bottom_icon"
            android:textSize="@dimen/sp_36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poi_details_sub_line"
            tools:text="营业时间: 09:00 -- 21:00"
            android:text="营业时间: 09:00 -- 21:00"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/poi_catering_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="电        话: 021-888888"
            android:textColor="@color/poi_details_bottom_icon"
            android:textSize="@dimen/sp_36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poi_catering_hours"
            tools:text="电        话: 021-888888" />
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
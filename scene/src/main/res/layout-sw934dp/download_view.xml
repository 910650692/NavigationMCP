<?xml version="1.0" encoding="utf-8"?>
<com.sgm.navi.ui.view.SkinConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/download_status"
    android:layout_width="@dimen/dp_180"
    android:layout_height="@dimen/dp_76"
    android:background="@drawable/shape_bg_download_data">

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/btn_status"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginEnd="@dimen/dp_8"
            android:src="@drawable/img_untop_bwhite_42"/>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/status_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/setting_white"
            android:text="@string/offline_item_city_status"
            android:textSize="@dimen/sp_30" />

    </com.sgm.navi.ui.view.SkinLinearLayout>


</com.sgm.navi.ui.view.SkinConstraintLayout>
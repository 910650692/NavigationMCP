<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ISceneCalculate"
            type="com.fy.navi.scene.api.map.ISceneCalculate" />
        <variable
            name="SceneNaviHomeView"
            type="com.fy.navi.scene.ui.map.SceneNaviHomeView" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/home_skin_constrain"
        android:layout_width="@dimen/dp_878"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_29"
        android:paddingVertical="@dimen/dp_29"
        android:background="@drawable/bg_shadow_navi_buick"
        android:padding="@dimen/dp_40">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/home_skin_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回家1小时29分钟"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/home_skin_tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:text="预计08:20到达"
            android:textColor="@color/opacity_99"
            android:textSize="@dimen/sp_38"
            app:layout_constraintStart_toStartOf="@id/home_skin_tv_title"
            app:layout_constraintTop_toBottomOf="@id/home_skin_tv_title" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/home_skin_btn_go"
            android:layout_width="@dimen/dp_184"
            android:layout_height="@dimen/dp_100"
            android:background="@drawable/bg_navi_to_home_bg"
            android:gravity="center"
            android:text="@string/go_home"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_42"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--路况图-->
        <com.fy.navi.scene.ui.navi.SceneNaviTmcView
            android:id="@+id/home_skin_tmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_skin_tv_sub_title" />

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>






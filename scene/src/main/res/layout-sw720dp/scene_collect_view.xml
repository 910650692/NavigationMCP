<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="SceneCollectViewImpl"
            type="com.sgm.navi.scene.impl.favorite.SceneCollectViewImpl" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/scl_search_top_view"
        android:layout_width="@dimen/dp_613"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/collect_title_bar_view"
            layout="@layout/collect_title_bar_view"
            android:layout_width="@dimen/dp_613"
            android:layout_height="@dimen/dp_168" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_613"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow_navi_ndlc_8155"
            android:padding="@dimen/dp_34"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_128">

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/tv_favorite_switch"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_77"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/dp_26"
                android:background="@drawable/bg_setting_checkbox"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <com.sgm.navi.ui.view.SkinRadioGroup
                    android:id="@+id/navi_broadcast"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.sgm.navi.ui.view.SkinRadioButton
                        android:id="@+id/navi_broadcast_standard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_setting_checkbox_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/favorite_switch_common"
                        android:textColor="@drawable/color_setting_checkbox_selector"
                        android:textSize="@dimen/sp_29" />

                    <com.sgm.navi.ui.view.SkinRadioButton
                        android:id="@+id/navi_broadcast_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_setting_checkbox_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/favorite_switch_charge"
                        android:textColor="@drawable/color_setting_checkbox_selector"
                        android:textSize="@dimen/sp_29" />
                </com.sgm.navi.ui.view.SkinRadioGroup>

            </com.sgm.navi.ui.view.SkinLinearLayout>

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/rcv_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="@dimen/dp_839"
                app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch"
                app:layout_goneMarginTop="@dimen/dp_20" />

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_no_favorite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_713"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch"
                tools:layout_editor_absoluteX="34dp">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/tv_no_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scv_not_have_favorite"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_26" />
            </com.sgm.navi.ui.view.SkinLinearLayout>

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_no_sgm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_589"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_24"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/favorite_no_charging"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_26" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/favorite_no_charging_tip"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_26" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/sll_no_login"
                    android:layout_width="@dimen/dp_264"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_28"
                    android:background="@drawable/bg_setting_preference_select"
                    android:gravity="center"
                    android:text="@string/account_login"
                    android:textColor="@color/white_always"
                    android:textSize="@dimen/sp_26" />
            </com.sgm.navi.ui.view.SkinLinearLayout>

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_no_charge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_no_charging_data"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_26" />
            </com.sgm.navi.ui.view.SkinLinearLayout>

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_no_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_charging_request_fail"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_26" />


                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/sll_no_refresh"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_83"
                    android:layout_marginTop="@dimen/dp_28"
                    android:background="@drawable/bg_setting_preference_select"
                    android:gravity="center"
                    android:text="@string/navi_refresh"
                    android:textColor="@color/white_always"
                    android:textSize="@dimen/sp_26" />
            </com.sgm.navi.ui.view.SkinLinearLayout>

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_no_net"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_charging_offline"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_26" />
            </com.sgm.navi.ui.view.SkinLinearLayout>

        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ScenePoiChargePriceListViewImpl"
            type="com.sgm.navi.scene.impl.poi.ScenePoiChargePriceListViewImpl" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="@dimen/dp_640"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_navi_ndlc_8155"
        android:padding="@dimen/dp_34"
        android:orientation="vertical">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104">

            <com.sgm.navi.ui.view.SkinTextView
                android:gravity="center_vertical"
                android:id="@+id/sk_tv_terminal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:text="@string/charge_price_detail"
                android:textColor="@color/search_color_ffffff"
                android:textSize="@dimen/sp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/sk_iv_terminal_close"
                clickCommand="@{ScenePoiChargePriceListViewImpl.closeFragment}"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/icon_poi_details_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/recycler_charge_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_568"
            android:maxHeight="@dimen/dp_568"/>

    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>
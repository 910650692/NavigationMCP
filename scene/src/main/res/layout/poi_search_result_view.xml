<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="IScenePoiList"
            type="com.fy.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/search_text_bar_view"
            layout="@layout/search_text_bar_view"
            android:layout_width="@dimen/dp_640"
            android:layout_height="@dimen/dp_102" />

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_640"
            android:layout_height="@dimen/dp_610"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/bg_search_main_tab">

            <include
                android:id="@+id/search_filter_view"
                layout="@layout/search_filter_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="gone"/>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/search_offline_hint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="@string/search_offline_hint"
                android:textSize="@dimen/sp_34"/>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/search_result_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/search_result_no_data"
                android:textSize="@dimen/sp_34"/>

            <com.fy.navi.ui.view.PullToRefreshLayout
                android:id="@+id/pull_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.fy.navi.ui.view.SkinRecyclerView
                    android:id="@+id/recycler_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.fy.navi.ui.view.PullToRefreshLayout>
        </com.fy.navi.ui.view.SkinConstraintLayout>

    </com.fy.navi.ui.view.SkinLinearLayout>

</layout>
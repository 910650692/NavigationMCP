<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/filter_root"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/dp_176"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_height="@dimen/dp_76"
        android:background="@drawable/custom_filter_item_bg_selector_day"
        >
        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/ql_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/icon_gas"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="快充"
            android:textSize="@dimen/sp_30"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_goneMarginStart="@dimen/dp_0"
            android:textColor="@color/custom_filter_item_text_bg_selector_day"
            app:layout_constraintEnd_toStartOf="@+id/filter_img"
            app:layout_constraintStart_toEndOf="@+id/ql_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
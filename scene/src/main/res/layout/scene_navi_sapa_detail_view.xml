<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />

        <variable
            name="sapaDetail"
            type="com.sgm.navi.scene.impl.navi.SceneNaviSapaDetailImpl" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_640"
        android:layout_height="@dimen/dp_711">

        <include android:id="@+id/sapa_service_detail"
            android:visibility="@{sapaDetail.mViewType == 0 ? View.VISIBLE : View.GONE}"
            layout="@layout/navi_sapa_service_details" />

        <include android:id="@+id/sapa_toll_detail"
            android:visibility="@{sapaDetail.mViewType == 1 ? View.VISIBLE : View.GONE}"
            layout="@layout/navi_sapa_toll_details" />


    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="SceneCollectViewImpl"
            type="com.fy.navi.scene.impl.favorite.SceneCollectViewImpl" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        android:id="@+id/scl_search_top_view"
        android:layout_width="@dimen/dp_640"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/collect_title_bar_view"
            layout="@layout/collect_title_bar_view"
            android:layout_width="@dimen/dp_640"
            android:layout_height="@dimen/dp_112" />

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_640"
            android:layout_height="@dimen/dp_582"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_search_main_tab">

            <com.fy.navi.ui.view.SkinRecyclerView
                android:id="@+id/rcv_collect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20" />

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_no_favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_36"
                    android:text="@string/scv_not_have_favorite"/>


            </com.fy.navi.ui.view.SkinLinearLayout>
        </com.fy.navi.ui.view.SkinConstraintLayout>
    </com.fy.navi.ui.view.SkinLinearLayout>
</layout>
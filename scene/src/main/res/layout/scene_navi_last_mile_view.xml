<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="naviLastMile"
            type="com.fy.navi.scene.api.navi.ISceneNaviLastMile" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1033"
        android:layout_height="@dimen/dp_148"
        android:background="@drawable/bg_navi_com"
        android:clickable="true"
        tools:background="@color/navi_red_text"
        tools:layout_height="@dimen/dp_160"
        tools:layout_width="@dimen/dp_1000"
        tools:visibility="visible">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/stv_send_phone"
            clickCommand="@{naviLastMile.onSend}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:padding="@dimen/dp_34"
            android:text="@string/navi_send"
            android:textColor="@color/navi_toll_bg_color"
            android:textSize="@dimen/sp_42"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/sv_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_75"
            android:layout_centerVertical="true"
            android:background="@color/navi_last_mile_tv_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/stv_send_phone"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/siv_close"
            clickCommand="@{naviLastMile.onClose}"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/img_navi_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/stv_send_request_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_19"
            android:singleLine="true"
            android:text="@string/navi_send_request_info"
            android:textColor="@color/navi_tbt_remaining_info_color"
            android:textSize="@dimen/sp_40"
            app:layout_constraintStart_toEndOf="@id/sv_line"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/stv_way_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_19"
            android:text="@string/navi_arrive_destination"
            android:textColor="@color/navi_tbt_arrived_color"
            android:textSize="@dimen/sp_36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/stv_send_request_info" />
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
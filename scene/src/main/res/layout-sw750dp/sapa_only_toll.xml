<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="naviSapa"
            type="com.fy.navi.scene.impl.navi.SceneNaviSapaImpl" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_640"
        android:layout_height="@dimen/dp_157"
        android:background="@drawable/bg_navi_toll_station_first">

        <com.fy.navi.ui.view.SkinImageView
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/img_toll_station_42"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_24" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/stv_first_service_toll_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navi_color_FFFFFF_100"
            android:text="@{naviSapa.onlyTollName}"
            android:textSize="@dimen/sp_34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_74"
            android:layout_marginTop="@dimen/dp_24"
            tools:text="收费站" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/stv_first_service_toll_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:text="@{naviSapa.onlyTollDistance}"
            android:textColor="@color/navi_tv_cc_write_color"
            tools:text="28.8公里"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_26" />

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/sll_only_toll_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/stv_first_service_toll_distance"
            app:layout_constraintBottom_toBottomOf="@+id/stv_first_service_toll_distance"
            app:layout_constraintTop_toTopOf="@+id/stv_first_service_toll_distance"
            android:layout_marginStart="@dimen/dp_2">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/siv_first_service_toll_etc"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_marginEnd="@dimen/dp_2"
                android:visibility="@{naviSapa.onlyTollEtcVisible ? View.VISIBLE : View.GONE}"
                android:background="@drawable/img_etc_42" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/siv_first_toll_alipay"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:visibility="@{naviSapa.onlyTollAlipayVisible ? View.VISIBLE : View.GONE}"
                android:layout_marginEnd="@dimen/dp_2"
                android:background="@drawable/img_zf_42" />

        </com.fy.navi.ui.view.SkinLinearLayout>


        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/siv_only_toll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginEnd="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_1"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="@{naviSapa.onlyTollTag}"
            android:textSize="@dimen/sp_26"
            android:textColor="@color/navi_color_FFFFFF_100"
            android:background="@drawable/img_navi_via_item_btn_pass"
            android:gravity="center"
            tools:text="经" />

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Scene"
            type="com.fy.navi.scene.api.route.ISceneRouteDetailsResultList" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_814"
        android:paddingStart="@dimen/dp_56"
        android:paddingRight="@dimen/dp_40">

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/route_details_list_bg_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/route_details_list_img_header"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/circle_dot_green"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_header"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_header" />

        <com.fy.navi.ui.view.SkinTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:text="@string/route_details_list_header"
            android:textColor="@color/floating_search_item_night"
            android:textSize="@dimen/sp_46"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_header"
            app:layout_constraintStart_toEndOf="@id/route_details_list_img_header"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_header" />

        <ExpandableListView
            android:id="@+id/route_detail_result_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@null"
            android:groupIndicator="@null"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/route_details_list_bg_footer"
            app:layout_constraintTop_toBottomOf="@id/route_details_list_bg_header"
            tools:layout_editor_absoluteX="32dp" />

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/route_details_list_bg_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_148"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/route_details_list_img_footer"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/circle_dot_red"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_footer"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_footer" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_details_list_tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/floating_search_item_night"
            android:textSize="@dimen/sp_46"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/route_details_list_bg_footer"
            app:layout_constraintStart_toEndOf="@id/route_details_list_img_footer"
            app:layout_constraintTop_toTopOf="@id/route_details_list_bg_footer"
            tools:text="终点：上海海事大学" />

    </com.fy.navi.ui.view.SkinConstraintLayout>


</layout>
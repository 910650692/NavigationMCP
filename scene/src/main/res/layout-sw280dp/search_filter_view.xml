<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/search_filter_root"
        android:layout_width="@dimen/dp_820"
        android:layout_height="@dimen/dp_828"
        android:focusable="false"
        android:paddingTop="@dimen/dp_52"
        android:visibility="gone"
        tools:visibility="visible">

        <com.sgm.navi.ui.view.SkinScrollView
            android:id="@+id/skinScrollView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_552"
            android:focusable="false"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_filter_title1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textColor="@color/search_color_ffffff"
                    android:textSize="@dimen/dp_46"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/poi_gas_oil_list"
                    tools:text="位置距离" />

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/search_filter_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_title1"
                    app:layout_goneMarginTop="@dimen/dp_40" />

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/search_filter_list1_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_list1" />


                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_filter_title2"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textColor="@color/search_color_ffffff"
                    android:textSize="@dimen/dp_46"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_list1_child"
                    tools:text="全部分类" />

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/search_filter_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_title2"
                    app:layout_goneMarginTop="@dimen/dp_40" />

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/search_filter_list2_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_list2" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/search_filter_title3"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textColor="@color/search_color_ffffff"
                    android:textSize="@dimen/dp_46"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_list2_child"
                    tools:text="推荐排序" />

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/search_filter_list3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_title3"
                    app:layout_goneMarginTop="@dimen/dp_40" />

                <com.sgm.navi.ui.view.SkinRecyclerView
                    android:id="@+id/search_filter_list3_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:focusable="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_filter_list3" />
            </com.sgm.navi.ui.view.SkinConstraintLayout>

        </com.sgm.navi.ui.view.SkinScrollView>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/search_filter_confirm"
            android:layout_width="@dimen/dp_342"
            android:layout_height="@dimen/dp_120"
            android:layout_marginBottom="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@drawable/bg_confirm"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/dsc_confirm"
            android:textSize="@dimen/sp_34"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skinScrollView" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/search_filter_cancel"
            android:layout_width="@dimen/dp_342"
            android:layout_height="@dimen/dp_120"
            android:layout_marginBottom="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/bg_cancel"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/dsc_reset"
            android:textSize="@dimen/sp_34"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skinScrollView" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
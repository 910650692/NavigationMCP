<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ISceneSugSearchPoiList"
            type="com.sgm.navi.scene.api.search.ISceneSearchPoiList" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical">

        <include
            android:id="@+id/scl_search_top_view"
            layout="@layout/search_edit_bar_view" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_922"
            android:layout_height="@dimen/dp_930"
            android:focusable="false"
            android:padding="@dimen/dp_51"
            android:layout_marginTop="@dimen/dp_m_82"
            android:background="@drawable/bg_shadow_navi_cadillac">

            <com.sgm.navi.ui.view.SkinView
                android:id="@+id/il_sug_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_sug_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/icon_limit_loading"
                app:layout_constraintBottom_toBottomOf="@+id/il_sug_loading"
                app:layout_constraintEnd_toEndOf="@+id/il_sug_loading"
                app:layout_constraintStart_toStartOf="@+id/il_sug_loading"
                app:layout_constraintTop_toTopOf="@+id/il_sug_loading" />

            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/recycler_search_result"
                android:scrollbars="vertical"
                android:visibility="gone"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_32"/>
            <com.sgm.navi.ui.view.SkinRecyclerView
                android:id="@+id/recycler_search_history"
                android:scrollbars="vertical"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/recycler_no_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shv_record_null"
                android:focusable="false"
                android:textColor="@color/search_color_ffffff_70"
                android:textSize="@dimen/sp_30"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>
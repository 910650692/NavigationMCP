<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="holder"
            type="com.fy.navi.scene.ui.adapter.FilterChildListAdapter.Holder" />

        <variable
            name="costTime"
            type="com.fy.navi.service.define.search.CostTime" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/charge_price_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_charge_price_root_bg">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/charge_price_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_7"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_24"
            android:background="@drawable/bg_favorite_top"
            android:visibility="@{costTime.getmIsCurrentTime ? View.VISIBLE : View.GONE}"
            android:gravity="center"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/search_charge_current_time" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/charge_price_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="@{costTime.getTime()}"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_46"
            app:layout_constraintStart_toEndOf="@+id/charge_price_type"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00:00-06:00" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/charge_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:textColor="@color/search_color_ffffff"
            android:textSize="@dimen/sp_46"
            app:layout_constraintBaseline_toBaselineOf="@+id/charge_price_time"
            app:layout_constraintStart_toEndOf="@+id/charge_price_time"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{@string/charge_price_all(costTime.getPrice())}" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/charge_price_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_22"
            android:gravity="center"
            android:text="@{@string/charge_price_ele(costTime.getmElectricityFee())}"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/charge_price_time"
            app:layout_constraintTop_toBottomOf="@+id/charge_price_time"
            tools:text="电费：¥100" />

        <View
            android:id="@+id/charge_price_divider"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_14"
            android:background="@color/text_route_defult"
            app:layout_constraintBottom_toBottomOf="@+id/charge_price_electric"
            app:layout_constraintStart_toEndOf="@+id/charge_price_electric"
            app:layout_constraintTop_toTopOf="@+id/charge_price_electric" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/charge_price_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center"
            android:text="@{@string/charge_price_ser(costTime.getmServiceFee())}"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBaseline_toBaselineOf="@+id/charge_price_electric"
            app:layout_constraintStart_toEndOf="@+id/charge_price_divider"
            app:layout_constraintTop_toTopOf="@id/charge_price_electric"
            tools:text="服务费：¥1.89" />

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
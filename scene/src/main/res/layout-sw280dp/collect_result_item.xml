<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.fy.navi.service.define.search.PoiInfoEntity" />

        <variable
            name="poiBean"
            type="com.fy.navi.service.define.search.PoiInfoEntity" />

        <variable
            name="holder"
            type="com.fy.navi.scene.ui.adapter.CollectResultAdapter.ResultHolder" />

        <variable
            name="layoutPosition"
            type="String" />
    </data>

    <com.fy.navi.ui.view.SwipeMenuLayout
        android:id="@+id/swipe_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_131"
        android:focusable="true"
        android:orientation="horizontal">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_168">

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/crl_poi_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_marginStart="@dimen/dp_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/poi_num"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:gravity="center"
                    android:focusable="false"
                    android:minWidth="@dimen/dp_30"
                    android:text="@{layoutPosition}"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_30"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/crl_poi_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/crl_poi_item"
                    tools:text="1" />

                <!--            android:src="@drawable/search_poi_icon"-->
                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/poi_icon"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:gravity="center"
                    android:focusable="false"
                    android:minWidth="@dimen/dp_30"
                    android:src="@drawable/img_basic_ic_orientation"
                    app:layout_constraintBottom_toBottomOf="@+id/crl_poi_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/crl_poi_item" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/crl_poi_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_46"
                android:focusable="false"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/poi_to_navi"
                app:layout_constraintStart_toEndOf="@+id/crl_poi_item"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/poi_address_null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textColor="@color/search_color_ffffff"
                    android:textSize="@dimen/sp_46"
                    android:text="@{poiBean.name}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/crl_poi_des"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_18"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/poi_to_navi"
                app:layout_constraintStart_toEndOf="@+id/crl_poi_item"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/poi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{poiBean.name}"
                    android:textColor="@color/search_color_ffffff"
                    android:textSize="@dimen/sp_46"
                    app:layout_constraintBottom_toTopOf="@+id/poi_address"
                    app:layout_constraintStart_toEndOf="@+id/poi_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="德国慕尼黑" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/item_favorite_top_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:background="@drawable/bg_favorite_top"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_6"
                    android:focusable="false"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/favorite_item_top"
                    android:textColor="@color/navi_color_2461EA_100"
                    android:textSize="@dimen/sp_26"
                    app:layout_constraintStart_toEndOf="@+id/poi_name"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:focusable="false"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/poi_icon"
                    app:layout_constraintTop_toBottomOf="@+id/poi_name">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/item_favorite_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{poiBean.distance}"
                        android:focusable="false"
                        android:textColor="@color/search_color_ffffff_70"
                        android:textSize="@dimen/sp_38"
                        tools:text="198km" />

                    <com.fy.navi.ui.view.SkinView
                        android:id="@+id/item_favorite_line"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginStart="@dimen/dp_14"
                        android:layout_marginEnd="@dimen/dp_14"
                        android:focusable="false"
                        android:background="@color/search_color_ffffff_70" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/poi_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{poiBean.address}"
                        android:focusable="false"
                        android:textColor="@color/search_color_ffffff_70"
                        android:textSize="@dimen/sp_38"
                        app:layout_constraintStart_toEndOf="@+id/item_favorite_line"
                        app:layout_constraintTop_toBottomOf="@+id/item_favorite_name"
                        tools:text="德国慕尼黑啤酒节柏林节柏林披萨慕尼" />
                </com.fy.navi.ui.view.SkinLinearLayout>


            </com.fy.navi.ui.view.SkinConstraintLayout>


            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/poi_to_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_40"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@+id/crl_poi_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/crl_poi_item">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/iv_navi_icon"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:src="@drawable/img_basic_ic_navi"
                    app:layout_constraintEnd_toEndOf="@id/text_navi"
                    app:layout_constraintStart_toStartOf="@+id/text_navi"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/text_navi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/st_go_here"
                    android:focusable="false"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_38"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_navi_icon" />
            </com.fy.navi.ui.view.SkinConstraintLayout>
        </com.fy.navi.ui.view.SkinConstraintLayout>

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/ll_action_container"
            android:layout_width="@dimen/dp_252"
            android:layout_height="match_parent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_top"
                android:layout_width="@dimen/dp_126"
                android:layout_height="match_parent"
                android:focusable="false"
                android:background="@color/bg_route_big_window_unselect"
                android:gravity="center"
                android:orientation="vertical">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/img_top"
                    android:layout_width="@dimen/dp_68"
                    android:layout_height="@dimen/dp_68"
                    android:focusable="false"
                    android:src="@drawable/img_top_pinned" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/stv_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:gravity="center"
                    android:focusable="false"
                    android:text="置顶"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_36" />

            </com.fy.navi.ui.view.SkinLinearLayout>

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/sll_delete"
                android:layout_width="@dimen/dp_126"
                android:layout_height="match_parent"
                android:focusable="false"
                android:background="@color/search_color_delete_bg"
                android:gravity="center"
                android:orientation="vertical">

                <com.fy.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_68"
                    android:layout_height="@dimen/dp_68"
                    android:focusable="false"
                    android:src="@drawable/img_basic_ic_delete_white" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/stv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:focusable="false"
                    android:text="删除"
                    android:textColor="@color/search_icon_delete_white"
                    android:textSize="@dimen/sp_36" />

            </com.fy.navi.ui.view.SkinLinearLayout>
        </com.fy.navi.ui.view.SkinLinearLayout>
    </com.fy.navi.ui.view.SwipeMenuLayout>
</layout>
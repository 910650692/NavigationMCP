<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ScenePoiDetailContentView"
            type="com.fy.navi.scene.impl.poi.ScenePoiDetailContentViewImpl" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/poi_normal_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.fy.navi.ui.view.SkinRecyclerView
            android:id="@+id/poi_child_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/poi_child_expand_collapse"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@drawable/img_under_the_48"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintTop_toTopOf="@+id/poi_child_list"
            app:layout_constraintStart_toEndOf="@+id/poi_child_list"/>

        <View
            android:id="@+id/poi_details_sub_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_30"
            android:focusable="false"
            android:background="@color/route_line_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poi_gas_oil_list" />

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/poi_business_hours_layout"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poi_child_list">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/poi_business_hours"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/poi_details_bottom_icon"
                android:textSize="@dimen/sp_38"
                tools:text="营业时间: 09:00 -- 21:00" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/poi_business_icon"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:src="@drawable/img_under_the_48" />

        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/poi_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="电        话: 021-888888"
            android:textColor="@color/poi_details_bottom_icon"
            android:textSize="@dimen/sp_38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poi_business_hours_layout"
            tools:text="电        话: 021-888888" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/poi_phone_icon"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:visibility="gone"
            android:src="@drawable/img_under_the_48"
            app:layout_constraintStart_toEndOf="@+id/poi_phone"
            app:layout_constraintTop_toTopOf="@+id/poi_phone"/>

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
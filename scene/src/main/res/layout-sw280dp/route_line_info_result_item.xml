<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.fy.navi.service.define.route.RouteLineInfo" />

        <variable
            name="holder"
            type="com.fy.navi.scene.ui.adapter.RouteResultAdapter.Holder" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/item_root_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_184"
        android:background="@color/bg_route_item_select"
        android:focusable="false">

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/item_root_view_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
            android:focusable="true" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_24"
            android:text="0"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_38"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_30"
            android:focusable="false"
            android:text="@{model.MTravelTime}"
            android:textColor="@color/text_color_route_item_select"
            android:textSize="@dimen/sp_46"
            app:layout_constraintStart_toEndOf="@+id/route_item_num"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="xx小时xx分钟" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/bg_route_details_defult_label"
            android:focusable="false"
            android:layout_marginEnd="@dimen/dp_40"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_7"
            android:text="@{model.MLabel}"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="少收费" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:text="@{model.MLength}"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/route_item_time"
            tools:text="xx公里" />


        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/route_item_traffic_light"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_marginStart="@dimen/dp_41"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:src="@drawable/img_route_money"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_item_distance" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_traffic_light_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:text="@{model.MTollCost}"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_item_traffic_light"
            tools:text="88" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/route_item_traffic_price"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_marginStart="@dimen/dp_41"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:src="@drawable/img_route_lingt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_item_traffic_light_value" />


        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:text="@{model.MTrafficLightCount}"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_item_traffic_price"
            tools:text="3" />

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/route_item_electricity_img"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_marginStart="@dimen/dp_41"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:src="@drawable/img_route_electricity"
            android:visibility="@{model.MElecRouteBool ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_item_price" />


        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/route_item_electricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:focusable="false"
            android:text="@{model.MElecRouteLabel}"
            android:textColor="@color/text_color_route_item_no_select"
            android:textSize="@dimen/sp_38"
            android:visibility="@{model.MElecRouteBool ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/route_item_electricity_img"
            tools:text="60%到达" />

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
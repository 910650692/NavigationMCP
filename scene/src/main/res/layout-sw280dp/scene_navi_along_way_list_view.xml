<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="naviSearch"
            type="com.fy.navi.scene.impl.navi.search.SceneNaviAlongWayListViewImpl" />
    </data>
    
    <!--沿途搜列表-->
    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/siv_top_bar"
            android:layout_width="@dimen/dp_640"
            android:layout_height="@dimen/dp_112"
            android:background="@drawable/bg_navi_control"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.fy.navi.scene.ui.navi.view.ButtonImageView
            android:id="@+id/navi_search_along_way_exit"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/img_back_58"
            clickCommand="@{() -> naviSearch.closeSearchView()}"
            app:layout_constraintTop_toTopOf="@+id/siv_top_bar"
            app:layout_constraintBottom_toBottomOf="@+id/siv_top_bar"
            app:layout_constraintStart_toStartOf="@+id/siv_top_bar"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/stv_along_way_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navi_color_000000_50"
            app:layout_constraintTop_toTopOf="@+id/navi_search_along_way_exit"
            app:layout_constraintBottom_toBottomOf="@+id/navi_search_along_way_exit"
            app:layout_constraintStart_toEndOf="@+id/navi_search_along_way_exit"
            android:layout_marginStart="@dimen/dp_4"
            android:textSize="@dimen/sp_34"
            android:text="@string/navi_along_way_search"/>

        <com.fy.navi.ui.view.SkinRecyclerView
            android:id="@+id/sk_rcv_quick"
            android:layout_height="@dimen/dp_582"
            android:layout_width="@dimen/dp_640"
            app:layout_constraintStart_toStartOf="@+id/siv_top_bar"
            app:layout_constraintTop_toBottomOf="@+id/siv_top_bar"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_navi_control" />


    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
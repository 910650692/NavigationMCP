<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="MainSearchView"
            type="com.fy.navi.scene.api.search.ISceneMainSearchView" />
    </data>
    <!--MFC-->
    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_922"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_navi_cadillac"
        android:focusable="false"
        android:padding="@dimen/dp_51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/scl_search_top_view"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="@dimen/dp_152"
            android:layout_marginStart="@dimen/dp_20"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_close"
                clickCommand="@{MainSearchView.closeSearch}"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:focusable="true"
                android:src="@drawable/img_basic_ic_back"
                android:focusedByDefault="true"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/search_bar_text_view"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                android:focusable="true"
                android:hint="@string/main_search_hint"
                android:maxLines="1"
                android:textColor="@color/search_deep_text_day"
                android:textColorHint="@color/search_shallow_text_day"
                android:textSize="@dimen/sp_46"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_search"
                app:layout_constraintStart_toEndOf="@+id/iv_close"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@mipmap/icon_search40"
                android:focusable="false"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.fy.navi.ui.view.SkinConstraintLayout>

        <View
            android:id="@+id/sub_line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/route_line_color"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scl_search_top_view" />

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/sub_line_view">

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/scl_gas_station"
                clickCommand="@{() -> MainSearchView.onClickQuickSearch(0)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                android:layout_marginStart="@dimen/dp_49"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scl_pull_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/iv_gas_station"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:src="@drawable/img_basic_ic_gas_station"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="@+id/scl_gas_station"
                    app:layout_constraintStart_toStartOf="@id/scl_gas_station"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_gas_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:focusable="false"
                    android:textSize="@dimen/sp_38"
                    app:layout_constraintEnd_toEndOf="@+id/scl_gas_station"
                    app:layout_constraintStart_toStartOf="@id/scl_gas_station"
                    app:layout_constraintTop_toBottomOf="@+id/iv_gas_station"
                    tools:text="@string/st_quick_search_station" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/scl_pull_up"
                clickCommand="@{() -> MainSearchView.onClickQuickSearch(1)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scl_gourmet"
                app:layout_constraintStart_toEndOf="@+id/scl_gas_station"
                app:layout_constraintTop_toBottomOf="@+id/sub_line_view"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/iv_pull_up"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:src="@drawable/img_basic_ic_pull_up"
                    app:layout_constraintEnd_toEndOf="@+id/scl_pull_up"
                    app:layout_constraintStart_toStartOf="@id/scl_pull_up"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_pull_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="@+id/scl_pull_up"
                    app:layout_constraintStart_toStartOf="@id/scl_pull_up"
                    app:layout_constraintTop_toBottomOf="@+id/iv_pull_up"
                    tools:text="@string/st_quick_search_parking" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/scl_gourmet"
                clickCommand="@{() -> MainSearchView.onClickQuickSearch(2)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scl_car_washing"
                app:layout_constraintStart_toEndOf="@+id/scl_pull_up"
                app:layout_constraintTop_toBottomOf="@+id/sub_line_view"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/iv_gourmet"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:src="@drawable/img_basic_ic_gourmet"
                    app:layout_constraintEnd_toEndOf="@+id/scl_gourmet"
                    app:layout_constraintStart_toStartOf="@id/scl_gourmet"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_gourmet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="@+id/scl_gourmet"
                    app:layout_constraintStart_toStartOf="@id/scl_gourmet"
                    app:layout_constraintTop_toBottomOf="@+id/iv_gourmet"
                    tools:text="@string/st_quick_search_food" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/scl_car_washing"
                clickCommand="@{() -> MainSearchView.onClickQuickSearch(3)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/scl_more"
                app:layout_constraintStart_toEndOf="@+id/scl_gourmet"
                app:layout_constraintTop_toBottomOf="@+id/sub_line_view"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/iv_car_washing"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:src="@drawable/img_basic_ic_car_washing"
                    app:layout_constraintEnd_toEndOf="@+id/scl_car_washing"
                    app:layout_constraintStart_toStartOf="@id/scl_car_washing"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_car_washing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="@+id/scl_car_washing"
                    app:layout_constraintStart_toStartOf="@id/scl_car_washing"
                    app:layout_constraintTop_toBottomOf="@+id/iv_car_washing"
                    tools:text="@string/st_quick_search_car_washing" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/scl_more"
                clickCommand="@{() -> MainSearchView.onClickQuickSearch(4)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                android:layout_marginEnd="@dimen/dp_49"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/scl_car_washing"
                app:layout_constraintTop_toBottomOf="@+id/sub_line_view"
                app:layout_constraintTop_toTopOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/iv_more"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:src="@drawable/img_basic_ic_more"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="@+id/scl_more"
                    app:layout_constraintStart_toStartOf="@id/scl_more"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="@string/st_quick_search_more"
                    android:textColor="@color/search_quick_tab_view_color"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="@+id/scl_more"
                    app:layout_constraintStart_toStartOf="@id/scl_more"
                    app:layout_constraintTop_toBottomOf="@+id/iv_more" />
            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
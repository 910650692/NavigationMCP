<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.sgm.navi.scene.ui.search.SearchPhoneDialog.PhoneListAdapter.MyEventHandle" />
        <variable
            name="phoneText"
            type="String" />
    </data>

    <com.sgm.navi.ui.view.SkinTextView
        android:id="@+id/phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@{phoneText}"
        android:onClick="@{() -> handler.toPhone(phoneText)}"
        tools:text="00-0000000"
        android:textSize="@dimen/sp_29"
        android:textColor="@color/traffic_sub_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</layout>
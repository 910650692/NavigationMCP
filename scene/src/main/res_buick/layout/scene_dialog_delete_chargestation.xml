<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            style="@style/dialog_buick_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/clear_title"
                style="@style/dialog_buick_title"
                android:gravity="center"
                android:paddingTop="@dimen/dp_70"
                android:paddingHorizontal="@dimen/dp_100"
                android:text="@string/delete_charge_station_title"
                app:layout_constraintBottom_toTopOf="@+id/clear_content"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/clear_content"
                style="@style/dialog_buick_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_100"
                android:gravity="center"
                android:text="@string/delete_charge_station_content"
                app:layout_constraintBottom_toTopOf="@+id/dialog_button_layout"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sgm.navi.ui.view.SkinView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/setting_line"
                android:layout_marginHorizontal="@dimen/dp_55"
                app:layout_constraintBottom_toTopOf="@+id/dialog_button_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/dialog_button_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_128"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_commit"
                    style="@style/dialog_buick_positive_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/delete_all" />

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/dialog_line"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/setting_line" />

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_cancel"
                    style="@style/dialog_buick_negative_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/reminder_dialog_cancel" />

            </com.sgm.navi.ui.view.SkinLinearLayout>
        </com.sgm.navi.ui.view.SkinConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_route_via_charge_focus_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/route_charge_station_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="快4/4"
            android:textColor="@color/layer_route_replace_charge_slow_text_color"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/route_charge_station_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="慢4/4"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/layer_route_guidance_via_charge_text_color"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/layer_icon_route_via_point_focus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
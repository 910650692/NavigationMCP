<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/route_end_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_search_end_bg"
        android:textColor="@color/layer_route_end_point_detail_color"
        android:textSize="@dimen/sp_22"
        app:layout_constraintStart_toStartOf="@+id/route_end_bg"
        app:layout_constraintTop_toTopOf="@+id/route_end_bg"
        tools:text="电量剩余20%" />


    <ImageView
        android:id="@+id/route_end_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_140"
        android:layout_marginTop="@dimen/dp_60"
        android:src="@drawable/layer_search_end_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/route_end_business"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@drawable/layer_image_route_end_business_hours_bg"
        android:paddingHorizontal="@dimen/dp_12"
        android:gravity="center"
        android:textColor="@color/layer_route_via_charge_time_text_color"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toTopOf="@+id/route_end_bg"
        app:layout_constraintEnd_toEndOf="@+id/route_end_bg"
        app:layout_constraintStart_toStartOf="@+id/route_end_bg"
        tools:text="营业时间 08:00-20:00" />

    <ImageView
        android:id="@+id/route_end_parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/layer_image_parking_available"
        app:layout_constraintEnd_toEndOf="@+id/route_end_bg"
        app:layout_constraintStart_toStartOf="@+id/route_end_bg"
        app:layout_constraintTop_toBottomOf="@+id/route_end_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>
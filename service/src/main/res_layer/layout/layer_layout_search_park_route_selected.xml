<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/layer_image_search_park_route_selected_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_park_route_icon_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layer_image_search_park_route_icon_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/search_park_route_title_text"
        tools:text="当前车位充足"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/layer_search_park_route_title_selected_color"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/search_park_route_icon_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/search_park_route_title_text"
        app:layout_constraintStart_toStartOf="@+id/search_park_route_title_text"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_park_route_detail_percentage_text"
            tools:text="空28%"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/layer_search_park_route_detail_default_selected_color"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/search_park_route_detail_total_text"
            tools:text="共198"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/layer_search_park_route_detail_default_selected_color"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
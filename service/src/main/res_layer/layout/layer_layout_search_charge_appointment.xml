<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/search_charge_appointment_text"
        android:background="@drawable/shape_search_end_bg"
        android:layout_marginStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_20"
        tools:text="已预约"
        android:textStyle="bold"
        android:textColor="@color/layer_search_charge_appointment_color"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>


    <ImageView
        android:id="@+id/search_charge_focused"
        android:src="@drawable/layer_icon_search_charge_default_focused"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
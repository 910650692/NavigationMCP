<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layer_image_search_along_way_charge_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/search_along_way_charge_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="123"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/layer_image_route_via_charge_position_bg"
        android:textSize="@dimen/sp_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/search_along_way_charge_fast"
        app:layout_constraintStart_toEndOf="@+id/search_along_way_charge_position"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="快6/6"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/layer_route_replace_charge_fast_text_color"
        android:textSize="@dimen/sp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/search_along_way_charge_slow"
        app:layout_constraintStart_toEndOf="@+id/search_along_way_charge_fast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        tools:text="慢2/6"
        android:textColor="@color/layer_route_replace_charge_slow_text_color"
        android:textSize="@dimen/sp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/search_along_way_charge_select_status"
        app:layout_constraintStart_toEndOf="@+id/search_along_way_charge_slow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/layer_image_search_along_way_charge_add"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
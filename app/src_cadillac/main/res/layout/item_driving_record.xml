<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.sgm.navi.service.define.user.usertrack.DrivingRecordDataBean" />
        <variable
            name="holder"
            type="com.sgm.navi.hmi.drivingrecord.adapter.DrivingRecordAdapter.Holder" />
    </data>
    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_204"
        android:clickable="true">

        <com.sgm.navi.ui.view.SwipeMenuLayout
            android:id="@+id/swipe_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:layout_marginStart="@dimen/dp_52"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                style="@style/style_mfc_config"
                android:id="@+id/item_view"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_204">

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/item_driving_start_img"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:focusable="false"
                    android:background="@drawable/bg_start_point"
                    app:layout_constraintBottom_toBottomOf="@id/item_driving_start_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/item_driving_start_name" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/item_driving_start_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_37"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_driving_start_img" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/item_driving_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_52"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/item_driving_start_name"
                    app:layout_constraintBottom_toBottomOf="@+id/item_driving_start_name"/>

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/item_driving_end_img"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:focusable="false"
                    android:background="@drawable/bg_end_point"
                    app:layout_constraintBottom_toBottomOf="@id/item_driving_end_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/item_driving_end_name" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/item_driving_end_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_37"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    app:layout_constraintStart_toEndOf="@+id/item_driving_end_img"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/item_driving_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_52"
                    android:textSize="@dimen/sp_38"
                    android:focusable="false"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    app:layout_constraintTop_toTopOf="@id/item_driving_end_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/item_driving_end_name"/>

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginEnd="@dimen/dp_52"
                    android:focusable="false"
                    android:background="@color/setting_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/item_driving_delete"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_204"
                android:gravity="center"
                android:focusable="false"
                android:background="@color/setting_delete_red"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.sgm.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:focusable="false"
                    android:src="@drawable/img_favorite_delete"/>

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_item_delete"
                    android:focusable="false"
                    android:textColor="@color/setting_white"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textSize="@dimen/sp_38" />
            </com.sgm.navi.ui.view.SkinLinearLayout>
        </com.sgm.navi.ui.view.SwipeMenuLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.route.RouteViewModel" />
    </data>
    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_922"
        android:layout_height="wrap_content"
        android:visibility="@{ViewModel.getIncludePageVisibility() == 1 ? View.VISIBLE : View.GONE}"
        android:clickable="true"
        android:focusable="false">

        <com.sgm.navi.ui.view.SkinView
            android:id="@+id/route_detail_info_bg_title"
            android:layout_width="@dimen/dp_922"
            android:layout_height="@dimen/dp_254"
            android:background="@drawable/bg_shadow_navi_cadillac"
            android:focusable="false"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <com.sgm.navi.ui.view.SkinImageView
            style="@style/style_mfc_config"
            android:id="@+id/route_detail_info_img_close"
            clickCommand="@{ViewModel.getCloseDetailsRouteClick()}"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_74"
            android:layout_marginStart="@dimen/dp_71"
            android:src="@drawable/img_route_back"
            app:layout_constraintBottom_toBottomOf="@+id/route_detail_info_bg_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/route_detail_info_bg_title" />

        <com.sgm.navi.ui.view.SkinTextView
            style="@style/style_mfc_config_no_bg"
            android:id="@+id/route_detail_info_tv_sim_navi"
            clickCommand="@{ViewModel.getStartSimNaviClick()}"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_96"
            android:layout_marginEnd="@dimen/dp_81"
            android:background="@drawable/bg_base_mfc_cadillac_gery_bg_selector"
            android:gravity="center"
            android:text="@string/route_sim_navi"
            android:textColor="@color/text_route_defult"
            android:textSize="@dimen/sp_38"
            android:visibility="@{ViewModel.getRouteDetailsVisibility() ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/route_detail_info_bg_title"
            app:layout_constraintEnd_toEndOf="@id/route_detail_info_bg_title"
            app:layout_constraintTop_toTopOf="@id/route_detail_info_bg_title"
            tools:visibility="visible" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/route_detail_info_tv_avoid"
            clickCommand="@{ViewModel.getAvoidClick()}"
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_96"
            android:layout_marginEnd="@dimen/dp_81"
            android:background="@drawable/bg_base_mfc_cadillac_blue_bg_selector"
            android:clickable="@{ViewModel.getAvoidClickable()}"
            android:alpha="@{ViewModel.getAvoidClickable() ? 1.0f : 0.5f}"
            android:gravity="center"
            android:text="@string/route_avoid"
            android:textColor="@color/always_white"
            android:textSize="@dimen/sp_38"
            android:visibility="@{ViewModel.getRouteDetailsVisibility() ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/route_detail_info_bg_title"
            app:layout_constraintEnd_toEndOf="@id/route_detail_info_bg_title"
            app:layout_constraintTop_toTopOf="@id/route_detail_info_bg_title"
            tools:visibility="gone" />

        <com.sgm.navi.ui.view.SkinTextView
            style="@style/style_mfc_config_no_bg"
            android:id="@+id/route_detail_info_tv_avoid_road"
            clickCommand="@{ViewModel.getAvoidRoadClick()}"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_96"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/bg_base_mfc_cadillac_blue_bg_selector"
            android:gravity="center"
            android:text="@string/route_avoid_road"
            android:textColor="@color/route_white"
            android:textSize="@dimen/sp_38"
            android:visibility="@{ViewModel.getRouteDetailsVisibility() ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/route_detail_info_bg_title"
            app:layout_constraintEnd_toStartOf="@+id/route_detail_info_tv_sim_navi"
            app:layout_constraintTop_toTopOf="@id/route_detail_info_bg_title" />

        <com.sgm.navi.scene.ui.route.SceneRouteDetailsResultListView
            android:id="@+id/route_detail_info_scene_route_details_result"
            android:layout_width="@dimen/dp_922"
            android:layout_height="@dimen/dp_930"
            android:layout_marginTop="@dimen/dp_m_82"
            android:background="@drawable/bg_shadow_navi_cadillac"
            android:focusable="false"
            android:paddingHorizontal="@dimen/dp_51"
            android:paddingVertical="@dimen/dp_51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/route_detail_info_bg_title" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
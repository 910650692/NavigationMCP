<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.favorite.FavoriteViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1104"
        android:layout_height="match_parent"
        android:focusable="false"
        android:orientation="vertical">

        <com.android.car.ui.FocusParkingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/favorite_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--同步更新时间-->
            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/favorite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_sync_tip"
                android:textColor="@color/setting_text_preference"
                android:textSize="@dimen/sp_30"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/favorite_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_text_preference"
                android:textSize="@dimen/sp_30"
                android:focusable="false"
                android:text="@{ViewModel.mSyncTime}"
                app:layout_constraintStart_toEndOf="@+id/favorite_title"
                app:layout_constraintTop_toTopOf="parent" />

            <!--同步按钮-->
            <com.sgm.navi.ui.view.SkinButton
                android:id="@+id/favorite_sync"
                clickCommand="@{ViewModel.mFavoriteSync}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_40"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_30"
                android:visibility="gone"
                android:text="@string/favorite_sync"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.sgm.navi.ui.view.SkinLinearLayout>

        <!--收藏列表-->
        <com.sgm.navi.ui.view.SkinRecyclerView
            android:id="@+id/rv_favorite_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favorite_title_layout" />

        <com.android.car.ui.FocusArea
            android:id="@+id/focus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:nudgeDown="@+id/focus_content"
            app:nudgeUp="@+id/focus_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/layout_top"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_160"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_32"
                android:background="@drawable/bg_setting_top_oval"
                android:orientation="horizontal"
                android:visibility="gone"
                android:focusable="true">

                <com.sgm.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:layout_marginTop="@dimen/dp_11"
                    android:focusable="false"
                    android:src="@drawable/img_favorite_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_top"
                    android:focusable="false"
                    android:textColor="@color/setting_text_preference"
                    android:textSize="@dimen/sp_38"
                    android:layout_marginBottom="@dimen/dp_25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </com.sgm.navi.ui.view.SkinConstraintLayout>
        </com.android.car.ui.FocusArea>
    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
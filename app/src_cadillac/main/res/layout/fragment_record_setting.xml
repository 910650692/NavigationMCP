<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.drivingrecord.recordsetting.RecordSettingViewModel" />
    </data>
    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1578"
        android:layout_height="@dimen/dp_1000"
        android:clickable="true"
        android:background="@drawable/bg_setting_fragment"
        android:orientation="vertical">

        <com.android.car.ui.FocusParkingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/record_setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.car.ui.FocusArea
                android:id="@+id/focus_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:nudgeDown="@+id/record_setting_focus"
                app:nudgeUp="@+id/record_setting_focus">

                <com.fy.navi.ui.view.SkinView
                    clickCommand="@{ViewModel.mCloseRecordSetting}"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_48"
                    android:focusable="true"
                    android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.android.car.ui.FocusArea>

            <com.fy.navi.ui.view.SkinImageView
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:src="@drawable/img_setting_close"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_48"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/driving_record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driving_record_setting"
                android:focusable="false"
                android:textColor="@color/setting_bg_tab_text_select"
                android:textSize="@dimen/sp_46"
                android:layout_marginTop="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_697"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </com.fy.navi.ui.view.SkinConstraintLayout>


        <com.android.car.ui.FocusArea
            android:id="@+id/record_setting_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:nudgeDown="@+id/focus_close"
            app:nudgeUp="@+id/focus_close">

            <com.fy.navi.ui.view.SkinView
                clickCommand="@{ViewModel.mSwitchRecordSetting}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_202"
                android:layout_marginTop="@dimen/dp_173"
                android:focusable="true"
                android:focusedByDefault="true"
                android:layout_marginStart="@dimen/dp_52"
                android:layout_marginEnd="@dimen/dp_52"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector" />

            <com.fy.navi.ui.view.SkinView
                clickCommand="@{ViewModel.mClearDivingRecord}"
                android:id="@+id/record_setting_clear_focus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210"
                android:focusable="true"
                android:layout_marginStart="@dimen/dp_52"
                android:layout_marginEnd="@dimen/dp_52"
                android:background="@drawable/bg_base_mfc_cadillac_bg_selector" />

        </com.android.car.ui.FocusArea>

        <com.fy.navi.ui.view.SkinCheckBox
            clickCommand="@{ViewModel.mSwitchRecordSetting}"
            android:id="@+id/record_setting_auto_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_marginStart="@dimen/dp_52"
            android:focusable="false"
            android:checked="@{ViewModel.mIsAutoRecord}"
            android:button="@drawable/setting_custom_thumb"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_title"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/record_setting_auto_check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_78"
            android:layout_marginStart="@dimen/dp_32"
            android:text="@string/driving_record_auto"
            android:focusable="false"
            android:textColor="@color/setting_bg_tab_text_select"
            android:textSize="@dimen/sp_46"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_title"
            app:layout_constraintStart_toEndOf="@+id/record_setting_auto_check"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/record_setting_auto_check_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="@string/driving_record_auto_tip"
            android:textColor="@color/setting_bg_tab_text_unselect"
            android:textSize="@dimen/sp_38"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_auto_check_text"
            app:layout_constraintStart_toStartOf="@+id/record_setting_auto_check_text"/>

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/record_setting_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:focusable="false"
            android:background="@color/setting_line"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginEnd="@dimen/dp_52"
            android:layout_marginStart="@dimen/dp_52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_auto_check_des" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/record_setting_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:text="@string/driving_record_clear"
            android:focusable="false"
            android:textColor="@color/setting_bg_tab_text_select"
            android:textSize="@dimen/sp_46"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_line"
            app:layout_constraintStart_toStartOf="@+id/record_setting_auto_check"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/record_setting_clear_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="@string/driving_record_clear_tip"
            android:textColor="@color/setting_bg_tab_text_unselect"
            android:textSize="@dimen/sp_38"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_clear"
            app:layout_constraintStart_toStartOf="@+id/record_setting_clear"/>

        <com.fy.navi.ui.view.SkinButton
            clickCommand="@{ViewModel.mClearDivingRecord}"
            android:id="@+id/record_setting_clear_btn"
            android:layout_width="@dimen/dp_208"
            android:layout_height="@dimen/dp_68"
            android:layout_marginTop="@dimen/dp_67"
            android:layout_marginEnd="@dimen/dp_52"
            android:background="@drawable/bg_record_setting"
            android:text="@string/driving_record_clear_toast"
            android:focusable="false"
            android:textColor="@color/setting_bg_to_login_text"
            android:textSize="@dimen/sp_38"
            app:layout_constraintTop_toTopOf="@+id/record_setting_line"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.fy.navi.ui.view.SkinView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:focusable="false"
            android:background="@color/setting_line"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginEnd="@dimen/dp_52"
            android:layout_marginStart="@dimen/dp_52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/record_setting_clear_des" />
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>

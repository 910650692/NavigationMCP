<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fy.navi.hmi.search.mainsearch.MainSearchViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        clickCommand="@{viewModel.RootClick}"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">
        <!--MFC___FocusParkingView-->
        <com.android.car.ui.FocusParkingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                <!--MFC___Map FocusArea-->
                <com.android.car.ui.FocusArea
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:defaultFocusOverridesHistory="true"
                    app:wrapAround="true">

                    <com.fy.navi.scene.ui.search.SceneMainSearchTopPartView
                        android:id="@+id/search_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.fy.navi.scene.ui.search.SceneMainSearchBottomPartView
                        android:id="@+id/scene_nested_scroll_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20" />
                </com.android.car.ui.FocusArea>
            </com.fy.navi.ui.view.SkinLinearLayout>
        </layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.setting.SettingViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1680"
        android:layout_height="@dimen/dp_1102"
        android:layout_marginStart="@dimen/dp_259"
        android:clickable="true"
        android:focusable="false"
        android:padding="@dimen/dp_51"
        android:background="@drawable/bg_shadow_navi_cadillac">

        <com.android.car.ui.FocusParkingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.android.car.ui.FocusArea
            android:id="@+id/focus_tab"
            app:nudgeRight="@+id/focus_page"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.sgm.navi.ui.view.SkinImageView
                style="@style/style_mfc_config"
                clickCommand="@{ViewModel.mFinishSetting}"
                android:id="@+id/setting_close"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_48"
                android:contentDescription="@string/app_currency_close"
                android:src="@drawable/img_setting_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.scene.ui.setting.SceneVerticalTabLayout
                android:id="@+id/tabLayout"
                android:layout_width="@dimen/dp_288"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@null"
                android:focusedByDefault="true"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:focusable="false"
                app:tabBackground="@drawable/bg_setting_tab"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                app:tabPaddingStart="@dimen/dp_0"
                app:tabPaddingEnd="@dimen/dp_0"/>
        </com.android.car.ui.FocusArea>

        <com.sgm.navi.ui.view.SkinView
            android:id="@+id/lines"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:background="@color/setting_line"
            android:layout_marginTop="@dimen/dp_144"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_35"
            app:layout_constraintStart_toEndOf="@+id/focus_tab"/>

        <com.android.car.ui.FocusArea
            android:id="@+id/focus_page"
            app:nudgeLeft="@+id/focus_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/lines">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_container"
                android:layout_width="0dp"
                android:focusable="false"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_52"
                android:layout_marginBottom="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_45"
                android:layout_weight="1" />
        </com.android.car.ui.FocusArea>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <View
            android:id="@+id/view_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dp_670"
            android:layout_marginVertical="@dimen/dp_115"
            android:focusable="false"
            android:background="@drawable/shape_bg_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/iv_pre"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_marginStart="@dimen/dp_30"
            android:focusable="false"
            android:src="@drawable/img_basic_ic_back"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_marginEnd="@dimen/dp_30"
            android:focusable="false"
            android:src="@drawable/img_right"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginBottom="@dimen/dp_48"
            android:textColor="@color/main_map_limit_current_city"
            android:textSize="@dimen/sp_40"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            tools:text="1/4" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_margin="@dimen/dp_30"
            android:focusable="false"
            android:src="@drawable/icon_poi_close"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
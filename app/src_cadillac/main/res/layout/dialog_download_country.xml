<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1694"
            android:layout_height="@dimen/dp_478"
            android:paddingHorizontal="@dimen/dp_47"
            android:paddingVertical="@dimen/dp_39"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_shadow_system_cadillac">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offline_item_delete_message"
                android:textColor="@color/color_black_70"
                android:textSize="@dimen/sp_46"
                android:layout_marginTop="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/dialog_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_80"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_commit"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/dp_432"
                    android:layout_height="@dimen/dp_100"
                    android:background="@drawable/bg_setting_dialog_confirm"
                    android:gravity="center"
                    android:text="@string/offline_item_city_status"
                    android:textColor="@color/setting_white"
                    android:textSize="@dimen/sp_38" />

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_cancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/dp_432"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginStart="@dimen/dp_40"
                    android:background="@drawable/bg_setting_dialog_cancel"
                    android:text="@string/offline_item_cancel_delete"
                    android:textColor="@color/color_black_70"
                    android:textSize="@dimen/sp_38" />

            </com.sgm.navi.ui.view.SkinLinearLayout>
        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
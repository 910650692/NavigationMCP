<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.mapdata.near.NearMapDataViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1578"
        android:layout_height="@dimen/dp_1000"
        android:background="@drawable/bg_setting_fragment"
        android:clickable="true"
        android:focusable="false">

        <com.android.car.ui.FocusParkingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.fy.navi.ui.view.SkinRelativeLayout
            android:id="@+id/near_offline_map_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_164"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.android.car.ui.FocusArea
                android:id="@+id/focus_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:nudgeDown="@+id/focus_content"
                app:nudgeUp="@+id/focus_content">

                <com.fy.navi.ui.view.SkinView
                    clickCommand="@{ViewModel.mCloseNearMapDataView}"
                    android:layout_width="@dimen/dp_138"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_base_mfc_cadillac_bg_selector"
                    android:focusable="true" />

            </com.android.car.ui.FocusArea>

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_offline_map_back"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_48"
                android:focusable="false"
                android:src="@drawable/img_setting_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:focusable="false"
                android:text="@string/offline_near_offline_data"
                android:textColor="@color/setting_bg_tab_text_select"
                android:textSize="@dimen/sp_46"
                app:layout_constraintStart_toEndOf="@+id/iv_offline_map_back"
                app:layout_constraintTop_toTopOf="parent" />
        </com.fy.navi.ui.view.SkinRelativeLayout>

        <com.android.car.ui.FocusArea
            android:id="@+id/focus_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/near_offline_map_title"
            app:nudgeDown="@+id/focus_close"
            app:nudgeUp="@+id/focus_close">
            <!--附件城市地图数据-->
            <com.fy.navi.ui.view.SkinRecyclerView
                android:id="@+id/rv_near_offline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_52"
                android:layout_marginEnd="@dimen/dp_52" />
        </com.android.car.ui.FocusArea>
    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
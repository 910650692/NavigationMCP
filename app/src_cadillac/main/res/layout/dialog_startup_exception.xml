<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_startup_exception_root">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_1600"
            android:layout_height="@dimen/dp_500"
            android:layout_marginStart="@dimen/dp_310"
            android:layout_marginBottom="@dimen/dp_180"
            android:background="@drawable/startup_exception_bg_dialog"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_80"
                android:text="@string/startup_exception_title"
                android:textColor="@color/dialog_startup_exception_title"
                android:textSize="@dimen/sp_52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/startup_exception_content"
                android:textColor="@color/dialog_startup_exception_content"
                android:textSize="@dimen/sp_46"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="@dimen/dp_432"
                android:layout_height="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_80"
                android:background="@drawable/bg_shape_commit_button"
                android:gravity="center"
                android:text="@string/startup_exception_exit"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_38"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
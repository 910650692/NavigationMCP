<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.sgm.navi.hmi.setting.others.protocol.SettingOthersProtocolCenterViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:id="@+id/ll_protocol_center_root"
        android:layout_width="@dimen/dp_1680"
        android:layout_height="@dimen/dp_1102"
        android:padding="@dimen/dp_51"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical"
        android:background="@drawable/bg_shadow_navi_cadillac">

        <com.android.car.ui.FocusParkingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/ll_protocol_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:focusable="false"
            android:orientation="vertical">

            <com.android.car.ui.FocusArea
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_152"
                android:clickable="false">


                <com.sgm.navi.ui.view.SkinImageView
                    clickCommand="@{viewModel.mProtocolCenterBack}"
                    style="@style/style_mfc_config"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_74"
                    android:src="@drawable/img_setting_back"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_48"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_privacy_protocol_center"
                    android:textSize="@dimen/sp_46"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dp_52"
                    android:layout_marginStart="@dimen/dp_697"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinConstraintLayout
                clickCommand="@{viewModel.mOpenProtocolCenterTerm}"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_152">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_privacy_term"
                    android:textSize="@dimen/sp_46"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dp_52"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.sgm.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:focusable="false"
                    android:src="@drawable/img_right"
                    android:layout_marginEnd="@dimen/dp_52"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:focusable="false"
                android:layout_marginStart="@dimen/dp_52"
                android:layout_marginEnd="@dimen/dp_52"
                android:background="@color/setting_line"/>

            <com.sgm.navi.ui.view.SkinConstraintLayout
                clickCommand="@{viewModel.mOpenProtocolCenterPrivacy}"
                android:layout_width="match_parent"
                android:focusable="true"
                android:layout_height="@dimen/dp_152"
                android:layout_marginTop="@dimen/dp_24">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_privacy_policy"
                    android:textSize="@dimen/sp_46"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dp_52"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.sgm.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:focusable="false"
                    android:src="@drawable/img_right"
                    android:layout_marginEnd="@dimen/dp_52"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:focusable="false"
                android:layout_marginStart="@dimen/dp_52"
                android:layout_marginEnd="@dimen/dp_52"
                android:background="@color/setting_line"/>
            </com.android.car.ui.FocusArea>
        </com.sgm.navi.ui.view.SkinLinearLayout>

        <com.sgm.navi.ui.view.SkinLinearLayout
            android:id="@+id/protocol_center_policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/protocol_center_title_layout"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_178">

                <com.android.car.ui.FocusArea
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.sgm.navi.ui.view.SkinView
                        clickCommand="@{viewModel.mCloseProtocolCenter}"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/dp_81"
                        android:layout_marginTop="@dimen/dp_74"/>

                </com.android.car.ui.FocusArea>

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/protocol_center_back"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@drawable/img_back"
                    android:focusable="false"
                    android:layout_marginStart="@dimen/dp_81"
                    android:layout_marginTop="@dimen/dp_74"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/protocol_center_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_page_service_title"
                    android:textSize="@dimen/sp_52"
                    android:focusable="false"
                    android:textColor="@color/color_black_90"
                    android:layout_marginStart="@dimen/dp_201"
                    app:layout_constraintTop_toTopOf="@+id/protocol_center_back"
                    app:layout_constraintBottom_toBottomOf="@+id/protocol_center_back"
                    app:layout_constraintStart_toStartOf="parent" />

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinScrollView
                android:id="@+id/protocol_center_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:paddingBottom="@dimen/dp_80">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/protocol_center_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_page_service_content"
                    android:textColor="@color/color_black_90"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_46"
                    android:paddingHorizontal="@dimen/dp_100"/>

            </com.sgm.navi.ui.view.SkinScrollView>

        </com.sgm.navi.ui.view.SkinLinearLayout>

    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>
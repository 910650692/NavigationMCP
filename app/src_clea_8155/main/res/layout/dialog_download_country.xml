<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1452"
            android:layout_height="@dimen/dp_413"
            android:paddingHorizontal="@dimen/dp_21"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_39"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_shadow_system_ndlc_8155">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_94"
                android:text="@string/offline_item_delete_message"
                android:textColor="@color/color_black_70"
                android:textSize="@dimen/sp_34"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/dialog_button_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_94"
                android:layout_marginStart="@dimen/dp_128"
                android:layout_marginEnd="@dimen/dp_128"
                android:layout_marginBottom="@dimen/dp_56"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_commit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/setting_check_dialog_confirm_bg"
                    android:text="@string/offline_item_city_status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_34" />

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_38"
                    android:background="@drawable/setting_check_dialog_cancel_bg"
                    android:text="@string/offline_item_cancel_delete"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_34" />

            </com.sgm.navi.ui.view.SkinLinearLayout>
        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
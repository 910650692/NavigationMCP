<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/reminderRootIndex"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1760"
            android:layout_height="@dimen/dp_800"
            android:background="@drawable/bg_confirm_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_48"
                android:text="@string/reminder_use_agreement"
                android:textSize="@dimen/sp_46"
                android:textColor="@color/dialog_title_color"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_160"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/ll_sub_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_164"
                android:layout_marginTop="@dimen/dp_65"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/dialog_title">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/reminder_click_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_32"
                    android:textColor="@color/authorization_request_content"
                    android:text="@string/reminder_click_to_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/reminder_terms_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_32"
                    android:textColor="@color/use_reminder_color"
                    android:layout_marginStart="@dimen/dp_7"
                    android:text="@string/reminder_page_service"
                    app:layout_constraintStart_toEndOf="@+id/reminder_click_view"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

                <com.sgm.navi.ui.view.SkinTextView
                    style="@style/dialog_buick_sub_title"
                    android:layout_marginStart="@dimen/dp_7"
                    android:text="ï¼Œ"
                    app:layout_constraintStart_toEndOf="@+id/reminder_terms_service"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/reminder_page_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_32"
                    android:textColor="@color/use_reminder_color"
                    android:text="@string/reminder_page_privacy"
                    app:layout_constraintStart_toEndOf="@+id/reminder_click_view1"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

            </com.sgm.navi.ui.view.SkinLinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/net_scrollView"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_297"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@drawable/custom_scrollbar_thumb"
                android:layout_marginTop="@dimen/dp_48"
                app:layout_constraintEnd_toEndOf="@id/ll_sub_content"
                app:layout_constraintStart_toStartOf="@id/ll_sub_content"
                app:layout_constraintTop_toBottomOf="@+id/ll_sub_content">

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_32"
                    android:textColor="@color/authorization_request_content"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/reminder_user_terms_personal_info" />

            </androidx.core.widget.NestedScrollView>

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/dialog_content"
                android:layout_width="@dimen/dp_1100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/color_black_80"
                android:textSize="@dimen/sp_36"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_title" />


            <com.sgm.navi.ui.view.SkinLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_88"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_664"
                android:layout_marginStart="@dimen/dp_160"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/dialog_commit"
                    android:layout_width="@dimen/dp_352"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/agree"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_29"
                    android:background="@drawable/authorization_agree_bg"/>

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/dialog_cancel"
                    android:layout_width="@dimen/dp_352"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_29"
                    android:text="@string/not_agree_and_exit"
                    android:layout_marginStart="@dimen/dp_40"
                    android:background="@drawable/authorization_disagree_bg"/>

            </com.sgm.navi.ui.view.SkinLinearLayout>

        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
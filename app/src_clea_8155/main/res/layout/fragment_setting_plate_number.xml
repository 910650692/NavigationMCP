<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.fy.navi.hmi.setting.guide.platenumber.SettingPlateNumberViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1292"
        android:layout_height="@dimen/dp_1255"
        android:clickable="true"
        android:padding="@dimen/dp_34"
        android:background="@drawable/bg_shadow_navi_ndlc_8155">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/setting_plate_number_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_138"
                android:orientation="horizontal">

                <com.fy.navi.ui.view.SkinImageView
                    clickCommand="@{viewModel.mClosePlateNumber}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@drawable/img_setting_back" />

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_452"
                    android:text="@string/setting_guide_plate_number_my"
                    android:textColor="@color/setting_bg_tab_text_select"
                    android:textSize="@dimen/sp_38" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/setting_plate_number_finish"
                    clickCommand="@{viewModel.mPlateNumberInputFinish}"
                    android:layout_width="@dimen/dp_148"
                    android:layout_height="@dimen/dp_76"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_348"
                    android:background="@drawable/bg_setting_preference_select"
                    android:gravity="center"
                    android:text="@string/setting_guide_plate_number_finish"
                    android:textColor="@color/setting_white"
                    android:textSize="@dimen/sp_30" />
            </com.fy.navi.ui.view.SkinLinearLayout>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/setting_plate_number_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_56"
                android:text="@string/setting_guide_plate_number_text"
                android:textColor="@color/setting_bg_tab_text_select"
                android:textSize="@dimen/sp_34"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setting_plate_number_title" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/setting_plate_number_province"
                clickCommand="@{viewModel.mShowProvinceKeyboard}"
                android:layout_width="@dimen/dp_176"
                android:layout_height="@dimen/dp_76"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/bg_setting_tab_select"
                android:drawableEnd="@drawable/img_route_down"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_22"
                android:text="@string/setting_guide_plate_number_default"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/setting_bg_tab_text_unselect"
                app:layout_constraintStart_toEndOf="@+id/setting_plate_number_title_text"
                app:layout_constraintTop_toBottomOf="@+id/setting_plate_number_title" />

            <com.fy.navi.ui.view.SkinEditText
                android:id="@+id/setting_plate_number_number"
                clickCommand="@{viewModel.mShowPlateNumberKeyboard}"
                android:layout_width="@dimen/dp_776"
                android:layout_height="@dimen/dp_76"
                android:layout_marginStart="@dimen/dp_16"
                android:background="@drawable/bg_setting_car_number"
                android:hint="@string/setting_guide_plate_number_input"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/setting_bg_tab_text_select"
                app:layout_constraintStart_toEndOf="@+id/setting_plate_number_province"
                app:layout_constraintTop_toTopOf="@+id/setting_plate_number_province" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/setting_plate_number_clear"
                clickCommand="@{viewModel.mClearPlateNumber}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_24"
                android:src="@drawable/img_plate_number_clear"
                app:layout_constraintEnd_toEndOf="@+id/setting_plate_number_number"
                app:layout_constraintTop_toTopOf="@+id/setting_plate_number_number" />

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/setting_guide_plate_number_tip"
                android:textColor="@color/setting_bg_tab_text_unselect"
                android:textSize="@dimen/sp_26"
                android:visibility="@{viewModel.mIsFocus ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="@+id/setting_plate_number_number"
                app:layout_constraintTop_toBottomOf="@+id/setting_plate_number_number" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/setting_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_55"
                android:text="@string/setting_guide_plate_number_car_type"
                android:textColor="@color/setting_bg_tab_text_select"
                android:textSize="@dimen/sp_34"
                app:layout_constraintStart_toStartOf="@+id/setting_plate_number_title_text"
                app:layout_constraintTop_toBottomOf="@+id/setting_plate_number_title_text" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/setting_car_type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:text="@string/setting_guide_plate_number_car_type_oil"
                android:textColor="@color/setting_bg_tab_text_unselect"
                android:textSize="@dimen/sp_34"
                app:layout_constraintStart_toEndOf="@+id/setting_car_type"
                app:layout_constraintTop_toTopOf="@+id/setting_car_type" />

        </com.fy.navi.ui.view.SkinConstraintLayout>


        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/setting_plate_number_keyboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_22"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.fy.navi.scene.ui.setting.ProvinceKeyboardView
                android:id="@+id/setting_province_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:rowWidth="@dimen/dp_136"
                app:rowHeight="@dimen/dp_76"
                app:provinceTextSize="30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.scene.ui.setting.PlateNumberKeyboardView
                android:id="@+id/setting_plate_number_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:numberRowHeight="@dimen/dp_76"
                app:numberRowWidth="@dimen/dp_107"
                app:thirdRowWidth="@dimen/dp_120"
                app:lastRowWidth="@dimen/dp_136"
                app:textSize="30"
                app:insertWidth="40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.fy.navi.ui.view.SkinConstraintLayout>

    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>

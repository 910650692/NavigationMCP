<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.limit.BaseLimitDriverViewModel" />
    </data>


    <com.sgm.navi.ui.view.SkinConstraintLayout
        clickCommand="@{ViewModel.rootClick}"
        android:layout_width="@dimen/dp_613"
        android:layout_height="@dimen/dp_676"
        android:clickable="true">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_163"
            android:paddingVertical="@dimen/dp_34"
            android:paddingHorizontal="@dimen/dp_34"
            android:background="@drawable/bg_shadow_navi_ndlc_8155">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_back"
                clickCommand="@{ViewModel.closeCitySelectionPage}"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:src="@drawable/img_limit_back"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginStart="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinEditText
                android:id="@+id/edit_text_id"
                android:hint="@string/limit_city_selection"
                android:layout_width="@dimen/dp_420"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_29"
                android:textColor="@color/black"
                android:textColorHint="@color/main_map_limit_hint_color"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/dp_4"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_554"
            android:background="@drawable/bg_shadow_navi_ndlc_8155"
            android:paddingVertical="@dimen/dp_34"
            android:paddingHorizontal="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_120"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/tv_current_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_37"
                android:textColor="@color/main_map_limit_current_city"
                android:textSize="@dimen/sp_26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/limit_selected_city" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/select_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_34"
                android:textColor="@color/main_map_limit_current"
                android:textSize="@dimen/sp_26"
                app:layout_constraintStart_toEndOf="@+id/tv_current_city"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="上海市" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/dp_21"
                android:paddingTop="@dimen/dp_27"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_current_city" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
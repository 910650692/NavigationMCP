<?xml version="1.0" encoding="utf-8"?>
<com.sgm.navi.ui.view.SkinConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:layout_width="1000dp"
    android:layout_height="match_parent"
    android:background="#99EEEEEE"
    android:padding="@dimen/dp_20">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test_version"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="调试信息："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/close"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="关闭"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_version" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/clean_activate"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="清除激活数据库存储"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/close" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_calibration"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="@string/test_calibration"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clean_activate" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_signal"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="@string/test_signal"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_calibration" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_open_cluster_activity"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="@string/test_open_cluster_activity"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_signal" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_close_cluster_activity"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:text="@string/test_close_cluster_activity"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_open_cluster_activity" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_show_dr"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="@dimen/dp_5"
                android:text="显示DR调试面板"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_close_cluster_activity"
                app:marquee="true" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_hide_dr"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/white"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="@dimen/dp_5"
                android:text="关闭DR调试面板"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                app:layout_constraintBottom_toBottomOf="@id/test_show_dr"
                app:layout_constraintStart_toEndOf="@id/test_show_dr"
                app:layout_constraintTop_toTopOf="@id/test_show_dr"
                app:marquee="true" />

            <com.sgm.navi.ui.view.SkinCheckBox
                android:id="@+id/navi_pos_record"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_54"
                android:layout_marginTop="20dp"
                android:button="@null"
                android:checked="false"
                android:drawableStart="@drawable/switch_route_button"
                android:gravity="top"
                android:text="定位日志"
                android:textSize="@dimen/sp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_show_dr" />

            <com.sgm.navi.ui.view.SkinCheckBox
                android:id="@+id/test_nav_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="nav日志开关"
                android:textSize="@dimen/sp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navi_pos_record" />

            <Spinner
                android:id="@+id/test_nai_log_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="@+id/test_nav_log"
                app:layout_constraintLeft_toRightOf="@+id/test_nav_log"
                app:layout_constraintTop_toTopOf="@+id/test_nav_log" />


            <com.sgm.navi.ui.view.SkinCheckBox
                android:id="@+id/test_gaode_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="高德日志开关"
                android:textSize="@dimen/sp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_nav_log" />

            <Spinner
                android:id="@+id/test_gaode_log_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="@+id/test_gaode_log"
                app:layout_constraintLeft_toRightOf="@+id/test_gaode_log"
                app:layout_constraintTop_toTopOf="@+id/test_gaode_log"
                android:visibility="gone"/>

            <com.sgm.navi.ui.view.SkinButton
                android:id="@+id/test_copy_bllog"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_setting_preference_select"
                android:text="@string/test_copy_bllog"
                android:textColor="@color/white_always"
                android:textSize="@dimen/sp_20"
                android:gravity="left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_gaode_log" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/test_copy_info"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:text="复制信息"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_copy_bllog" />

            <com.sgm.navi.ui.view.SkinCheckBox
                android:id="@+id/navi_record"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:button="@null"
                android:checked="false"
                android:drawableStart="@drawable/switch_route_button"
                android:gravity="top"
                android:text="@string/test_start_record"
                android:textSize="@dimen/sp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_copy_info"
                />

            <com.sgm.navi.ui.view.SkinCheckBox
                android:id="@+id/record_play"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_10"
                android:button="@null"
                android:checked="false"
                android:drawableStart="@drawable/switch_route_button"
                android:gravity="top"
                android:text="开始播放回放"
                android:textSize="@dimen/sp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/test_copy_info"
                />

            <com.sgm.navi.scene.ui.navi.GuidanceSimulationView
                android:id="@+id/navi_sim_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navi_record"/>

        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</com.sgm.navi.ui.view.SkinConstraintLayout>
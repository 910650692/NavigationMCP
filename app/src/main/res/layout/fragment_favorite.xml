<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.favorite.FavoriteViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_860"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/favorite_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--同步更新时间-->
            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/favorite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_sync_tip"
                android:textColor="@color/setting_text_preference"
                android:textSize="@dimen/sp_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/favorite_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/setting_text_preference"
                android:textSize="@dimen/sp_30"
                app:layout_constraintStart_toEndOf="@+id/favorite_title"
                app:layout_constraintTop_toTopOf="parent" />

            <!--同步按钮-->
            <com.fy.navi.ui.view.SkinButton
                android:id="@+id/favorite_sync"
                clickCommand="@{ViewModel.favoriteSync}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_40"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_30"
                android:visibility="gone"
                android:text="@string/favorite_sync"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.ui.view.SkinScrollView
            android:id="@+id/favorite_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_69"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favorite_title_layout">

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/favorite_layout"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="@dimen/dp_860"
                android:layout_height="wrap_content">

                <!--设置家-->
                <com.fy.navi.ui.view.SkinRelativeLayout
                    android:id="@+id/rl_favorite_home"
                    clickCommand="@{ViewModel.goSettingHome}"
                    android:layout_width="@dimen/dp_417"
                    android:layout_height="@dimen/dp_130"
                    android:background="@drawable/bg_setting_voice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/favorite_title">

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_13"
                        android:src="@drawable/img_favorite_home" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/favorite_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_95"
                        android:layout_marginTop="@dimen/dp_22"
                        android:text="@string/favorite_home"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_34" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/favorite_home_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/favorite_home"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginStart="@dimen/dp_95"
                        android:text="@string/favorite_setting"
                        android:textColor="@color/setting_tab_gray"
                        android:textSize="@dimen/sp_30" />

                    <com.fy.navi.ui.view.SkinImageView
                        clickCommand="@{ViewModel.moreHome}"
                        android:id="@+id/more_Home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/img_favorite_more" />
                </com.fy.navi.ui.view.SkinRelativeLayout>

                <!--设置公司-->
                <com.fy.navi.ui.view.SkinRelativeLayout
                    android:id="@+id/rl_favorite_company"
                    clickCommand="@{ViewModel.goSettingCompany}"
                    android:layout_width="@dimen/dp_417"
                    android:layout_height="@dimen/dp_130"
                    android:background="@drawable/bg_setting_voice"
                    android:layout_marginStart="@dimen/dp_24"
                    app:layout_constraintLeft_toRightOf="@+id/rl_favorite_home"
                    app:layout_constraintTop_toBottomOf="@+id/favorite_title">

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_13"
                        android:src="@drawable/img_favorite_company" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/favorite_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_95"
                        android:layout_marginTop="@dimen/dp_22"
                        android:text="@string/favorite_company"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_34" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/favorite_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/favorite_company"
                        android:layout_marginStart="@dimen/dp_95"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="@string/favorite_setting"
                        android:textColor="@color/setting_tab_gray"
                        android:textSize="@dimen/sp_30" />

                    <com.fy.navi.ui.view.SkinImageView
                        clickCommand="@{ViewModel.moreCompany}"
                        android:id="@+id/more_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_24"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/img_favorite_more" />
                </com.fy.navi.ui.view.SkinRelativeLayout>

                <com.fy.navi.ui.view.SkinCheckBox
                    clickCommand="@{ViewModel.showHomeCompanyDisplayed}"
                    android:id="@+id/switch_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="@{ViewModel.isHomeCompanyDisplayed}"
                    android:layout_marginTop="@dimen/dp_41"
                    android:background="@android:color/transparent"
                    android:button="@drawable/custom_thumb"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_favorite_home" />

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_favorite_switch"
                    android:textColor="@color/setting_text_preference"
                    android:textSize="@dimen/sp_30"
                    android:layout_marginStart="@dimen/dp_24"
                    app:layout_constraintStart_toEndOf="@+id/switch_favorite"
                    app:layout_constraintTop_toTopOf="@+id/switch_favorite" />

                <!--常去地址-->
                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/favorite_frequent_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_frequent_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_34"
                    android:layout_marginTop="@dimen/dp_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_favorite" />

                <com.fy.navi.ui.view.SkinGridLayout
                    android:id="@+id/frequent_address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginTop="@dimen/dp_20"
                    android:useDefaultMargins="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/favorite_frequent_address"/>
                <!--常去地址列表-->
                <com.fy.navi.ui.view.SkinRecyclerView
                    android:id="@+id/rv_frequent_address_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/favorite_frequent_address" />

                <!--收藏夹-->
                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_favorite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_34"
                    android:layout_marginTop="@dimen/dp_28"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frequent_address_container" />

                <com.fy.navi.ui.view.SkinLinearLayout
                    clickCommand="@{ViewModel.addFavorite}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{ViewModel.addVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginEnd="@dimen/dp_41"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_favorite_title" >

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_favorite_add" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/item_favorite_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/favorite_add"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textColor="@color/setting_text_preference"
                        android:textSize="@dimen/sp_30" />
                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:id="@+id/tv_favorite_switch"
                    android:layout_width="@dimen/dp_700"
                    android:layout_height="@dimen/dp_120"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_29"
                    android:orientation="horizontal"
                    android:visibility="@{ViewModel.isEVCar ? View.VISIBLE : View.GONE}"
                    android:background="@drawable/bg_setting_checkbox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_favorite_title">

                    <com.fy.navi.ui.view.SkinRadioGroup
                        android:id="@+id/navi_broadcast"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.fy.navi.ui.view.SkinRadioButton
                            clickCommand="@{ViewModel.favoriteInfoClick}"
                            android:id="@+id/navi_broadcast_standard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:background="@drawable/bg_setting_checkbox_selector"
                            android:gravity="center"
                            android:textSize="@dimen/sp_38"
                            android:textColor="@color/black"
                            android:text="@string/favorite_switch_common" />

                        <com.fy.navi.ui.view.SkinRadioButton
                            clickCommand="@{ViewModel.chargingInfoClick}"
                            android:id="@+id/navi_broadcast_large"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:background="@drawable/bg_setting_checkbox_selector"
                            android:gravity="center"
                            android:textSize="@dimen/sp_38"
                            android:textColor="@color/black"
                            android:text="@string/favorite_switch_charge" />
                    </com.fy.navi.ui.view.SkinRadioGroup>

                </com.fy.navi.ui.view.SkinLinearLayout>

                <!--收藏列表-->
                <com.fy.navi.ui.view.SkinRecyclerView
                    android:id="@+id/rv_favorite_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{ViewModel.dataVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/dp_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_favorite_switch" />

                <!--无收藏数据提示-->
                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_400"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_150"
                    android:visibility="@{ViewModel.tipVisibility ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title"  >

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_basic_ic_star_default"/>

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_tip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_42"
                        android:layout_marginTop="@dimen/dp_20" />

                    <com.fy.navi.ui.view.SkinTextView
                        clickCommand="@{ViewModel.addFavorite}"
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_108"
                        android:gravity="center"
                        android:text="@string/favorite_add"
                        android:textSize="@dimen/sp_42"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/bg_details_bottom_go_here"/>
                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_400"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="@{ViewModel.chargingVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/dp_180"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title"  >

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_basic_ic_star_default"/>

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_no_charging"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_42"
                        android:layout_marginTop="@dimen/dp_20" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_no_charging_tip"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_42"
                        android:layout_marginTop="@dimen/dp_10" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_108"
                        android:gravity="center"
                        android:text="@string/account_login"
                        android:textSize="@dimen/sp_42"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/bg_details_bottom_go_here"/>
                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_400"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="@{ViewModel.chargingNoDataVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/dp_150"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title"  >

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_basic_ic_star_default"/>

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_no_charging_data"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_42"
                        android:layout_marginTop="@dimen/dp_20" />
                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_400"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="@{ViewModel.chargingRequestFailedVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/dp_180"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title"  >

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_basic_ic_star_default"/>

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_charging_request_fail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_42"
                        android:layout_marginTop="@dimen/dp_20" />


                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_108"
                        android:gravity="center"
                        android:text="@string/route_refresh"
                        android:textSize="@dimen/sp_42"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/bg_details_bottom_go_here"/>
                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_400"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="@{ViewModel.chargingOfflineVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/dp_150"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_favorite_title"  >

                    <com.fy.navi.ui.view.SkinImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_basic_ic_star_default"/>

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite_charging_offline"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_42"
                        android:layout_marginTop="@dimen/dp_20" />
                </com.fy.navi.ui.view.SkinLinearLayout>

            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinScrollView>

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="@dimen/dp_334"
            android:layout_height="@dimen/dp_90"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/bg_setting_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.fy.navi.ui.view.SkinImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_favorite_top"
                android:layout_marginStart="@dimen/dp_62"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_top"
                android:layout_marginStart="@dimen/dp_136"
                android:textColor="@color/setting_text_preference"
                android:textSize="@dimen/sp_34"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </com.fy.navi.ui.view.SkinConstraintLayout>

    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.fy.navi.hmi.setting.others.licenses.SettingOthersLicensesViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1660"
        android:layout_height="@dimen/dp_960"
        android:clickable="true"
        android:background="@drawable/bg_setting_fragment">

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/setting_others_licenses_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <com.fy.navi.ui.view.SkinImageView
                clickCommand="@{viewModel.finishLicenses}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/img_basic_ic_back" />

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_600"
                android:text="@string/setting_others_about_licenses_info"
                android:textSize="@dimen/sp_46"
                android:textColor="@color/black" />
        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/setting_others_licenses_layout"
            android:background="@color/sub_tab_line"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/setting_others_about_licenses_icp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_80"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:text="@string/setting_others_about_licenses_icp"
            app:layout_constraintTop_toBottomOf="@+id/line_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/setting_others_about_licenses_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:text="@string/setting_others_about_licenses_company"
            app:layout_constraintTop_toBottomOf="@+id/setting_others_about_licenses_icp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.fy.navi.ui.view.SkinImageView
            android:id="@+id/setting_others_about_licenses_qr_img"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:src="@mipmap/bg_car_connect"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintTop_toBottomOf="@+id/setting_others_about_licenses_company"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/setting_others_about_licenses_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:text="@string/setting_others_about_licenses_qr"
            android:textColor="@color/setting_text_gray"
            android:textSize="@dimen/sp_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting_others_about_licenses_qr_img" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/setting_others_about_licenses_qr_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/setting_others_about_licenses_qr_desc"
            android:textColor="@color/setting_text_gray"
            android:textSize="@dimen/sp_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting_others_about_licenses_qr"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/setting_others_about_licenses_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/setting_others_about_licenses_safe"
            android:textColor="@color/setting_text_gray"
            android:textSize="@dimen/sp_25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting_others_about_licenses_qr_desc"/>
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
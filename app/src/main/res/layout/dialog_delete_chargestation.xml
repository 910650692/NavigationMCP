<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1100"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_15"
            android:background="@drawable/bg_setting_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/clear_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/delete_charge_station_title"
                android:textColor="@color/permission_quest_dialog_title"
                android:textSize="@dimen/sp_42"
                android:layout_marginBottom="@dimen/dp_50"
                android:paddingTop="@dimen/dp_70"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/clear_content" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/clear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_70"
                android:gravity="center"
                android:text="@string/delete_charge_station_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_36"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/dialog_button_layout" />

            <com.fy.navi.ui.view.SkinView
                android:layout_width="@dimen/dp_1018"
                android:layout_height="@dimen/dp_2"
                android:background="@color/setting_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/dialog_button_layout" />

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/dialog_button_layout"
                android:layout_width="@dimen/dp_1100"
                android:layout_height="@dimen/dp_128"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.fy.navi.ui.view.SkinButton
                    android:id="@+id/dialog_commit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/delete_all"
                    android:textColor="@color/setting_dialog_confirm"
                    android:textSize="@dimen/sp_42" />

                <com.fy.navi.ui.view.SkinView
                    android:id="@+id/dialog_line"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/setting_line"/>

                <com.fy.navi.ui.view.SkinButton
                    android:id="@+id/dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/permission_quest_dialog_cancel"
                    android:textColor="@color/dialog_cancel_text_b3181818"
                    android:textSize="@dimen/sp_42" />

            </com.fy.navi.ui.view.SkinLinearLayout>
        </com.fy.navi.ui.view.SkinConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
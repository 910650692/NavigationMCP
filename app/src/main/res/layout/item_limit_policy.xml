<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="政策1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_state"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_46"
            android:text="限行中"
            android:background="@color/main_map_limit_restricted_background"
            android:textColor="@color/main_map_limit_restricted"
            android:textSize="@dimen/sp_26"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/limit_driver_time_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            tools:text="024年11月2日起，工作日7:00-20:00限
行(节假日不限)。"
            android:textColor="@color/main_map_limit_loading"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@id/tv_time_title" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/limit_driver_ruler_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@id/tv_time" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            tools:text="024年11月2日起，工作日7:00-20:00限
行(节假日不限)。"
            android:textColor="@color/main_map_limit_loading"
            android:textSize="@dimen/sp_30"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_title" />
    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>
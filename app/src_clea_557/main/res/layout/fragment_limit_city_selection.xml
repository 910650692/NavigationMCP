<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.limit.BaseLimitDriverViewModel" />
    </data>


    <com.sgm.navi.ui.view.SkinConstraintLayout
        clickCommand="@{ViewModel.rootClick}"
        android:layout_width="@dimen/dp_698"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_121"
        android:clickable="true">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:paddingVertical="@dimen/dp_29"
            android:paddingHorizontal="@dimen/dp_29"
            android:background="@drawable/bg_shadow_navi_buick">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_back"
                clickCommand="@{ViewModel.closeCitySelectionPage}"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:src="@drawable/img_limit_back"
                android:layout_marginTop="@dimen/dp_27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinEditText
                android:id="@+id/edit_text_id"
                android:hint="@string/limit_city_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_34"
                android:textColor="@color/black"
                android:textColorHint="@color/main_map_limit_hint_color"
                android:layout_marginStart="@dimen/dp_4"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.sgm.navi.ui.view.SkinImageView
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:id="@+id/search_close"
                android:src="@drawable/img_off58"
                clickCommand="@{ViewModel.ClearTextContent}"
                android:visibility="@{ViewModel.mCloseViewVisibility ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@+id/edit_text_id"
                app:layout_constraintStart_toEndOf="@+id/edit_text_id"
                app:layout_constraintTop_toTopOf="@+id/edit_text_id"/>

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/skinConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_640"
            android:background="@drawable/bg_shadow_navi_buick"
            android:layout_marginTop="@dimen/dp_161"
            android:paddingVertical="@dimen/dp_29"
            android:paddingHorizontal="@dimen/dp_29"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{ViewModel.mSearchCityVisibility ? View.GONE : View.VISIBLE}">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/tv_current_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_44"
                android:textColor="@color/main_map_limit_current_city"
                android:textSize="@dimen/sp_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/limit_selected_city" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/select_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_40"
                android:textColor="@color/main_map_limit_current"
                android:textSize="@dimen/sp_34"
                app:layout_constraintStart_toEndOf="@+id/tv_current_city"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="上海市" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="@dimen/dp_40"
                android:paddingBottom="@dimen/dp_24"
                android:paddingTop="@dimen/dp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_current_city" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/city_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_640"
            android:background="@drawable/bg_shadow_navi_ndlc_8155"
            android:gravity="center"
            android:text="@{ViewModel.mTextViewContent}"
            android:textSize="@dimen/sp_26"
            android:visibility="@{ViewModel.mTextViewVisibility ? View.VISIBLE : View.GONE}"
            tools:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/skinConstraintLayout" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_640"
            android:background="@drawable/bg_shadow_navi_buick"
            android:layout_marginTop="@dimen/dp_161"
            android:paddingVertical="@dimen/dp_29"
            android:paddingHorizontal="@dimen/dp_29"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{ViewModel.mSearchCityVisibility ? View.VISIBLE : View.GONE}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:paddingHorizontal="@dimen/dp_40"
                android:paddingVertical="@dimen/dp_40" />

        </com.sgm.navi.ui.view.SkinConstraintLayout>


    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
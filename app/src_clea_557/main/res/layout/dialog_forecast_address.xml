<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1100"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_15"
            android:background="@drawable/bg_setting_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/forecast_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/forecast_title_home"
                android:textColor="@color/forecast_title"
                android:textSize="@dimen/sp_42"
                android:layout_marginBottom="@dimen/dp_50"
                android:paddingTop="@dimen/dp_70"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/forecast_content" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/forecast_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_72"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/img_rdeact_edit"
                android:textColor="@color/forecast_title"
                android:textSize="@dimen/sp_36"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/dialog_button_layout" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/forecast_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forecast_content_edit"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/forecast_content_edit"
                android:textSize="@dimen/sp_29"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/forecast_content"
                app:layout_constraintLeft_toRightOf="@+id/forecast_content"
                app:layout_constraintTop_toTopOf="@+id/forecast_content" />

            <com.sgm.navi.ui.view.SkinView
                android:layout_width="@dimen/dp_1018"
                android:layout_height="@dimen/dp_2"
                android:background="@color/setting_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/dialog_button_layout" />

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/dialog_button_layout"
                android:layout_width="@dimen/dp_1100"
                android:layout_height="@dimen/dp_128"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_commit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/reminder_dialog_commit"
                    android:textColor="@color/forecast_title_sure"
                    android:textSize="@dimen/sp_36" />

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/dialog_line"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/setting_line"/>

                <com.sgm.navi.ui.view.SkinButton
                    android:id="@+id/dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/reminder_dialog_cancel"
                    android:textColor="@color/forecast_title_cancel"
                    android:textSize="@dimen/sp_36" />

            </com.sgm.navi.ui.view.SkinLinearLayout>
        </com.sgm.navi.ui.view.SkinConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
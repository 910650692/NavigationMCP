<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.map.MapViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:minWidth="@dimen/dp_638"
        android:orientation="vertical">

        <com.sgm.navi.scene.ui.navi.SceneNaviLanesView
            android:id="@+id/cruise_lanes_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_92"
            android:layout_marginStart="@dimen/dp_466"
            android:minWidth="@dimen/dp_484"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_common_with_corner"
            android:clickable="true"
            android:focusable="false"
            android:minHeight="@dimen/dp_92"
            android:visibility="@{ViewModel.cruiseLanesVisibility ? View.VISIBLE : View.INVISIBLE}" />


        <View
            android:id="@+id/view_bg"
            clickCommand="@{ViewModel.muteOrUnMute}"
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_148"
            android:layout_marginTop="@dimen/dp_362"
            android:background="@drawable/bg_common_with_corner"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="@id/cruise_lanes_view"
            app:layout_constraintTop_toBottomOf="@id/cruise_lanes_view" />

        <com.sgm.navi.ui.view.SkinImageView
            android:id="@+id/iv_voice"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:scaleType="centerInside"
            android:src="@drawable/cruise_broad_image_select"
            app:layout_constraintBottom_toTopOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/cruise_title_color"
            android:textSize="@dimen/sp_30"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintEnd_toEndOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            app:layout_constraintTop_toBottomOf="@id/iv_voice"
            tools:text="播报" />

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_current_road_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_with_corner"
            android:gravity="center"
            android:minHeight="@dimen/dp_90"
            android:visibility="invisible"
            android:textSize="@dimen/sp_34"
            android:paddingHorizontal="@dimen/dp_26"
            android:textColor="@color/common_title_purple_color"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="当前道路" />

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>
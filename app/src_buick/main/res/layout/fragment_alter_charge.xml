<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.fy.navi.hmi.route.AlterChargeViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        clickCommand="@{viewModel.rootClick}"
        android:background="@drawable/bg_route_result"
        android:layout_width="@dimen/dp_640"
        android:layout_height="@dimen/dp_732">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/layout_alter_charge_station"
            android:visibility="@{viewModel.showAlterCharge ? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_38"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/route_alter_charge_station_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_close"
                clickCommand="@{viewModel.closePage}"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_marginEnd="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_38"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_poi_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.fy.navi.ui.view.SkinConstraintLayout
                android:layout_width="@dimen/dp_600"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_100"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_limit_city_button">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_selected_charge_station"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24"
                    android:layout_width="@dimen/dp_400"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tool:text="@string/route_selected_charge_station"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_selected_charge_station_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintStart_toStartOf="@+id/tv_selected_charge_station"
                    app:layout_constraintTop_toBottomOf="@+id/tv_selected_charge_station"
                    tool:text="12 公里"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_selected_charge_station_fast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintStart_toEndOf="@+id/tv_selected_charge_station_distance"
                    app:layout_constraintTop_toTopOf="@+id/tv_selected_charge_station_distance"
                    tool:text="快 10/20"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_selected_charge_station_slow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintStart_toEndOf="@+id/tv_selected_charge_station_fast"
                    app:layout_constraintTop_toTopOf="@+id/tv_selected_charge_station_fast"
                    tool:text="慢 10/20"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_selected_charge_station_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintTop_toTopOf="@+id/tv_selected_charge_station"
                    app:layout_constraintEnd_toEndOf="parent"
                    tool:text="￥ 1.65/度"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_selected_charge_station"
                    app:layout_constraintTop_toBottomOf="@+id/tv_selected_charge_station_cost"
                    app:layout_constraintEnd_toEndOf="parent" />



            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_alter_charge_stations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_200"
                android:layout_marginStart="@dimen/dp_20"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_30"
                android:text="@string/route_alter_charge_stations"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_alter_charge_stations"/>

        </com.fy.navi.ui.view.SkinConstraintLayout>

        <!--POI details-->
        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_640"
            android:layout_height="match_parent"
            android:background="@drawable/bg_route_result"
            android:clickable="true"
            android:visibility="@{viewModel.showAlterCharge ?  View.GONE : View.VISIBLE}"
            tool:visibility="visible">

            <com.fy.navi.ui.view.SkinScrollView
                android:id="@+id/poi_base_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_571"
                app:layout_constraintStart_toStartOf="parent">

                <com.fy.navi.ui.view.SkinConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_30">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/sk_poi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_44"
                        android:background="@drawable/bg_route_search_details_status"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15"
                        android:text="@{viewModel.routeSearchStatus}"
                        android:textColor="@color/bg_route_big_window_select"
                        android:textSize="@dimen/sp_29"
                        android:visibility="@{viewModel.routeSearchStatusVisibility ? View.VISIBLE : View.GONE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tool:text="建设中"
                        tool:visibility="visible" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/sk_poi_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_35"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/dp_390"
                        android:maxLines="1"
                        android:text="@{viewModel.routeSearchName}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_38"
                        app:layout_constraintStart_toEndOf="@+id/sk_poi_status"
                        app:layout_constraintTop_toTopOf="parent"
                        tool:text="东方明珠东方明珠东方明珠东方明珠东方明珠东方明珠东方明珠东方明珠东方明珠东方明珠" />

                    <com.fy.navi.ui.view.SkinImageView
                        clickCommand="@{viewModel.closeDetail}"
                        android:layout_width="@dimen/dp_58"
                        android:layout_height="@dimen/dp_58"
                        android:layout_marginTop="@dimen/dp_33"
                        android:src="@drawable/icon_poi_details_close"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/poi_second_address"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{viewModel.routeSearchAddress}"
                        android:textColor="@color/text_route_defult"
                        android:textSize="@dimen/sp_34"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sk_poi_name"
                        tool:text="世纪大道1号世纪大道1号世纪大道1号世纪大道1号世纪大道1号世纪大道1号世纪大道1号世纪大道1号" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/poi_distance_time"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:maxLines="2"
                        android:text="@{viewModel.routeSearchTimeAndDistance}"
                        android:textColor="@color/poi_details_bottom_ff_00"
                        android:textSize="@dimen/sp_35"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/poi_second_address"
                        tool:text="5.2公里   30分钟" />

                    <com.fy.navi.ui.view.SkinImageView
                        android:id="@+id/siv_arrival_capacity"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:src="@drawable/img_electricity_medium_48"
                        app:layout_constraintBottom_toBottomOf="@+id/poi_arrival_capacity"
                        app:layout_constraintEnd_toStartOf="@+id/poi_arrival_capacity"
                        app:layout_constraintTop_toBottomOf="@+id/poi_second_address"
                        app:layout_constraintTop_toTopOf="@+id/poi_arrival_capacity" />

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/poi_arrival_capacity"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:maxLines="1"
                        android:text="@{viewModel.routeSearchElec}"
                        android:textColor="@color/poi_details_bottom_ff_00"
                        android:textSize="@dimen/sp_35"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/poi_second_address"
                        tool:text="15%到达" />

                    <com.fy.navi.ui.view.SkinConstraintLayout
                        android:id="@+id/poi_content_layout"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        app:layout_constraintStart_toStartOf="@+id/start_guideline"
                        app:layout_constraintTop_toBottomOf="@+id/poi_arrival_capacity">

                        <include
                            android:id="@+id/scene_poi_details_charging_station_view"
                            layout="@layout/scene_poi_details_charging_station_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.routeSearchTypeVisibility == 2 ? View.VISIBLE : View.GONE}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tool:visibility="visible" />

                    </com.fy.navi.ui.view.SkinConstraintLayout>

                </com.fy.navi.ui.view.SkinConstraintLayout>

            </com.fy.navi.ui.view.SkinScrollView>


            <com.fy.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_108"
                android:layout_marginStart="@dimen/dp_52"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.fy.navi.ui.view.SkinView
                    android:id="@+id/stl_alter"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:background="@drawable/bg_details_bottom_go_here"
                    app:layout_constraintEnd_toStartOf="@+id/stl_function"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/stv_alter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_40"
                    android:text="@string/route_alter"
                    app:layout_constraintBottom_toBottomOf="@+id/stl_alter"
                    app:layout_constraintEnd_toEndOf="@+id/stl_alter"
                    app:layout_constraintStart_toStartOf="@+id/stl_alter"
                    app:layout_constraintTop_toTopOf="@+id/stl_alter" />


                <com.fy.navi.ui.view.SkinConstraintLayout
                    android:id="@+id/stl_function"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_14"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.fy.navi.ui.view.SkinConstraintLayout
                        android:id="@+id/stl_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toStartOf="@+id/stl_around_search"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.fy.navi.ui.view.SkinImageView
                            android:id="@+id/siv_phone"
                            android:layout_width="@dimen/dp_68"
                            android:layout_height="@dimen/dp_68"
                            android:src="@drawable/img_basic_ic_phone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.fy.navi.ui.view.SkinTextView
                            android:id="@+id/stv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/st_poi_details_bottom_phone"
                            android:textColor="@color/poi_details_bottom_icon"
                            android:textSize="@dimen/sp_36"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </com.fy.navi.ui.view.SkinConstraintLayout>

                </com.fy.navi.ui.view.SkinConstraintLayout>

            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
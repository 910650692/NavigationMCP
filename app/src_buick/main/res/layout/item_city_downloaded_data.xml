<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.fy.navi.service.define.mapdata.CityDataInfo" />
        <variable
            name="holder"
            type="com.fy.navi.hmi.mapdata.adapter.WorkedQueueAdapter.Holder" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_setting_fragment">

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/item_city_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/black"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/item_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="@string/offline_item_city_title"
            android:textColor="@color/offline_black"
            android:textSize="@dimen/sp_38" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/item_city_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_city_name"
            android:gravity="center"
            android:text="@string/offline_item_city_data"
            android:textColor="@color/setting_text_gray"
            android:textSize="@dimen/sp_32" />

        <com.fy.navi.ui.view.SkinButton
            android:id="@+id/item_btn_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/offline_delete_city_data"
            android:textColor="@color/setting_text_gray"
            android:textSize="@dimen/sp_32" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/item_status_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintRight_toLeftOf="@+id/item_btn_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/setting_text_gray"
            android:textSize="@dimen/sp_32" />

    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>








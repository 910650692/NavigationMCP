<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.mapdata.manager.ManagerMapDataViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        android:layout_width="@dimen/dp_1224"
        android:layout_height="@dimen/dp_714"
        android:background="@drawable/bg_setting_fragment"
        android:clickable="true"
        android:orientation="vertical">

        <!--offline map title-->
        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/rl_offline_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_134"
            android:layout_marginStart="@dimen/dp_26">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_offline_map_back"
                clickCommand="@{ViewModel.mBackMapDataView}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_setting_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="@dimen/dp_1000"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_40"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_offline_map_back">

                <!--正在下载-->
                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_100"
                    android:orientation="horizontal">

                    <com.fy.navi.ui.view.SkinLinearLayout
                        android:id="@+id/all_map_data_tab"
                        clickCommand="@{ViewModel.mDownloadingDataClickView}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_offline_top">

                        <com.fy.navi.ui.view.SkinTextView
                            android:id="@+id/tv_offline_all_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/offline_manager_map_downloading"
                            android:textColor="@color/offline_black"
                            android:textSize="@dimen/sp_34" />

                        <com.fy.navi.ui.view.SkinView
                            android:id="@+id/offline_all_data_line"
                            android:layout_width="@dimen/dp_78"
                            android:layout_height="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_9"
                            android:background="@color/account_blue_text" />

                    </com.fy.navi.ui.view.SkinLinearLayout>

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ViewModel.mAllDownloadingDataSize}"
                        android:layout_marginStart="@dimen/dp_24"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="@{ViewModel.mDownloadingDataVisibility ? View.VISIBLE : View.GONE}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_26"
                        android:background="@color/setting_others_driving_delete_bg"/>

                </com.fy.navi.ui.view.SkinLinearLayout>

                <!--已下载-->
                <com.fy.navi.ui.view.SkinLinearLayout
                    android:id="@+id/manage_data_tab"
                    clickCommand="@{ViewModel.mDownloadedClickView}"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/all_map_data_tab"
                    app:layout_constraintTop_toBottomOf="@+id/rl_offline_top">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/tv_offline_download_administration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/offline_city_downloaded"
                        android:textColor="@color/color_70_000000"
                        android:textSize="@dimen/sp_34" />

                    <com.fy.navi.ui.view.SkinView
                        android:id="@+id/download_administration_line"
                        android:layout_width="@dimen/dp_78"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_9"
                        android:background="@color/account_blue_text"
                        android:visibility="invisible" />

                </com.fy.navi.ui.view.SkinLinearLayout>

            </com.fy.navi.ui.view.SkinLinearLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>

        <com.fy.navi.ui.view.SkinScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:fillViewport="true">

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                <!--下载中界面-->
                <com.fy.navi.ui.view.SkinConstraintLayout
                    android:id="@+id/administration_downloading_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{ViewModel.mDownloadingDataVisibility ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/dp_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/download_status">

                    <com.fy.navi.ui.view.SkinLinearLayout
                        android:id="@+id/download_status"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_setting_checkbox"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.fy.navi.ui.view.SkinLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <com.fy.navi.ui.view.SkinLinearLayout
                                android:id="@+id/all_data_download"
                                clickCommand="@{ViewModel.mAllDataDownload}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <com.fy.navi.ui.view.SkinImageView
                                    android:id="@+id/img_download_all_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/img_download_all_start"/>

                                <com.fy.navi.ui.view.SkinTextView
                                    android:id="@+id/tv_download_all_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_34"
                                    android:layout_marginStart="@dimen/dp_16"
                                    android:textColor="@color/setting_preference_text_gray"
                                    android:text="@string/offline_all_city_start_download" />

                            </com.fy.navi.ui.view.SkinLinearLayout>

                            <com.fy.navi.ui.view.SkinLinearLayout
                                android:id="@+id/all_data_suspend"
                                clickCommand="@{ViewModel.mAllDataSuspend}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <com.fy.navi.ui.view.SkinImageView
                                    android:id="@+id/img_download_all_suspend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/img_download_all_suspend"/>

                                <com.fy.navi.ui.view.SkinTextView
                                    android:id="@+id/tv_download_all_suspend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_34"
                                    android:layout_marginStart="@dimen/dp_16"
                                    android:textColor="@color/setting_preference_text_gray"
                                    android:text="@string/offline_all_city_suspend_download" />

                            </com.fy.navi.ui.view.SkinLinearLayout>
                        </com.fy.navi.ui.view.SkinLinearLayout>
                    </com.fy.navi.ui.view.SkinLinearLayout>

                    <!--下载中列表-->
                    <com.fy.navi.ui.view.SkinRecyclerView
                        android:id="@+id/rv_downloading_offline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/download_status" />

                </com.fy.navi.ui.view.SkinConstraintLayout>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offline_manager_map_no_downloading"
                    android:visibility="@{ViewModel.mDownloadingNoDataVisibility ? View.VISIBLE : View.GONE}"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!--已下载界面-->
                <com.fy.navi.ui.view.SkinConstraintLayout
                    android:id="@+id/administration_downloaded_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{ViewModel.mDownloadedDataVisibility ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/downloaded_offline_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_71"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@{ViewModel.mAllDownloadedDataSize}"
                        android:textColor="@color/setting_text_preference"
                        android:textSize="@dimen/sp_30"
                        android:background="@drawable/shape_bg_map_item_data"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/font_size"/>

                    <!--下载完成列表-->
                    <com.fy.navi.ui.view.SkinRecyclerView
                        android:id="@+id/rv_downloaded_offline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_40"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/downloaded_offline_layout" />

                </com.fy.navi.ui.view.SkinConstraintLayout>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offline_manager_map_no_downloaded"
                    android:visibility="@{ViewModel.mDownloadedNoDataVisibility ? View.VISIBLE : View.GONE}"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinScrollView>


    </com.fy.navi.ui.view.SkinLinearLayout>

</layout>
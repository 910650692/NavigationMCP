<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.mapdata.manager.ManagerMapDataViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        android:layout_width="@dimen/dp_1224"
        android:layout_height="@dimen/dp_714"
        android:background="@drawable/bg_setting_fragment"
        android:clickable="true"
        android:orientation="vertical">

        <!--offline map title-->
        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/rl_offline_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_offline_map_back"
                clickCommand="@{ViewModel.backMapDataView}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_back_58"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/iv_offline_map_back">

                <!--正在下载-->
                <com.fy.navi.ui.view.SkinLinearLayout
                    android:id="@+id/all_map_data_tab"
                    clickCommand="@{ViewModel.downloadingDataClickView}"
                    android:layout_width="@dimen/dp_304"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_40"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_offline_top">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/tv_offline_all_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/offline_manager_map_downloading"
                        android:textColor="@color/offline_black"
                        android:textSize="@dimen/sp_38"
                        android:textStyle="bold" />

                    <com.fy.navi.ui.view.SkinView
                        android:id="@+id/offline_all_data_line"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@color/account_blue_text" />

                </com.fy.navi.ui.view.SkinLinearLayout>

                <!--已下载-->
                <com.fy.navi.ui.view.SkinLinearLayout
                    android:id="@+id/manage_data_tab"
                    clickCommand="@{ViewModel.downloadedClickView}"
                    android:layout_width="@dimen/dp_304"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20"
                    app:layout_constraintLeft_toRightOf="@+id/all_map_data_tab"
                    app:layout_constraintTop_toBottomOf="@+id/rl_offline_top">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/tv_offline_download_administration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/offline_city_downloaded"
                        android:textColor="@color/color_70_000000"
                        android:textSize="@dimen/sp_38" />

                    <com.fy.navi.ui.view.SkinView
                        android:id="@+id/download_administration_line"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@color/account_blue_text"
                        android:visibility="invisible" />

                </com.fy.navi.ui.view.SkinLinearLayout>

            </com.fy.navi.ui.view.SkinLinearLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>

        <com.fy.navi.ui.view.SkinScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dp_60"
            android:fillViewport="true">

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                <!--下载中界面-->
               <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/administration_downloading_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_offline_city_downloading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/offline_city_downloading"
                    android:textColor="@color/offline_black"
                    android:textSize="@dimen/sp_42"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--全部暂停按钮-->
                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_all_offline_city_suspend"
                    clickCommand="@{ViewModel.allDataSuspend}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:background="@drawable/bg_setting_guide_gray"
                    android:padding="@dimen/dp_20"
                    android:text="@string/offline_all_city_suspend_download"
                    android:textColor="@color/offline_black"
                    android:textSize="@dimen/sp_42"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--全部开始按钮-->
                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/tv_all_offline_city_download"
                    clickCommand="@{ViewModel.allDataDownload}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:background="@drawable/bg_setting_guide_gray"
                    android:padding="@dimen/dp_20"
                    android:text="@string/offline_all_city_start_download"
                    android:textColor="@color/offline_blue"
                    android:textSize="@dimen/sp_42"
                    app:layout_constraintRight_toLeftOf="@+id/tv_all_offline_city_suspend"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--下载中列表-->
                <com.fy.navi.ui.view.SkinRecyclerView
                    android:id="@+id/rv_downloading_offline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_offline_city_downloading" />

            </com.fy.navi.ui.view.SkinConstraintLayout>

                <!--已下载界面-->
                <com.fy.navi.ui.view.SkinConstraintLayout
                    android:id="@+id/administration_downloaded_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                    <com.fy.navi.ui.view.SkinTextView
                        android:id="@+id/tv_offline_city_downloaded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:text="@string/offline_city_downloaded"
                        android:textColor="@color/offline_black"
                        android:textSize="@dimen/sp_42"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rv_downloading_offline" />

                    <!--下载完成列表-->
                    <com.fy.navi.ui.view.SkinRecyclerView
                        android:id="@+id/rv_downloaded_offline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_40"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_offline_city_downloaded" />

                </com.fy.navi.ui.view.SkinConstraintLayout>

            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinScrollView>


    </com.fy.navi.ui.view.SkinLinearLayout>


</layout>
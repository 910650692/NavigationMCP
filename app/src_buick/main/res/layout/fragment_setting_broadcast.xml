<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.fy.navi.hmi.setting.broadcast.SettingBroadcastViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.fy.navi.ui.view.SkinLinearLayout
            android:layout_width="@dimen/dp_859"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="none">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/navi_broadcast_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_broadcast_voice"
                android:textSize="@dimen/sp_34"
                android:textColor="@color/setting_bg_tab_text_select" />

            <com.fy.navi.ui.view.SkinConstraintLayout
                clickCommand="@{viewModel.mOpenBroadcastVoiceListPage}"
                android:id="@+id/broadcast_entry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/bg_setting_voice">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/navi_broadcast_voice_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_29"
                    android:src="@mipmap/icon_setting_voice_current"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/navi_broadcast_voice_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_48"
                    android:text="@string/setting_broadcast_voice_current_name"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/setting_bg_tab_text_select"
                    app:layout_constraintStart_toEndOf="@+id/navi_broadcast_voice_current"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/navi_broadcast_voice_others_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_358"
                    android:layout_marginTop="@dimen/dp_47"
                    app:layout_constraintStart_toEndOf="@+id/navi_broadcast_voice_name"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/navi_broadcast_voice_others_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_390"
                    android:layout_marginTop="@dimen/dp_47"
                    app:layout_constraintStart_toEndOf="@+id/navi_broadcast_voice_name"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/navi_broadcast_voice_others_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_422"
                    android:layout_marginTop="@dimen/dp_47"
                    app:layout_constraintStart_toEndOf="@+id/navi_broadcast_voice_name"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/navi_broadcast_voice_others_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_454"
                    android:layout_marginTop="@dimen/dp_47"
                    app:layout_constraintStart_toEndOf="@+id/navi_broadcast_voice_name"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.fy.navi.ui.view.SkinImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_setting_corner"
                    android:layout_marginBottom="@dimen/dp_9"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/navi_broadcast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60"
                android:text="@string/setting_broadcast_navi"
                android:textSize="@dimen/sp_34"
                android:textColor="@color/setting_bg_tab_text_select" />

            <com.fy.navi.ui.view.SkinRadioGroup
                android:id="@+id/navi_broadcast"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_setting_checkbox"
                android:layout_marginTop="@dimen/dp_16">

                <com.fy.navi.ui.view.SkinRadioButton
                    clickCommand="@{viewModel.mSwitchNaviBroadcastDetailClick}"
                    android:id="@+id/navi_broadcast_detailed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/setting_broadcast_navi_detail"
                    android:textSize="@dimen/sp_34"
                    android:checked="@{viewModel.mIsNaviBroadcastDetail}"
                    android:background="@drawable/bg_setting_checkbox_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/setting_bg_tab_text_unselect"/>

                <com.fy.navi.ui.view.SkinRadioButton
                    clickCommand="@{viewModel.mSwitchNaviBroadcastConciseClick}"
                    android:id="@+id/navi_broadcast_concise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/setting_broadcast_navi_concise"
                    android:textSize="@dimen/sp_34"
                    android:checked="@{viewModel.mIsNaviBroadcastConcise}"
                    android:background="@drawable/bg_setting_checkbox_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/setting_bg_tab_text_unselect"/>

                <com.fy.navi.ui.view.SkinRadioButton
                    clickCommand="@{viewModel.mSwitchNaviBroadcastSimpleClick}"
                    android:id="@+id/navi_broadcast_simple"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/setting_broadcast_navi_clear"
                    android:textSize="@dimen/sp_34"
                    android:checked="@{viewModel.mIsNaviBroadcastSimple}"
                    android:background="@drawable/bg_setting_checkbox_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/setting_bg_tab_text_unselect"/>
            </com.fy.navi.ui.view.SkinRadioGroup>

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_60">

                <com.fy.navi.ui.view.SkinCheckBox
                    clickCommand="@{viewModel.mSwitchCruiseBroadcastClick}"
                    android:id="@+id/switch_eagle_eye_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.mIsCruiseBroadcast}"
                    android:background="@android:color/transparent"
                    android:button="@drawable/custom_thumb" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/cruise_broadcast_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_24"
                    android:text="@string/setting_broadcast_cruise"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/setting_bg_tab_text_select"/>

            </com.fy.navi.ui.view.SkinLinearLayout>


            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_horizontal">

                <com.fy.navi.ui.view.SkinCheckBox
                    clickCommand="@{viewModel.mSwitchCruiseBroadcastRoadConditionClick}"
                    android:id="@+id/cruise_broadcast_road_condition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="@{viewModel.mIsCruiseBroadcastRoadCondition}"
                    android:background="@drawable/bg_setting_broadcast"
                    android:gravity="center"
                    android:text="@string/setting_broadcast_cruise_road_condition"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    android:textSize="@dimen/sp_34" />

                <com.fy.navi.ui.view.SkinCheckBox
                    clickCommand="@{viewModel.mSwitchCruiseBroadcastCameraClick}"
                    android:id="@+id/cruise_broadcast_camera"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="@{viewModel.mIsCruiseBroadcastCamera}"
                    android:background="@drawable/bg_setting_broadcast"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_34"
                    android:text="@string/setting_broadcast_cruise_camera"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    android:textSize="@dimen/sp_34" />

                <com.fy.navi.ui.view.SkinCheckBox
                    clickCommand="@{viewModel.mSwitchCruiseBroadcastSafeClick}"
                    android:id="@+id/cruise_broadcast_safe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="@{viewModel.mIsCruiseBroadcastSafe}"
                    android:background="@drawable/bg_setting_broadcast"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_34"
                    android:text="@string/setting_broadcast_cruise_safe"
                    android:textColor="@color/setting_bg_tab_text_unselect"
                    android:textSize="@dimen/sp_34" />
            </com.fy.navi.ui.view.SkinLinearLayout>
        </com.fy.navi.ui.view.SkinLinearLayout>
    </com.fy.navi.ui.view.SkinScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/reminderRootIndex"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1500"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_confirm_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_70"
                android:text="@string/reminder_use_agreement"
                android:textColor="@color/buick_dialog_use_reminder_title"
                android:textSize="@dimen/sp_42"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/ll_sub_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/dialog_title">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/reminder_click_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_click_to_view"
                    android:textColor="@color/buick_dialog_use_reminder_sub_title"
                    android:textSize="@dimen/sp_36"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/reminder_terms_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="@string/reminder_page_service"
                    android:textColor="@color/buick_dialog_use_reminder_high_light"
                    android:textSize="@dimen/sp_36"
                    app:layout_constraintStart_toEndOf="@+id/reminder_click_view"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="ã€"
                    android:textColor="@color/dialog_use_reminder_content"
                    android:textSize="@dimen/sp_36"
                    app:layout_constraintStart_toEndOf="@+id/reminder_terms_service"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/reminder_page_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:text="@string/reminder_page_privacy"
                    android:textColor="@color/buick_dialog_use_reminder_high_light"
                    android:textSize="@dimen/sp_36"
                    app:layout_constraintStart_toEndOf="@+id/reminder_click_view1"
                    app:layout_constraintTop_toBottomOf="@+id/reminder_title" />

            </com.fy.navi.ui.view.SkinLinearLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/net_scrollView"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_266"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintEnd_toEndOf="@id/ll_sub_content"
                app:layout_constraintStart_toStartOf="@id/ll_sub_content"
                app:layout_constraintTop_toBottomOf="@+id/ll_sub_content">

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/dp_15"
                    android:lineSpacingExtra="@dimen/dp_1"
                    android:text="@string/reminder_user_terms_personal_info"
                    android:textColor="@color/buick_dialog_use_reminder_sub_title"
                    android:textSize="@dimen/sp_36" />

            </androidx.core.widget.NestedScrollView>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/dialog_content"
                android:layout_width="@dimen/dp_1100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/color_black_80"
                android:textSize="@dimen/sp_36"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_title" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginStart="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_48"
                android:background="#4D818199"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/net_scrollView" />

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_128"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/line">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/dialog_commit"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/agree"
                    android:textColor="@color/buick_dialog_use_reminder_positive_color"
                    android:textSize="@dimen/sp_36" />

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="#4D818199" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/dialog_cancel"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/not_agree_and_exit"
                    android:textColor="@color/buick_dialog_use_reminder_negative_color"
                    android:textSize="@dimen/sp_36" />

            </com.fy.navi.ui.view.SkinLinearLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
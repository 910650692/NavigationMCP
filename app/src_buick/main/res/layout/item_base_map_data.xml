<?xml version="1.0" encoding="utf-8"?>
<com.sgm.navi.ui.view.SkinConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_setting_fragment">

    <com.sgm.navi.ui.view.SkinTextView
        android:id="@+id/item_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/offline_item_city_title"
        android:textColor="@color/offline_black"
        android:textSize="@dimen/sp_38" />

    <com.sgm.navi.ui.view.SkinTextView
        android:id="@+id/item_city_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_city_name"
        android:gravity="center"
        android:text="@string/offline_base_map_tip"
        android:textColor="@color/setting_text_gray"
        android:textSize="@dimen/sp_32" />

    <com.sgm.navi.ui.view.SkinImageView
        android:id="@+id/item_province_expand"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/setting_bg_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img_setting_download_white" />

</com.sgm.navi.ui.view.SkinConstraintLayout>
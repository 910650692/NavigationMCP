<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.fy.navi.service.define.mapdata.CityDataInfo" />

        <variable
            name="holder"
            type="com.fy.navi.hmi.mapdata.adapter.CityMapDataAdapter.Holder" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/shape_bg_map_item_data">

        <com.fy.navi.ui.view.SkinView
            android:id="@+id/item_city_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/black"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/item_city_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/offline_item_city_title"
            android:textColor="@color/offline_black"
            android:textSize="@dimen/sp_34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--按钮下载状态-->
        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/item_download_status"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_76"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/shape_bg_download_data"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/item_btn_status"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_marginEnd="@dimen/dp_8"
                android:src="@drawable/img_untop_bwhite_42" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/item_status_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offline_item_city_status"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_30" />

        </com.fy.navi.ui.view.SkinLinearLayout>

        <com.fy.navi.ui.view.SkinTextView
            android:id="@+id/item_city_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/offline_item_city_data"
            android:textColor="@color/color_70_000000"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_download_status" />

    </com.fy.navi.ui.view.SkinConstraintLayout>

</layout>

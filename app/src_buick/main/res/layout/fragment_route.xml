<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.route.RouteViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/fragment_route"
        android:visibility="invisible"
        android:layout_width="@dimen/dp_1721"
        android:layout_height="@dimen/dp_772">
        <!--tab list-->
        <com.sgm.navi.scene.ui.route.SceneRouteGasStationWeatherServiceView
            android:id="@+id/route_right_tab_list_scene"
            android:layout_width="@dimen/dp_204"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_29"
            android:paddingVertical="@dimen/dp_29"
            android:background="@drawable/bg_shadow_navi_buick"
            android:clickable="true"
            android:visibility="@{ViewModel.getTabVisibility() == 2 ? View.VISIBLE : View.GONE}"
            android:layout_marginStart="@dimen/dp_660"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_204"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow_navi_buick"
            android:visibility="@{ViewModel.getTabVisibility() != 2 &amp;&amp; ViewModel.getTabVisibility() != 0 ? View.VISIBLE : View.GONE}"
            android:paddingHorizontal="@dimen/dp_29"
            android:paddingVertical="@dimen/dp_29"
            android:layout_marginStart="@dimen/dp_660"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/route_tab_charge"
                android:layout_width="@dimen/dp_146"
                android:layout_height="@dimen/dp_148"
                clickCommand="@{ViewModel.getTabChargingClick()}"
                android:visibility="@{ViewModel.getTabVisibility() == 1  || ViewModel.getTabVisibility() == 4 ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/route_right_tab_list_tv_charging_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_28"
                    android:text="@string/route_charging_station"
                    android:textColor="@color/tab_list_route_tab_list_unselect"
                    android:textSize="@dimen/sp_30"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:select_text_color="@color/tab_list_route_tab_list_select" />

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/route_right_tab_list_iv_charging_station"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_58"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@drawable/selector_route_tab_list_charge_station"
                    app:layout_constraintBottom_toTopOf="@id/route_right_tab_list_tv_charging_station"
                    app:layout_constraintEnd_toEndOf="@id/route_right_tab_list_tv_charging_station"
                    app:layout_constraintStart_toStartOf="@id/route_right_tab_list_tv_charging_station" />
            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/route_tag_gas"
                android:layout_width="@dimen/dp_146"
                android:layout_height="@dimen/dp_148"
                clickCommand="@{ViewModel.getTabGasClick()}"
                android:visibility="@{ViewModel.getTabVisibility() == 3 || ViewModel.getTabVisibility() == 4 ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/route_tab_charge"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/route_right_tab_list_tv_gas_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_28"
                    android:text="@string/route_gas_station"
                    android:textColor="@color/tab_list_route_tab_list_unselect"
                    android:textSize="@dimen/sp_30"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:select_text_color="@color/tab_list_route_tab_list_select" />

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/route_right_tab_list_iv_gas_station"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_58"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@drawable/selector_route_tab_list_gas_station"
                    app:layout_constraintBottom_toTopOf="@id/route_right_tab_list_tv_gas_station"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </com.sgm.navi.ui.view.SkinConstraintLayout>

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <ViewStub
            android:id="@+id/route_line_info_root"
            android:layout="@layout/route_result_page"
            android:layout_width="@dimen/dp_698"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <ViewStub
            android:id="@+id/route_detail_info_root"
            android:layout="@layout/route_result_details_page"
            android:layout_width="@dimen/dp_698"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <ViewStub
            android:id="@+id/route_service_list_info_root"
            android:layout="@layout/route_search_service_page"
            android:layout_width="@dimen/dp_698"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <ViewStub
            android:id="@+id/route_charge_list_info_root"
            android:layout="@layout/route_search_charge_gas_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <ViewStub
            android:id="@+id/route_weather_details"
            android:layout="@layout/route_weather_details_page"
            android:layout_width="@dimen/dp_698"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <ViewStub
            android:id="@+id/route_poi_details"
            android:layout="@layout/route_poi_details_page"
            android:layout_width="@dimen/dp_698"
            android:layout_height="match_parent"
            tools:visibility="visible" />


    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
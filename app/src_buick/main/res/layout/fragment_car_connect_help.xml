<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.fy.navi.hmi.carconnect.help.CarConnectHelpViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        android:layout_width="@dimen/dp_1224"
        android:layout_height="@dimen/dp_714"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/bg_setting_fragment">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_138">

            <com.fy.navi.ui.view.SkinImageView
                clickCommand="@{viewModel.mClickBack}"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/help_ic_back"
                app:layout_goneMarginStart="@dimen/dp_26"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_others_about_help"
                android:textSize="@dimen/sp_38"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </com.fy.navi.ui.view.SkinConstraintLayout>

        <com.fy.navi.ui.view.SkinView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/setting_line" />

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/help_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fy.navi.scene.ui.setting.SceneVerticalTabLayout
                android:id="@+id/help_table"
                android:layout_width="@dimen/dp_223"
                android:layout_height="wrap_content"
                android:background="@null"
                app:tabBackground="@drawable/bg_setting_tab"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:isMarginBottom="true"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.fy.navi.ui.view.SkinView
                android:id="@+id/help_vertical_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_0"
                android:background="@color/setting_line"
                android:layout_marginStart="@dimen/dp_33"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/help_table"/>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/remote_navi"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.mSelectPosition == 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/help_vertical_line"
                app:layout_constraintEnd_toEndOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/remote_img"
                    android:layout_width="@dimen/dp_461"
                    android:layout_height="@dimen/dp_260"
                    android:layout_marginTop="@dimen/dp_42"
                    android:layout_marginStart="@dimen/dp_58"
                    android:src="@mipmap/earth"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/remote_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_remote_navi_title"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_40"
                    app:layout_constraintTop_toBottomOf="@+id/remote_img"
                    app:layout_constraintStart_toStartOf="@+id/remote_img"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_remote_navi"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/bg_setting_car_connected_help_sub_title"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@+id/remote_title"
                    app:layout_constraintStart_toStartOf="@+id/remote_title"/>

            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/seamless_interconnection"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.mSelectPosition == 1 ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/help_vertical_line"
                app:layout_constraintEnd_toEndOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/seamless_img"
                    android:layout_width="@dimen/dp_461"
                    android:layout_height="@dimen/dp_260"
                    android:layout_marginTop="@dimen/dp_42"
                    android:layout_marginStart="@dimen/dp_58"
                    android:src="@mipmap/earth"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/seamless_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_seamless_interconnection_title"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_40"
                    app:layout_constraintTop_toBottomOf="@+id/seamless_img"
                    app:layout_constraintStart_toStartOf="@+id/seamless_img"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_seamless_interconnection"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/bg_setting_car_connected_help_sub_title"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@+id/seamless_title"
                    app:layout_constraintStart_toStartOf="@+id/seamless_title"/>

            </com.fy.navi.ui.view.SkinConstraintLayout>
            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/find_car"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.mSelectPosition == 2 ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/help_vertical_line"
                app:layout_constraintEnd_toEndOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/find_img"
                    android:layout_width="@dimen/dp_461"
                    android:layout_height="@dimen/dp_260"
                    android:layout_marginTop="@dimen/dp_42"
                    android:layout_marginStart="@dimen/dp_58"
                    android:src="@mipmap/earth"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/find_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_find_car_title"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_40"
                    app:layout_constraintTop_toBottomOf="@+id/find_img"
                    app:layout_constraintStart_toStartOf="@+id/find_img"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_find_car"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/bg_setting_car_connected_help_sub_title"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@+id/find_title"
                    app:layout_constraintStart_toStartOf="@+id/find_title"/>

            </com.fy.navi.ui.view.SkinConstraintLayout>

            <com.fy.navi.ui.view.SkinConstraintLayout
                android:id="@+id/data_sync"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.mSelectPosition == 3 ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/help_vertical_line"
                app:layout_constraintEnd_toEndOf="parent">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/sync_img"
                    android:layout_width="@dimen/dp_461"
                    android:layout_height="@dimen/dp_260"
                    android:layout_marginTop="@dimen/dp_42"
                    android:layout_marginStart="@dimen/dp_58"
                    android:src="@mipmap/earth"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/sync_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_data_sync_title"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_40"
                    app:layout_constraintTop_toBottomOf="@+id/sync_img"
                    app:layout_constraintStart_toStartOf="@+id/sync_img"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_about_help_data_sync"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/bg_setting_car_connected_help_sub_title"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintTop_toBottomOf="@+id/sync_title"
                    app:layout_constraintStart_toStartOf="@+id/sync_title"/>

            </com.fy.navi.ui.view.SkinConstraintLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>

    </com.fy.navi.ui.view.SkinLinearLayout>

</layout>
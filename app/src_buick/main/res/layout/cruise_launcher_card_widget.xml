<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.launcher.BaseLauncherSmallCardViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fy.navi.scene.ui.navi.SceneNaviLanesView
            android:id="@+id/scene_lanes_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_launcher_cruise_lanes_bg"
            tools:layout_height="@dimen/dp_92" />


        <com.fy.navi.ui.view.SkinConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_launcher_cruise_camera"
            android:minWidth="@dimen/dp_342"
            android:paddingHorizontal="@dimen/dp_16">

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_margin="@dimen/dp_16"
                android:src="@drawable/img_rate_limiting_90"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_title_color"
                android:textSize="@dimen/sp_46"
                app:layout_constraintStart_toEndOf="@id/iv_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/tv_camera_desc"
                tools:text="15.5" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="公里后"
                android:textColor="@color/widget_sub_title_color"
                android:textSize="@dimen/sp_30"
                app:layout_constraintBottom_toBottomOf="@id/tv_distance"
                app:layout_constraintStart_toEndOf="@id/tv_distance" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/tv_camera_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:text="限速摄像头"
                android:textColor="@color/widget_sub_title_color"
                android:textSize="@dimen/sp_30"
                app:layout_constraintBottom_toBottomOf="@id/iv_icon"
                app:layout_constraintTop_toBottomOf="@id/tv_distance"
                app:layout_constraintStart_toStartOf="@id/tv_distance" />

        </com.fy.navi.ui.view.SkinConstraintLayout>
    </com.fy.navi.ui.view.SkinLinearLayout>

</layout>
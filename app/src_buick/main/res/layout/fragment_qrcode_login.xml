<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.account.AccountQRCodeLoginViewModel" />
    </data>

    <com.fy.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1224"
        android:layout_height="@dimen/dp_714"
        android:clickable="true"
        android:background="@drawable/bg_setting_fragment">

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/phone_qrcode_login_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_138"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <com.fy.navi.ui.view.SkinImageView
                clickCommand="@{ViewModel.mAccountBack}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_26"
                android:src="@drawable/img_setting_back" />

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/account_qrcode_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_414"
                android:text="@string/setting_others_account"
                android:textSize="@dimen/sp_38"
                android:textColor="@color/setting_bg_tab_text_select" />
        </com.fy.navi.ui.view.SkinLinearLayout>


        <com.fy.navi.ui.view.SkinLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_qrcode_login_title">

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_80"
                android:gravity="center"
                android:orientation="vertical">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/account_qrcode_content_img"
                    android:layout_width="@dimen/dp_234"
                    android:layout_height="@dimen/dp_234"
                    android:background="@drawable/bg_we_chat"
                    android:padding="@dimen/dp_13"
                    tools:visibility="gone"
                    android:visibility="@{ViewModel.mQRCodeVisible ? View.VISIBLE : View.GONE}" />

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="@dimen/dp_260"
                    android:layout_height="@dimen/dp_260"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="@{ViewModel.mQRCodeLoadingVisible ? View.VISIBLE : View.GONE}">

                    <com.fy.navi.ui.view.SkinImageView
                        android:id="@+id/account_qrcode_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_setting_qr_loading"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_qr_code_loading"
                        android:layout_marginTop="@dimen/dp_24"
                        android:textColor="@color/setting_bg_tab_text_unselect"
                        android:textSize="@dimen/sp_30"/>

                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinLinearLayout
                    android:layout_width="@dimen/dp_260"
                    android:layout_height="@dimen/dp_260"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:visibility="gone"
                    android:visibility="@{ViewModel.mQRCodeLoadFailedVisible ? View.VISIBLE : View.GONE}">

                    <com.fy.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_qr_code_load_failed"
                        android:textSize="@dimen/sp_30"
                        android:textColor="@color/setting_bg_tab_text_unselect"/>

                    <com.fy.navi.ui.view.SkinButton
                        clickCommand="@{ViewModel.mRetry}"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_76"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="@string/setting_qr_code_load_retry"
                        android:textSize="@dimen/sp_30"
                        android:textColor="@color/setting_white"
                        android:background="@drawable/bg_setting_preference_select"/>
                </com.fy.navi.ui.view.SkinLinearLayout>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/account_qrcode_content_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:gravity="center"
                    android:text="@string/account_QRCode_login_tip"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/setting_bg_tab_text_unselect" />
            </com.fy.navi.ui.view.SkinLinearLayout>

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="@dimen/dp_634"
                android:layout_height="@dimen/dp_473"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_119"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/account_qrcode_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.fy.navi.ui.view.SkinTabLayout
                    android:id="@+id/account_qrcode_tab"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@color/setting_line"
                    app:tabInlineLabel="true"
                    app:tabIndicatorColor="@color/setting_switch_selected"/>

            </com.fy.navi.ui.view.SkinLinearLayout>
        </com.fy.navi.ui.view.SkinLinearLayout>
    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>

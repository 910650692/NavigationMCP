<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.mapdata.manager.ManagerMapDataViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        android:layout_width="@dimen/dp_1110"
        android:layout_height="@dimen/dp_1078"
        android:padding="@dimen/dp_34"
        android:background="@drawable/bg_shadow_navi_ndlc_8155"
        android:clickable="true"
        android:orientation="vertical">

        <!--offline map title-->
        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/rl_offline_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_34"
            android:layout_marginStart="@dimen/dp_22">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/iv_offline_map_back"
                clickCommand="@{ViewModel.mBackMapDataView}"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:src="@drawable/img_setting_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinLinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <!--正在下载-->
                <com.sgm.navi.ui.view.SkinLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.sgm.navi.ui.view.SkinLinearLayout
                        android:id="@+id/all_map_data_tab"
                        clickCommand="@{ViewModel.mDownloadingDataClickView}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rl_offline_top">

                        <com.sgm.navi.ui.view.SkinTextView
                            android:id="@+id/tv_offline_all_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/offline_manager_map_downloading"
                            android:textColor="@color/setting_bg_delete"
                            android:textSize="@dimen/sp_29" />

                        <com.sgm.navi.ui.view.SkinView
                            android:id="@+id/offline_all_data_line"
                            android:layout_width="@dimen/dp_66"
                            android:layout_height="@dimen/dp_4"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@color/account_blue_text" />

                    </com.sgm.navi.ui.view.SkinLinearLayout>

                    <com.sgm.navi.ui.view.SkinTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:text="@{String.valueOf(ViewModel.mAllDownloadingDataSize)}"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dp_27"
                        android:visibility="@{ViewModel.mAllDownloadingDataSize > 0 ? View.VISIBLE : View.GONE}"
                        android:textColor="@color/setting_white"
                        android:textSize="@dimen/sp_22"
                        android:padding="@dimen/dp_5"
                        android:background="@drawable/bg_end_point" />

                </com.sgm.navi.ui.view.SkinLinearLayout>

                <!--已下载-->
                <com.sgm.navi.ui.view.SkinLinearLayout
                    android:id="@+id/manage_data_tab"
                    clickCommand="@{ViewModel.mDownloadedClickView}"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/all_map_data_tab"
                    app:layout_constraintTop_toBottomOf="@+id/rl_offline_top">

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/tv_offline_download_administration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/offline_city_downloaded"
                        android:textColor="@color/setting_bg_delete"
                        android:textSize="@dimen/sp_29" />

                    <com.sgm.navi.ui.view.SkinView
                        android:id="@+id/download_administration_line"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/account_blue_text"
                        android:visibility="invisible" />

                </com.sgm.navi.ui.view.SkinLinearLayout>

            </com.sgm.navi.ui.view.SkinLinearLayout>

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_36"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:layout_marginEnd="@dimen/dp_34"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                <!--下载中界面-->
                <com.sgm.navi.ui.view.SkinConstraintLayout
                    android:id="@+id/administration_downloading_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{ViewModel.mDownloadingDataVisibility ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/download_status">

                    <com.sgm.navi.ui.view.SkinLinearLayout
                        android:id="@+id/download_status"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_77"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="@{ViewModel.mDownloadingNoDataVisibility ? View.GONE : View.VISIBLE}"
                        android:background="@drawable/bg_setting_checkbox"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.sgm.navi.ui.view.SkinLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <com.sgm.navi.ui.view.SkinLinearLayout
                                android:id="@+id/all_data_download"
                                clickCommand="@{ViewModel.mAllDataDownload}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <com.sgm.navi.ui.view.SkinImageView
                                    android:id="@+id/img_download_all_start"
                                    android:layout_width="@dimen/dp_36"
                                    android:layout_height="@dimen/dp_36"
                                    android:src="@drawable/img_download_all_start"/>

                                <com.sgm.navi.ui.view.SkinTextView
                                    android:id="@+id/tv_download_all_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_26"
                                    android:layout_marginStart="@dimen/dp_7"
                                    android:textColor="@color/setting_bg_voice_text"
                                    android:text="@string/offline_all_city_start_download" />

                            </com.sgm.navi.ui.view.SkinLinearLayout>

                            <com.sgm.navi.ui.view.SkinLinearLayout
                                android:id="@+id/all_data_suspend"
                                clickCommand="@{ViewModel.mAllDataSuspend}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <com.sgm.navi.ui.view.SkinImageView
                                    android:id="@+id/img_download_all_suspend"
                                    android:layout_width="@dimen/dp_36"
                                    android:layout_height="@dimen/dp_36"
                                    android:src="@drawable/img_download_all_suspend"/>

                                <com.sgm.navi.ui.view.SkinTextView
                                    android:id="@+id/tv_download_all_suspend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_26"
                                    android:layout_marginStart="@dimen/dp_7"
                                    android:textColor="@color/setting_bg_voice_text"
                                    android:text="@string/offline_all_city_suspend_download" />

                            </com.sgm.navi.ui.view.SkinLinearLayout>
                        </com.sgm.navi.ui.view.SkinLinearLayout>
                    </com.sgm.navi.ui.view.SkinLinearLayout>

                    <!--下载中列表-->
                    <com.sgm.navi.ui.view.SkinRecyclerView
                        android:id="@+id/rv_downloading_offline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/download_status" />

                </com.sgm.navi.ui.view.SkinConstraintLayout>

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offline_manager_map_no_downloading"
                    android:visibility="@{ViewModel.mDownloadingNoDataVisibility ? View.VISIBLE : View.GONE}"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/setting_bg_delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!--已下载界面-->
                <com.sgm.navi.ui.view.SkinConstraintLayout
                    android:id="@+id/administration_downloaded_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{ViewModel.mDownloadedDataVisibility ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/all_map_data_tab">

                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/downloaded_offline_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_71"
                        android:gravity="center"
                        android:text="@{ViewModel.mAllDownloadedDataSize}"
                        android:textColor="@color/setting_bg_tab_text_unselect"
                        android:textSize="@dimen/sp_30"
                        android:visibility="@{ViewModel.mDownloadedNoDataVisibility ? View.GONE : View.VISIBLE}"
                        android:background="@drawable/shape_bg_map_data"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/font_size"/>

                    <!--下载完成列表-->
                    <com.sgm.navi.ui.view.SkinRecyclerView
                        android:id="@+id/rv_downloaded_offline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/downloaded_offline_layout" />

                </com.sgm.navi.ui.view.SkinConstraintLayout>

                <com.sgm.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offline_manager_map_no_downloaded"
                    android:visibility="@{ViewModel.mDownloadedNoDataVisibility ? View.VISIBLE : View.GONE}"
                    android:textSize="@dimen/sp_34"
                    android:textColor="@color/setting_bg_delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </com.sgm.navi.ui.view.SkinConstraintLayout>

        </com.sgm.navi.ui.view.SkinNestedScrollView>


    </com.sgm.navi.ui.view.SkinLinearLayout>

</layout>

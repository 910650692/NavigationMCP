<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.sgm.navi.hmi.search.around.AroundSearchViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinLinearLayout
        clickCommand="@{viewModel.rootClick}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <com.sgm.navi.scene.ui.search.SceneQuickSearchView
            android:id="@+id/scene_quick_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.sgm.navi.ui.view.SkinLinearLayout>
</layout>
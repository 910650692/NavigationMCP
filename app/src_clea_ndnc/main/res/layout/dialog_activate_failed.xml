<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_1300"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_70"
                android:focusable="false"
                android:text="@string/activation_failed"
                android:textColor="@color/search_color_ffffff"
                android:textSize="@dimen/sp_42"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/dialog_content"
                android:layout_width="@dimen/dp_1100"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/activation_hint"
                android:textColor="@color/color_black_80"
                android:textSize="@dimen/sp_36"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_title" />
            <com.sgm.navi.ui.view.SkinLinearLayout
                android:id="@+id/dialog_location"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_54"
                android:layout_marginTop="@dimen/dp_20"
                android:focusable="false"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_content"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginStart="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_48"
                android:background="#4D818199"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_location" />
            <com.sgm.navi.ui.view.SkinLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_128"
                android:focusable="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/line">
                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/dialog_confirm"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:focusedByDefault="true"
                        android:gravity="center"
                        android:text="@string/activation_failed_retry"
                        android:textColor="#3377FF"
                        android:textSize="@dimen/sp_36" />
                    <View
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="match_parent"
                        android:background="#4D818199"
                        android:focusable="false" />
                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/dialog_cancel"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/activation_finish"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_36" />
            </com.sgm.navi.ui.view.SkinLinearLayout>
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>

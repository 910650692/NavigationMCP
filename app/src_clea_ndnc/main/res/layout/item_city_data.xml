<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.sgm.navi.service.define.mapdata.CityDataInfo" />

        <variable
            name="holder"
            type="com.sgm.navi.hmi.mapdata.adapter.CityMapDataAdapter.Holder" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.CustomSwipeMenuLayout
            android:id="@+id/swipe_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_119"
                android:clickable="true"
                android:background="@drawable/shape_bg_map_data">

                <com.sgm.navi.ui.view.SkinView
                    android:id="@+id/item_city_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/black"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/item_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="@dimen/dp_26"
                    android:gravity="center"
                    android:text="@string/offline_item_city_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_29"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.sgm.navi.ui.view.SkinTextView
                    android:id="@+id/item_city_new_label"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:text="@string/offline_item_city_tip"
                    android:textColor="@color/setting_white"
                    android:textSize="@dimen/sp_26"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/bg_end_point"
                    android:layout_marginStart="@dimen/dp_15"
                    app:layout_constraintLeft_toRightOf="@+id/item_city_name"
                    app:layout_constraintTop_toTopOf="@+id/item_city_name"
                    app:layout_constraintBottom_toBottomOf="@+id/item_city_name"/>

                <!--下载/全部开始/全部暂停等按钮下载状态 -->
                <com.sgm.navi.ui.view.SkinLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_119"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--数据包大小-->
                    <com.sgm.navi.ui.view.SkinTextView
                        android:id="@+id/item_city_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:gravity="center"
                        android:text="@string/offline_item_city_data"
                        android:textColor="@color/setting_bg_tab_text_unselect"
                        android:textSize="@dimen/sp_22"
                        tools:text="9999MB" />

                    <!--按钮下载状态-->
                    <com.sgm.navi.scene.ui.setting.DownloadBtnView
                        android:id="@+id/item_download_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!--全部开始-->
                    <com.sgm.navi.ui.view.SkinButton
                        android:id="@+id/item_all_download"
                        android:layout_width="@dimen/dp_164"
                        android:layout_height="@dimen/dp_65"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/bg_download_button_selector"
                        android:text="@string/offline_all_city_start_download"
                        android:textColor="@drawable/color_download_button_selector"
                        android:textSize="@dimen/sp_26"/>

                    <!--全部暂停-->
                    <com.sgm.navi.ui.view.SkinButton
                        android:id="@+id/item_all_pause"
                        android:layout_width="@dimen/dp_164"
                        android:layout_height="@dimen/dp_65"
                        android:layout_marginStart="@dimen/dp_24"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/bg_download_button_selector"
                        android:text="@string/offline_all_city_suspend_download"
                        android:textColor="@drawable/color_download_button_selector"
                        android:textSize="@dimen/sp_26"/>

                </com.sgm.navi.ui.view.SkinLinearLayout>

                <ProgressBar
                    android:id="@+id/download_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_style"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </com.sgm.navi.ui.view.SkinConstraintLayout>

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/item_driving_delete"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_119"
                android:drawableTop="@drawable/img_delete_58"
                android:background="@drawable/bg_driving_item_delete"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/driving_item_delete"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/color_80_ffffff"
                android:gravity="center" />

        </com.sgm.navi.ui.view.CustomSwipeMenuLayout>

    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>

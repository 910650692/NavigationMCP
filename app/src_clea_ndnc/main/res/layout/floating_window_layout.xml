<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/float_window"
            android:layout_width="@dimen/dp_592"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_36"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:id="@+id/card_navi_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_95"
            android:minWidth="@dimen/dp_366"
            android:layout_marginStart="28dp"
            android:background="@drawable/bg_search_main_tab"
            app:layout_constraintStart_toEndOf="@id/float_window"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/sk_iv_basic_home"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:src="@drawable/img_basic_ic_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/dp_42"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/sk_iv_basic_bus"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:src="@drawable/img_basic_ic_bus"
                    app:layout_constraintBottom_toBottomOf="@id/sk_iv_basic_home"
                    app:layout_constraintEnd_toStartOf="@id/sk_iv_basic_search"
                    app:layout_constraintStart_toEndOf="@id/sk_iv_basic_home"
                    app:layout_constraintTop_toTopOf="@id/sk_iv_basic_home" />

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/sk_iv_basic_search"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:src="@drawable/img_basic_ic_search"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/dp_42"
                    app:layout_constraintTop_toTopOf="@id/sk_iv_basic_home" />
            </com.sgm.navi.ui.view.SkinConstraintLayout>

        </com.sgm.navi.ui.view.SkinConstraintLayout>

        <com.sgm.navi.ui.view.SkinCardView
            android:id="@+id/card_tbt_view"
            android:layout_width="@dimen/dp_545"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/common_bg_shadow_color"
            android:visibility="gone"
            app:cardBackgroundColor="@color/common_bg_color"
            app:cardCornerRadius="@dimen/dp_18"
            app:cardElevation="@dimen/dp_30"
            app:layout_constraintStart_toEndOf="@id/float_window"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <com.sgm.navi.ui.view.SkinConstraintLayout
                android:id="@+id/scl_top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sgm.navi.scene.ui.navi.SceneNaviTbtView
                    android:id="@+id/scene_navi_tbt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_navi_tbt_top"
                    android:minHeight="@dimen/dp_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.sgm.navi.ui.view.SkinImageView
                    android:id="@+id/iv_cross"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_334"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/scene_navi_tbt"
                    app:layout_constraintTop_toBottomOf="@id/scene_navi_tbt"
                    tools:visibility="visible" />

                <com.sgm.navi.scene.ui.navi.SceneNaviEtaView
                    android:id="@+id/scene_navi_eta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_constraintStart_toStartOf="@id/scene_navi_tbt"
                    app:layout_constraintTop_toBottomOf="@id/iv_cross" />

                <com.sgm.navi.scene.ui.navi.SceneNaviTmcView
                    android:id="@+id/scene_navi_tmc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_30"
                    app:layout_constraintStart_toStartOf="@id/scene_navi_tbt"
                    app:layout_constraintTop_toBottomOf="@id/scene_navi_eta" />

                <com.sgm.navi.scene.ui.navi.SceneNaviLanesView
                    android:id="@+id/scene_navi_lanes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/scene_navi_tbt"
                    app:layout_constraintTop_toBottomOf="@id/scene_navi_tmc" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    app:layout_constraintStart_toStartOf="@id/scene_navi_tbt"
                    app:layout_constraintTop_toBottomOf="@id/scene_navi_lanes" />

            </com.sgm.navi.ui.view.SkinConstraintLayout>
        </com.sgm.navi.ui.view.SkinCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
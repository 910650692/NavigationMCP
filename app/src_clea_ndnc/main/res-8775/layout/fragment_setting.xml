<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.setting.SettingViewModel" />
    </data>

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="@dimen/dp_1110"
        android:layout_height="@dimen/navi_setting_fragment_height"
        android:background="@drawable/bg_shadow_navi_ndlc_8155"
        android:padding="@dimen/dp_29">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinImageView
                android:id="@+id/setting_close"
                clickCommand="@{ViewModel.mFinishSetting}"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:layout_marginStart="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_32"
                android:src="@drawable/img_setting_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.sgm.navi.scene.ui.setting.SceneVerticalTabLayout
                android:id="@+id/tabLayout"
                style="@style/CustomTabLayout"
                android:layout_width="@dimen/dp_190"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@null"
                app:layout_constraintStart_toStartOf="@+id/setting_close"
                app:layout_constraintTop_toBottomOf="@+id/setting_close"
                app:tabBackground="@drawable/bg_setting_tab"
                app:tabGravity="fill"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabRippleColor="@null" />

            <com.sgm.navi.ui.view.SkinView
                android:id="@+id/skinView5"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_86"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@color/setting_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tabLayout"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginBottom="@dimen/dp_34"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/skinView5"
                app:layout_constraintTop_toTopOf="parent" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>

</layout>

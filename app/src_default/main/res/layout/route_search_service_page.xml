<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ViewModel"
            type="com.fy.navi.hmi.route.RouteViewModel" />
    </data>
    <com.fy.navi.ui.view.SkinConstraintLayout
        android:id="@+id/route_service_list_info_root"
        android:layout_width="@dimen/dp_698"
        android:layout_height="match_parent"
        android:clickable="true"
        >

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/route_service_list_info_info_bg_title"
            android:layout_width="@dimen/dp_698"
            android:layout_height="@dimen/dp_170"
            android:paddingVertical="@dimen/dp_29"
            android:paddingHorizontal="@dimen/dp_29"
            android:background="@drawable/bg_shadow_navi_buick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/route_service_list_info_info_img_close"
                clickCommand="@{ViewModel.getCloseServicelistClick()}"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@drawable/img_route_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.fy.navi.ui.view.SkinTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:text="@string/route_search_keyword_service"
                android:textColor="@color/text_route_defult"
                android:textSize="@dimen/sp_35"
                app:layout_constraintStart_toEndOf="@id/route_service_list_info_info_img_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/route_service_list_info_refresh"
                clickCommand="@{ViewModel.getServiceRefreshClick()}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_68"
                android:layout_marginEnd="@dimen/dp_30"
                android:gravity="center"
                android:text="@string/route_service_list_refresh"
                android:textColor="@color/text_route_defult"
                android:visibility="gone"
                android:textSize="@dimen/sp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.fy.navi.ui.view.SkinImageView
                android:id="@+id/route_service_list_info_tv_avoid_road"
                clickCommand="@{ViewModel.getServiceRefreshClick()}"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/img_route_service_refresh"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/route_service_list_info_refresh"
                app:layout_constraintEnd_toStartOf="@+id/route_service_list_info_refresh"
                app:layout_constraintTop_toTopOf="@id/route_service_list_info_refresh" />

        </com.fy.navi.ui.view.SkinConstraintLayout>

        <com.fy.navi.scene.ui.route.SceneRouteSearchRefreshListView
            android:id="@+id/route_detail_info_scene_route_search_refresh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_640"
            android:layout_marginTop="@dimen/dp_132"
            android:paddingHorizontal="@dimen/dp_29"
            android:paddingVertical="@dimen/dp_29"
            android:background="@drawable/bg_shadow_navi_buick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.fy.navi.ui.view.SkinTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_36"
            android:text="@string/route_search_online_warn"
            android:visibility="@{ViewModel.getSearchNoDateVisibility() ? View.VISIBLE: View.GONE}"
            android:gravity="center"
            android:textColor="@color/text_route_defult"
            app:layout_constraintStart_toStartOf="@+id/route_detail_info_scene_route_search_refresh"
            app:layout_constraintEnd_toEndOf="@+id/route_detail_info_scene_route_search_refresh"
            app:layout_constraintTop_toTopOf="@+id/route_detail_info_scene_route_search_refresh"
            app:layout_constraintBottom_toBottomOf="@+id/route_detail_info_scene_route_search_refresh"/>

    </com.fy.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sgm.navi.ui.view.SkinConstraintLayout
            android:layout_width="@dimen/dp_820"
            android:layout_height="@dimen/dp_500"
            android:background="@drawable/shape_bg_dialog"
            android:paddingHorizontal="@dimen/dp_100"
            android:paddingVertical="@dimen/dp_80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/stv_continue_title"
                android:layout_width="@dimen/dp_1200"
                android:layout_height="@dimen/dp_68"
                android:gravity="center_vertical"
                android:text="继续导航至"
                android:textColor="@color/permission_quest_dialog_title"
                android:textSize="@dimen/sp_52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sgm.navi.ui.view.SkinTextView
                android:id="@+id/stv_continue_content"
                android:layout_width="@dimen/dp_1400"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_32"
                android:text="北京天安门"
                android:textColor="@color/permission_quest_dialog_content"
                android:textSize="@dimen/sp_46"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stv_continue_title" />

            <com.sgm.navi.ui.view.SkinButton
                android:id="@+id/dialog_commit"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_shape_commit_button"
                android:text="继续导航"
                android:textColor="@color/dialog_commit_text_white"
                android:textSize="@dimen/sp_42"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sgm.navi.ui.view.SkinButton
                android:id="@+id/dialog_cancel"
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_40"
                android:background="@drawable/bg_shape_cancel_button"
                android:text="@string/permission_quest_dialog_cancel"
                android:textColor="@color/dialog_cancel_text_b3181818"
                android:textSize="@dimen/sp_42"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dialog_commit" />
        </com.sgm.navi.ui.view.SkinConstraintLayout>
    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
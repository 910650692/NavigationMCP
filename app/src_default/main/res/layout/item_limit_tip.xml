<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="ViewModel"
            type="com.sgm.navi.hmi.map.MapViewModel" />
    </data>
    <com.sgm.navi.ui.view.SkinConstraintLayout
        android:id="@+id/cl_limit_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minWidth="@dimen/dp_132"
        android:minHeight="@dimen/dp_82"
        android:visibility="@{ViewModel.limitDriverVisibility ? View.VISIBLE : View.GONE}"
        clickCommand="@{ViewModel.openLimitDetailFragment}"
        android:background="@drawable/bg_button_map_limit"
        android:paddingHorizontal="@dimen/dp_14"
        android:paddingVertical="@dimen/dp_14">

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_limit_first"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_54"
            android:background="@drawable/bg_item_limit_number"
            android:gravity="center"
            android:textColor="@color/main_map_limit_text_color"
            android:textSize="@dimen/sp_26"
            android:visibility="@{ViewModel.limitEndNumVisibility ? View.VISIBLE : View.GONE}"
            android:text="@{ViewModel.limitEndNumOne}"
            tools:text="2"
            tools:visibility="visible"/>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_limit_second"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_54"
            android:visibility="@{ViewModel.limitEndNumVisibility ? View.VISIBLE : View.GONE}"
            android:background="@drawable/bg_item_limit_number"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintStart_toEndOf="@id/tv_limit_first"
            app:layout_constraintEnd_toStartOf="@id/tv_desc"
            android:textColor="@color/main_map_limit_text_color"
            android:textSize="@dimen/sp_26"
            android:text="@{ViewModel.limitEndNumTwo}"
            tools:text="6"
            tools:visibility="visible"/>

        <com.sgm.navi.ui.view.SkinTextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_map_limit_text_color"
            android:textSize="@dimen/sp_26"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{ViewModel.limitDriverTitle}"
            tools:text="限行"/>

    </com.sgm.navi.ui.view.SkinConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
    </data>
    <com.sgm.navi.ui.view.SkinFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
        <!--导航tab切换-->
        <com.sgm.navi.ui.view.SkinRadioGroup
            android:id="@+id/driving_record_tab_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/bg_setting_checkbox"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginEnd="@dimen/dp_38"
            android:padding="@dimen/dp_7">
            <com.sgm.navi.ui.view.SkinRadioButton
                android:id="@+id/driving_record_tab_1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/rb_bg_selector"
                android:gravity="center"
                android:checked="true"
                android:text="@string/driving_record_tab_1"
                android:textColor="@color/setting_white"
                android:textSize="@dimen/sp_29" />
            <com.sgm.navi.ui.view.SkinRadioButton
                android:id="@+id/driving_record_tab_2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/rb_bg_selector"
                android:gravity="center"
                android:text="@string/driving_record_tab_2"
                android:textColor="@color/setting_bg_tab_text_unselect"
                android:textSize="@dimen/sp_29" />
        </com.sgm.navi.ui.view.SkinRadioGroup>

    </com.sgm.navi.ui.view.SkinFrameLayout>
</layout>

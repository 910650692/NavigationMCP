<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.fy.navi.service.define.search.PoiInfoEntity" />
        <variable
            name="holder"
            type="com.fy.navi.hmi.favorite.adapter.FavoriteDataAdapter.Holder" />
        <variable
            name="layoutPosition"
            type="String" />
    </data>

    <com.fy.navi.ui.view.CustomSwipeMenuLayout
        android:id="@+id/swipe_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_128"
        android:orientation="horizontal">

        <com.fy.navi.ui.view.SkinConstraintLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fy.navi.ui.view.SkinTextView
                android:id="@+id/item_favorite_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_26"
                android:text="@{layoutPosition}"
                android:layout_marginStart="@dimen/dp_34"
                android:textColor="@color/color_black_70"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/item_favorite_name"
                android:layout_width="@dimen/dp_600"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_30"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_favorite_img">

                <com.fy.navi.ui.view.SkinTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_500"
                    android:text="@{model.name}"
                    android:textSize="@dimen/sp_29"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    tools:text="@string/favorite_item_name"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/item_favorite_top_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="@string/favorite_item_top"
                    android:background="@drawable/bg_favorite_top"
                    android:textSize="@dimen/sp_26"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:textColor="@color/setting_switch_selected"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/item_favorite_name" />
            </com.fy.navi.ui.view.SkinLinearLayout>

            <com.fy.navi.ui.view.SkinLinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_29"
                app:layout_constraintStart_toEndOf="@+id/item_favorite_img"
                app:layout_constraintEnd_toStartOf="@id/item_favorite_navi"
                app:layout_constraintTop_toBottomOf="@+id/item_favorite_name">

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/item_favorite_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/color_black_70"
                    tools:text="198km"/>

                <com.fy.navi.ui.view.SkinView
                    android:id="@+id/item_favorite_line"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:background="@color/color_black_70" />

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/item_favorite_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.address}"
                    android:textSize="@dimen/sp_26"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_black_70"
                    app:layout_constraintStart_toEndOf="@+id/item_favorite_line"
                    app:layout_constraintTop_toBottomOf="@+id/item_favorite_name"
                    tools:text="@string/favorite_item_address"/>
            </com.fy.navi.ui.view.SkinLinearLayout>

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/item_favorite_navi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/dp_34"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <com.fy.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_49"
                    android:layout_height="@dimen/dp_49"
                    android:src="@drawable/img_favorite_navigation"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="@string/favorite_item_navi"
                    android:textColor="@color/color_black_70"
                    android:textSize="@dimen/sp_26" />

            </com.fy.navi.ui.view.SkinLinearLayout>

        </com.fy.navi.ui.view.SkinConstraintLayout>

        <com.fy.navi.ui.view.SkinLinearLayout
            android:id="@+id/ll_action_container"
            android:layout_width="@dimen/dp_290"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/item_favorite_top"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/setting_bg_gray"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.fy.navi.ui.view.SkinImageView
                    android:id="@+id/item_favorite_top_icon"
                    android:layout_width="@dimen/dp_49"
                    android:layout_height="@dimen/dp_49"
                    android:src="@drawable/img_favorite_top"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:id="@+id/item_favorite_top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_item_top"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/color_black_70"
                    android:textSize="@dimen/sp_26" />

            </com.fy.navi.ui.view.SkinLinearLayout>


            <com.fy.navi.ui.view.SkinLinearLayout
                android:id="@+id/item_favorite_delete"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/setting_delete_red"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.fy.navi.ui.view.SkinImageView
                    android:layout_width="@dimen/dp_49"
                    android:layout_height="@dimen/dp_49"
                    android:src="@drawable/img_favorite_delete"/>

                <com.fy.navi.ui.view.SkinTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_item_delete"
                    android:textColor="@color/color_black_70"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textSize="@dimen/sp_26" />

            </com.fy.navi.ui.view.SkinLinearLayout>
        </com.fy.navi.ui.view.SkinLinearLayout>
    </com.fy.navi.ui.view.CustomSwipeMenuLayout>
</layout>